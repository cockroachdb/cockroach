CREATE TABLE t (
	a JSONB NULL,
	b JSONB NULL,
	c INT8[] NULL,
	d INT8[] NULL,
	INVERTED INDEX idx (a),
	INVERTED INDEX idx3 (c),
	INVERTED INDEX idx2 (b),
	INVERTED INDEX idx4 (d),
	FAMILY "primary" (a, b, c, d, rowid)
);

INSERT INTO t (a, b, c, d) VALUES
	('{"a": "b"}', '{"c": "d"}', ARRAY[1], ARRAY[2]);
