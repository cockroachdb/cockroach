sql
CREATE DATABASE d;
CREATE TABLE d.t (
	a JSON,
	b JSON,
	INVERTED INDEX idx (a)
);

CREATE INVERTED INDEX idx2 ON d.t (b);

INSERT INTO d.t VALUES ('{"a": "b"}', '{"c": "d"}');
