sql
CREATE DATABASE d;
CREATE TABLE d.t (
	a JSON,
	b JSON,
	c INT[],
	d INT[],
	INVERTED INDEX idx (a),
	INVERTED INDEX idx3 (c)
);

CREATE INVERTED INDEX idx2 ON d.t (b);
CREATE INVERTED INDEX idx4 ON d.t (d);

INSERT INTO d.t VALUES ('{"a": "b"}', '{"c": "d"}', ARRAY[1], ARRAY[2]);
