CREATE TABLE t (
	a JSONB NULL,
	b JSONB NULL,
	INVERTED INDEX idx (a),
	INVERTED INDEX idx2 (b),
	FAMILY "primary" (a, b, rowid)
);

INSERT INTO t (a, b) VALUES
	('{"a": "b"}', '{"c": "d"}');
