CREATE TABLE public.t (
	a INT8 NOT NULL,
	b INT8 NULL AS (a + 1:::INT8) STORED,
	CONSTRAINT "primary" PRIMARY KEY (a ASC),
	FAMILY "primary" (a, b)
);

INSERT INTO public.t (a) VALUES
	(1);
