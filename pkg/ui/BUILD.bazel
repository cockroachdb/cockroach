load("@bazel_skylib//rules:common_settings.bzl", "bool_flag")
load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

exports_files([".npmrc.pnpm"])

go_library(
    name = "ui",
    srcs = ["ui.go"],
    importpath = "github.com/cockroachdb/cockroach/pkg/ui",
    visibility = ["//visibility:public"],
    deps = [
        "//pkg/base",
        "//pkg/build",
        "//pkg/server/serverpb",
        "//pkg/settings",
        "//pkg/util/httputil",
        "//pkg/util/log",
    ],
)

genrule(
    name = "gen-empty-index.html",
    outs = ["index.html"],
    cmd = """
    cat >$@ <<EOF
<!DOCTYPE html>
<title>CockroachDB</title>
Binary built without web UI.
<hr>
<em>%s</em>
EOF
""",
    visibility = ["//pkg/ui:__subpackages__"],
)

test_suite(
    name = "lint",
    tests = [
        "//pkg/cmd/mirror/npm:are_lockfiles_updated",
        "//pkg/ui/workspaces/cluster-ui:lint",
        "//pkg/ui/workspaces/db-console:lint",
        "//pkg/ui/workspaces/e2e-tests:lint",
    ],
)

go_test(
    name = "ui_test",
    srcs = ["ui_test.go"],
    args = ["-test.timeout=295s"],
    embed = [":ui"],
    deps = [
        "//pkg/base",
        "//pkg/util/leaktest",
        "//pkg/util/log",
        "@com_github_stretchr_testify//require",
    ],
)
