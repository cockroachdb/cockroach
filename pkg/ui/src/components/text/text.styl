@require '~src/components/core/index.styl'

.text
  letter-spacing $letter-spacing--compact

.text > *,
.text > *:hover,
.text > *:active
  color inherit
  text-decoration inherit

.text--heading-1
  @extend $text--heading-1

.text--heading-2
  @extend $text--heading-2

.text--heading-3
  @extend $text--heading-3

.text--body
  @extend $text--body

.text--body-strong
  @extend $text--body-strong

.text--disabled
  color $colors--disabled
