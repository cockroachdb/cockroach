@require "~styl/base/palette.styl"

.login-page
  display flex
  align-items center
  justify-content center
  height 100%
  width 100%
  position absolute
  background-color white

  .content
    border thin solid $table-border-color
    display flex

  &__info.section
    width 486px
    padding 24px

  &__form.section
    background-color $background-color
    width 486px

  .form-container
    margin-top 120px
    padding-left 50px
    padding-right 50px

  .form-internal
    margin-bottom 140px

  .heading
    text-transform none
    letter-spacing 1px
    margin-bottom 24px

  .aside
    margin-top 12px
    line-height 24px
    color $body-color
    width 350px
    font-size 14px

  .logo
    height 32px
    position relative
    margin-bottom 74px

  .input-text
    width 100%
    font-size 14px
    line-height 17px
    padding 12px 18px
    vertical-align middle
    border 1px solid $button-border-color
    border-radius 3px
    margin 12px 0
    color $body-color
    display block

    &::placeholder
      color lightgrey

    &--error
      border-color $alert-color

  .submit-button
    width 100%
    text-transform uppercase
    font-size 14px
    letter-spacing 2px
    line-height 17px
    padding 12px 24px
    vertical-align middle
    border 0px none
    border-radius 3px
    margin 24px 0
    color $background-color
    background-color $link-color
    cursor pointer
    display block

    &:disabled
      background-color #90b8ef

  &__error
    color $alert-color
    margin 12px 0

  .info-box
    margin-top 0px

.login-note-box
  &__sql-command
    border 1px solid lightgrey
    background $background-color
    padding 5px
    padding-left 9px
    border-radius 4px
    margin-top 10px

    // These colors match the SQL examples in our docs.
    // They don't match the colors in the table details or statement
    // details page, since those display SQL on a dark blue background.
    .sql-keyword
      color #a0247a

    .sql-string
      color #3c80e1

.login-docs-link
  display block
  margin-top 10px
  text-decoration none
  color $link-color

  &__icon
    display inline-block
    position relative
    top 3px

  &__text
    display inline-block
    line-height 30px
    margin-left 6px
