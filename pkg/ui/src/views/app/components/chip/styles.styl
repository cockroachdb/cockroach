@require "~styl/base/palette.styl"
  
.Chip
  padding 4px 17px
  color #5f6c87
  font-family SourceSansPro-Regular
  font-size 12px
  border-radius 20px
  min-height 25px
  min-width 85px
  text-align center
  display inline-block
  &--green
    background $green
  &--lightgreen
    background $lightgreen
  &--grey
    background $grey
  &--lightblue
    background $lightblue
  &--blue
    background $blue
  &--yellow
    background $yellow