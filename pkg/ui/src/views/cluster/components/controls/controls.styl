@require "~styl/base/palette.styl"

.controls-content
  display inline-block
  margin-right 9px
  .ant-btn-group
    display flex
  ._action, ._action > button
    margin-right 0px
    border-color #c8cbd4
    background-color transparent
    width 43px
    height 43px
    font-size 21px
    &:first-child
      margin-left 0px
    &:hover
      background-color #ededed
    .anticon
        color #b8bbbc
    &.active
      .anticon
        color #3a7ce1