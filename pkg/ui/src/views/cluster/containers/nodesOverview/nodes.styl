@require '~styl/base/palette.styl'

.embedded-table .sort-table
  border-left none
  border-right none

  .sort-table__cell:last-child
    border-right none

.bar-chart__label
  font-family Lato-Regular
  font-size 12px
  font-weight 300
  fill $body-color

.bar-chart__label.total
  fill #cfd2dc


// The following rule is for Chrome, the height attribute applied
// from JavaScript is for Firefox.
.bar-chart__bar.used
  height 5px
  fill $link-color

.node-status-icon
  display inline-block
  margin-right 6px
  font-size 6px
  line-height 14px
  vertical-align middle
  width 6px
  height 6px
  border-radius 3px

  &--dead
    background-color $alert-color
  &--suspect
    background-color $warning-color
  &--decommissioning
    background-color $warning-color
  &--healthy
    background-color $healthy-color
