.embedded-table .sort-table
  border-left none
  border-right none

  .sort-table__cell:last-child
    border-right none

.bar-chart__label
  font-family Lato-Regular
  font-size 12px
  font-weight 300
  fill #5f6c87

.bar-chart__label.total
  fill #cfd2dc


// The following rule is for Chrome, the height attribute applied
// from JavaScript is for Firefox.
.bar-chart__bar.used
  height 5px
