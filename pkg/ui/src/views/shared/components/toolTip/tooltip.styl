@require "~styl/base/palette.styl"
@require "~styl/base/layout-vars.styl"

.tooltip
  position absolute
  z-index $z-index-tooltip
  padding 35px
  box-shadow 2px 2px 0 $tooltip-shadow
  border-radius 4px
  opacity 0
  visibility hidden
  transition opacity .3s ease-in, visibility .5s ease-in
  background-color white
  top 20px
  left 95%
  right auto
  white-space normal

  dt
    margin-top 10px
    font-family Lato-Heavy

&.viz-tooltip
  width 250px

.viz-info-icon:hover + .tooltip, .tooltip:hover
  visibility visible
  opacity 1
  transition-duration 0s

.hover-tooltip
  position relative

  &__text
    visibility hidden
    z-index $z-index-tooltip
    position absolute
    top -10px
    left 100%
    width 400px
    padding 10px
    border-radius 5px
    border 1px solid rgba(0, 0, 0, .1)
    box-shadow 0 0 4px rgba(0, 0, 0, .2)
    background rgba(255, 255, 255, .98)
    font-family Lato-Regular
    text-align left
    color $body-color

  &--hovered &__text
    visibility visible

  a
    color $link-color

  dt
    font-weight bold

  dd
    padding-left 5px
