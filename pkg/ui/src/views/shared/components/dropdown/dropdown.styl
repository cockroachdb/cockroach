@require nib
@require "~styl/base/palette.styl"
@require "~src/components/core/index.styl"

$dropdown-hover-color = darken($background-color, 2.5%)

.Select-option
  padding 10px 25px
  &.is-selected
    color $link-color

.Select.is-focused
  &:not(.is-open)
    .Select-control
      box-shadow none
      border none

.Select-placeholder, .Select--single > .Select-control .Select-value
  line-height inherit
  height auto
  position relative
  white-space nowrap
  max-width 250px
  padding 0 0 0 3px

.Select-control
  line-height inherit
  height auto
  border-width 0
  background-color transparent !important
  width auto 
  &:hover
    box-shadow none

.Select-input
  line-height inherit
  height auto
  position absolute
  top 0

.Select-input > input
  padding 0

.Select-menu-outer
  width auto
  top calc(100% + 21px)
  border none
  box-shadow 0 2px 4px rgba(0, 0, 0, .2)
  max-height 200px
  font-family Lato-Regular
  font-size 14px
  text-transform none
  letter-spacing 0
  border-radius 4px
  padding 0 0

.Select-menu, .Select-menu-outer
  max-height 350px

.Select-value-label
  display block
  cursor pointer

// .Select-arrow
//   border-top-color $adminui-grey-1

.Select
  display block
  width 100%

.dropdown
  padding 7.5px 9px 7.5px 19px;
  vertical-align middle
  border 1px solid $grey-light
  border-radius 3px
  white-space nowrap
  padding-right 10px
  color $body-color
  cursor pointer
  position relative
  background #fff
  display flex
  align-items center

  .dropdown__title, .Select-value-label
    color $adminui-grey-1
    font-family SourceSansPro-SemiBold
    font-size 14px
    line-height 1.71
    letter-spacing 0.1px

  &:hover
    background-color $dropdown-hover-color
  
  .Select-arrow-zone
    color $adminui-blue-1-base
    .anticon
      transform rotate(180deg)
    .active
      color $grey
  
  &._range
    width 423px
    padding 7px 9px

  &__title
    vertical-align middle
    display inline-block
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none
    letter-spacing 2px
    line-height 17px
  
  &__range-title
    display flex
    justify-content center
    align-items center
    background $colors--neutral-3
    width 34px
    text-align center
    border-radius 3px
    color $colors--neutral-7
    font-size 12px
    line-height 24px
    letter-spacing 0.1px
    font-family Lato-Bold

  &__select
    display inline-block
    vertical-align middle
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none
    text-transform uppercase
    letter-spacing 2px
    line-height 17px

    &:hover
      background-color $dropdown-hover-color

  &__side-arrow
    font-family Lato-Bold
    display none
    color $adminui-grey-1
    cursor pointer
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select: none;
    user-select: none;

    &:first-child
      border-right 1px solid $button-border-color
      padding 12px 24px
      border-top-left-radius 4px
      border-bottom-left-radius 4px

    &:last-child
      border-left 1px solid $button-border-color
      padding 12px 24px
      border-top-right-radius 4px
      border-bottom-right-radius 4px

    &--disabled
      background-color $table-border-color
      cursor auto

      polyline
        stroke $button-border-color

  &--side-arrows
    padding 0

    &:hover
      background-color transparent

    .dropdown__side-arrow
      display inline

      &:hover
        background-color $dropdown-hover-color
.dropdown.full-size
  .Select-menu-outer, .Select-menu
    max-height 450px

.dropdown--side-arrows
  .Select
    padding 12px 24px
  .Select-arrow-zone
    display none
