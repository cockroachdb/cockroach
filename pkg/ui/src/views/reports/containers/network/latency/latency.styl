@require "~styl/base/palette.styl"

.latency-table
  width 100%
  table-layout fixed
  margin-top 17px
  border-radius 3px
  box-shadow: 0 0 1px 0 rgba(67, 90, 111, 0.41)
  background-color #ffffff
  thead
    border-bottom 2px solid #e7ecf3
  tbody
    .latency-table__cell
      &:not(:nth-child(1))
        border-right 1px solid #e7ecf3
        border-bottom 1px solid #e7ecf3
    .latency-table__cell--end
      &:not(:nth-child(1))
        border-right 2px solid #e7ecf3
   .latency-table__row
      &:last-child
        .latency-table__cell
          border-bottom none
  &__cell
    text-transform uppercase
    text-align center
    width 95px
    padding 9px 0
    a
      font-family SourceSansPro-SemiBold
      font-size 12px
      font-weight 600
      line-height 1.67
      letter-spacing 0.3px
      color $adminui-grey-2
      &:hover
        color #0788ff
        text-decoration underline
    &:first-child
      border-right 2px solid #e7ecf3
    .Chip
      text-transform lowercase

.latency-table__multiple
  .latency-table__cell--start
    border-left 2px solid #e7ecf3
  th
    font-family SourceSansPro-SemiBold
    font-size 12px
    font-weight 600
    line-height 1.67
    letter-spacing 0.3px
    color $adminui-grey-2
  thead
    .region-name
      border-left 2px solid #e7ecf3
      text-align center
      padding-top 30px
  tbody
    th
      width 115px
      border-bottom 2px solid #e7ecf3
      padding-left 22px
    .latency-table__cell
      &--header
        &:nth-child(1), &:nth-child(2)
          width 45px
          border-bottom none
          border-right 2px solid #e7ecf3
    .latency-table__row--end
        border-bottom 2px solid #e7ecf3

.latency-table__empty
  padding: 30px;

.Chip--tooltip
  width 250px
  .ant-tooltip-inner
    background-color black
    padding 12px 18px
  span, p
    font-family Lato-Bold
    font-size 14px
    line-height 1.71
    letter-spacing 0.1px
    color $table-border-color
  .Chip--tooltip__nodes
    margin-bottom 25px
    display flex
    justify-content space-between
    &--item
      width 95px
      &:first-child
        margin-right 8px
      &:last-child
        margin-left 8px
    .ant-divider
      background #3b4a60
      margin 0
    &--item-title, &--item-description
      font-family Lato-Regular
      font-size 14px
      line-height 1.57
      letter-spacing 0.1px
      color $table-border-color
      margin 0
    &--item-title
      font-family Lato-Bold
      line-height 1.71
  .color
    &--green
      color $green
    &--lightgreen
      color $lightgreen
    &--grey
      color $grey
    &--lightblue
      color $lightblue
    &--blue
      color $blue
    &--yellow
      color $yellow