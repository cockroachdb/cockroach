@require nib
@require "~styl/base/palette.styl"

#matrix #sample-trace
  font-family Lato-Regular
  font-size 10px
  border-collapse collapse

#matrix #sample-trace .gap
  min-width 10px
  max-width 10px
  height 20px
  vertical-align bottom

#matrix #sample-trace .empty
  min-width 100px
  max-width 200px
  vertical-align bottom

#matrix #sample-trace .log
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
  border-left solid 1px #666
  vertical-align top
  min-width 100px
  max-width 400px
  height 20px

#matrix #sample-trace .time
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
  padding-left 10px
  padding-right 5px
  text-align right
  vertical-align top
  border-right solid 1px #666
  min-width 100px
  max-width 200px
  height 20px

#matrix #sample-trace .log.component-span
  font-weight bold
  color $link-color
  cursor pointer

#matrix #sample-trace .top
  border-top solid 1px #666

#matrix #sample-trace .bottom
  border-bottom solid 1px #666

#matrix #sample-trace .connector
  stroke #666
  stroke-width 1

#matrix #sample-trace .log.component-span.expanded .tags
  white-space pre
  overflow scroll
  max-width 600px
  max-height 300px
  font-weight normal
  text-decoration no
  border 1px solid #900
  padding-left 10px
  color #000

#matrix #sample-trace .log.component-span.expanded .tag
  color #900
  text-decoration no

