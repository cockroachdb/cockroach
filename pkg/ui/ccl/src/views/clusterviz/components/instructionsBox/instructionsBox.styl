.instructions-box
  color #595f6c
  font-size 12px
  line-height 17px
  position absolute
  right 26px
  top 26px
  background-color white
  border 1px solid #EDEDED
  border-radius 3px
  box-shadow 0 0 4px 0 rgba(0, 0, 0, 0.2)
  letter-spacing 0.5px

  &--collapsed
    cursor pointer
    padding 10px
    border-radius 25px
    line-height 6px
    font-size 13px

  &__docs_link
    color #3A7DE1

  &__collapse_icon
    cursor pointer
    text-decoration underline
    color #3A7DE1

.instructions-box-top-bar
  display flex
  justify-content space-between
  background-color #F6F6F6
  padding-top 10px
  padding-bottom 10px
  padding-left 15px
  padding-right 15px

  &__see_nodes
    color #333333
    font-family Lato-Bold

  &__setup_link
    text-decoration none
    color #2F80ED
    margin-left 10px

  &__x_out
    cursor pointer

.instructions-box-content
  margin-top 10px
  margin-bottom 15px
  margin-left 15px
  margin-right 15px
  max-width 395px
  color black

  &__instruction
    margin-bottom 5px

  &__step_num
    font-family Lato-Bold

  &__screenshot
    width 395px

  code
    background-color #F7F7F7
    border 1px solid #DADADA
    border-radius 2px
    padding 1px
