.need-license
  margin-left 70px
  margin-right 70px
  margin-top 50px

.need-license-blurb
  margin-bottom 40px
  display flex
  justify-content space-between
  align-items flex-start

  &__header
    text-transform none
    letter-spacing normal

  &__text
    margin-top 20px
    width 470px

  &__trial-link
    font-size 16px
    color #3A7DE1
    text-decoration none
    border 1px solid #C8CBD4
    border-radius 5px
    padding-left 30px
    padding-right 30px
    padding-top 10px
    padding-bottom 10px

.need-license-steps
  display flex
  justify-content space-between

.license-step
  width 320px
  border 1px solid #E0E0E0
  border-radius 3px

  &__text
    margin 26px

  &__image
    width 318px
    height 200px
    overflow hidden
    background-color #E4EFFF

  &__stepnum
    font-weight bold
