@require '~src/components/core/index.styl'

$node-switcher-height = 38px

.fixed-panel
  flex-grow 1
  position relative
  height 100%
  &__panel-switcher
    flex none
    background-color $colors--white
    z-index  5
    padding $spacing-xx-small $spacing-smaller
    border 1px solid rgb(237, 237, 237)
    border-bottom none
    box-shadow 0 0 1px 0 rgba(67, 90, 111, 0.41)
    border-radius 3px
    height $node-switcher-height
  &__content
    width 100%
    height "calc( 100% - %s )" % $node-switcher-height
    overflow: auto
