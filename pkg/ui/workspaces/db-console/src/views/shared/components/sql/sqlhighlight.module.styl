@require "~styl/base/palette.styl"
@require "~src/components/core/index.styl"

.box-highlight
  font-family $font-family--monospace
  padding 20px
  width 100%
  margin-bottom 10px
  height 282px;
  overflow-y: auto;
  white-space pre-wrap
  background-color $colors--neutral-10
  .table-target
    color $popover-border-color
    &:hover
      text-decoration underline

.sql-highlight:global(.hljs)
  color $colors--neutral-2
  overflow-x auto
  font-family SFMono-Semibold
  font-size 14px
  line-height: 1.57;
  white-space pre-wrap
  word-wrap break-word
  :global(.hljs-label)
    padding-left 8px
  :global(.hljs-keyword)
    color $colors--functional-purple-1

  :global(.hljs-string)
  :global(.hljs-built_in)
    color $colors--functional-orange-3

:global(.crdb-ant-tooltip):global(.hljs)
  :global(.crdb-ant-tooltip-content)
    width 535px
  :global(.crdb-ant-tooltip-inner), .sql-highlight:global(.hljs)
    background-color $colors--neutral-8
  :global(.crdb-ant-tooltip-inner)
    padding 8px
  .sql-highlight:global(.hljs)
    padding 0
    margin 0

.highlight-divider
  width 100%
  height 1px
  border-bottom 1px dashed $colors--neutral-6
  margin 15px 0
