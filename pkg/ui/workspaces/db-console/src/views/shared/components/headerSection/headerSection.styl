@require '~src/components/core/index.styl'

$icon-size = 9px

.header-section
  margin-top $spacing-medium-small
  display flex
  flex-direction column

  &__back-link
    display flex
    flex-direction row

  &__back-icon
    height $icon-size
    width  $icon-size
    margin-right $spacing-x-small

  &__back-link
    @extends $text--body
    margin-bottom $spacing-small
    & *
      color $colors--primary-text
