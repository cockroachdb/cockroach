@require "~styl/base/palette.styl"
@require "~src/components/core/index.styl"

.alert-box
  clearfix()
  display flex
  width 100%
  float left
  margin 0 0 10px
  padding 20px
  border 1px solid $headings-color
  border-radius 5px
  font-family $font-family--base

  &__icon
    flex 0

  &__content
    flex 1
    margin-left 20px

  &__dismiss
    flex 0

  &__title
    font-weight bold
    padding-right 25px

  &__link
    text-decoration none
    color inherit
    cursor pointer

  &--notification
    color $body-color
    border-color $notification-info-border-color
    background-color $notification-info-fill-color

  &--information
    color $body-color
    border-color $notification-info-border-color
    background-color $notification-info-fill-color
    path
      fill $colors--primary-blue-3

  &--warning
    color $body-color
    border-color $notification-warning-border-color
    background-color $notification-warning-fill-color

  &--critical
    color $body-color
    border-color $notification-alert-border-color
    background-color $notification-alert-fill-color
