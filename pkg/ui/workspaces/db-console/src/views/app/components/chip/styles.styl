@require "~styl/base/palette.styl"
@require '~src/components/core/index'

.Chip
  padding 4px 17px
  color $colors--neutral-6
  font-family SourceSansPro-Regular
  font-size 12px
  border-radius 20px
  min-height 25px
  min-width 85px
  text-align center
  display inline-block
  line-height 1.67
  letter-spacing 0.3px
  &--green
    background $chip-green
  &--lightgreen
    background $chip-lightgreen
  &--grey
    background $chip-grey
  &--lightblue
    background $chip-lightblue
  &--blue
    background $chip-blue
  &--yellow
    background $chip-yellow
  &--red
    background $chip-red
  &--white
    background $colors--neutral-0
    border-color $colors--neutral-4
    border-style solid
    border-width 1px
