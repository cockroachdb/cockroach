@require "~styl/base/palette.styl"
@require '~src/components/core/index'

.latency-table
  width 100%
  table-layout fixed
  margin-top 17px
  border-radius 3px
  box-shadow: 0 0 1px 0 rgba(67, 90, 111, 0.41)
  background-color $colors--white
  thead
    border-bottom 2px solid $colors--neutral-2
  tbody
    .latency-table__cell
      &:not(:nth-child(1))
        border-right 1px solid $colors--neutral-2
        border-bottom 1px solid $colors--neutral-2
    .latency-table__cell--end
      &:not(:nth-child(1))
        border-right 2px solid $colors--neutral-2
   .latency-table__row
      &:last-child
        .latency-table__cell
          border-bottom none
  &__cell
    text-transform uppercase
    text-align center
    width 95px
    padding 9px 0
    a, div
      font-family SourceSansPro-SemiBold
      font-size 12px
      font-weight 600
      line-height 1.67
      letter-spacing 0.3px
      color $adminui-grey-2
    a:hover
      color $colors--primary-blue-3
      text-decoration underline
    &:first-child
      border-right 2px solid $colors--neutral-2
    .Chip
      text-transform lowercase

.latency-table__multiple
  .latency-table__cell--start
    border-left 2px solid $colors--neutral-2
  th
    font-family SourceSansPro-SemiBold
    font-size $font-size--small
    font-weight $font-weight--bold
    line-height 1.67
    letter-spacing 0.3px
    color $colors--neutral-6
  thead
    .region-name
      border-left 2px solid $colors--neutral-2
      text-align center
      padding-top 30px
  tbody
    th
      width 115px
      border-bottom 2px solid $colors--neutral-2
      padding-left 22px
    .latency-table__cell
      &--header
        &:nth-child(1), &:nth-child(2)
          width 45px
          border-bottom none
          border-right 2px solid $colors--neutral-2
    .latency-table__row--end
        border-bottom 2px solid $colors--neutral-2

.latency-table__empty
  padding: 30px;

.Chip--tooltip
  font-family $font-family--base
  font-size 12px
  color white
  background-color black
  position: absolute
  bottom: 100%
  left: 50%
  transform: translateX(-50%)
  margin-bottom: 8px
  padding: 8px
  border-radius: 4px
  box-shadow: 0 2px 8px rgba(0,0,0,0.15)
  z-index: 1000
  min-width: 384px
  span, p
    font-family $font-family--base
    font-size 14px
    line-height 1.71
    letter-spacing 0.1px
    color $table-border-color
  .Chip--tooltip__latency
     margin-bottom 4px
  .Chip--tooltip__nodes
    display flex
    justify-content space-between
    &--item
      width 45%
      &:first-child
        margin-right 8px
      &:last-child
        margin-left 8px
    &--item-title, &--item-description
      font-family $font-family--base
      font-size 14px
      line-height 1.57
      letter-spacing 0.1px
      color $table-border-color
      margin 0
    &--item-title
      line-height 1.71
    &--header
      border-bottom solid #3b4a60 1px
  .color
    &--green, &--lightgreen
      color $colors--primary-green-2
    &--grey
      color $colors--neutral-2
    &--blue, &--lightblue
      color $colors--primary-blue-2
    &--yellow
      color $colors--functional-yellow-3
    &--red
      color $colors--functional-red-3

.Chip--tooltip-arrow
  position: absolute
  bottom: -8px
  left: 50%
  transform: translateX(-50%)
  width: 0
  height: 0
  border-left: 8px solid transparent
  border-right: 8px solid transparent
  border-top: 8px solid black
