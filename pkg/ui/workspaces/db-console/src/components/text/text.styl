@require '~src/components/core/index.styl'

.text
  letter-spacing $letter-spacing--compact

.text--heading-1
  @extend $text--heading-1

.text--heading-2
  @extend $text--heading-2

.text--heading-3
  @extend $text--heading-3

.text--heading-5
  @extend $text--heading-5

.text--body
  @extend $text--body

.text--body-strong
  @extend $text--body-strong

.text--code
  @extend $text--code

.text--disabled
  color $colors--disabled

.text--no-wrap
  text-overflow ellipsis
  white-space nowrap
  overflow hidden
