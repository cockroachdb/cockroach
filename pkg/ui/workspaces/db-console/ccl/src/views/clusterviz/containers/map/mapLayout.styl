@require "~styl/base/palette.styl"
@require "~src/components/core/index.styl"

$node-switcher-height = 48px

.geopath
  fill white
  stroke $table-border-color
  stroke-width .5px

.cluster-visualization-layout
  width 100%
  height 100%
  display flex
  flex-direction column
  overflow hidden
  background-color white
  &--show-license
    height unset
  &__content
    display flex
    flex-direction row
    justify-content space-between
    background-color $colors--white
    height $node-switcher-height
    z-index 5
    padding $spacing-xx-small $spacing-smaller $spacing-xx-small $spacing-small
    border 1px solid rgb(237, 237, 237)
    border-bottom none
    box-shadow 0 0 1px 0 rgba(67, 90, 111, 0.41)
    border-radius 3px
  &__content-item
    align-self center
  &__content-item--show-license
    display none
