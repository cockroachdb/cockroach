$viz-bottom = 65px
$viz-sides = 62px

.visualization
  position relative
  background-color white
  color $dark-blue
  border-radius 5px
  border 1px solid rgba(0, 0, 0, .1)
  // prevents borders from doubling up
  margin-bottom 10px
  width 925px

  &__content
    padding 15px 10px
    height 200px

  &__header
    padding 15px 25px 0
    clearfix()

  &__title
    font-size 14px
    font-family lato
    float left
    font-weight bold
    color $light-blue

  &__subtitle
    color $light-gray
    margin-left 5px
    font-size 12px
    font-family lato
    float left


  &__info-icon
    float right
    color $secondary-gray-5

  .icon-warning
    color $secondary-gold

.linegraph
  height 100%

.visualization--faded
  .visualization .number
  .nv-group
  .nv-areaWrap
    opacity .2
