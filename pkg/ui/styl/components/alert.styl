.alert-box
  clearfix()
  display flex
  width calc(100% - 48px)
  float left
  margin 0 6px 10px
  padding 20px
  border 1px solid $dark-blue
  border-radius 5px
  font-family Lato-Regular
  
  &__icon
    flex 0

  &__content
    flex 1
    margin-left 20px

  &__dismiss
    flex 0

  &__title
    font-family Lato-Bold
    padding-right 25px

  &__link
    text-decoration none
    color inherit
    cursor pointer

  &--notification
    color $light-blue
    border-color rgba(81, 187, 253, .3)
    background-color rgba(81, 187, 253, .2)

  &--warning
    color $light-blue
    border-color rgba(242, 190, 44, .3)
    background-color rgba(242, 190, 44, .2)

  &--critical
    color $light-blue
    border-color rgba(241, 105, 105, .3)
    background-color rgba(241, 105, 105, .2)
