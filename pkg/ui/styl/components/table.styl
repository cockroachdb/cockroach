$stats-table-cell--border = 1px solid $secondary-gray-12

$stats-table-th--fg = $secondary-light-gray
$stats-table-td--fg = $table-gray

$stats-table-th--bg     = white
$stats-table-tr--bg     = white
$stats-table-tr--bg-alt = $secondary-gray-7

// ---- Data table ----
.sort-table
  font-family Lato-Regular
  border-collapse collapse
  border $stats-table-cell--border
  width 100%

  &__row
    &--body
      background-color $stats-table-tr--bg
      &:nth-child(odd)
        background-color $stats-table-tr--bg-alt

    &--header
      padding 20px
      background-color $stats-table-th--bg
      text-transform uppercase
      font-weight normal
      text-align left
      font-size 10px
      letter-spacing 1.5px
      white-space nowrap

      // Display the sort direction arrow in header cells.
      .sort-table__cell
        padding 18px 20px
        color $stats-table-th--fg
        font-size 12px
        font-weight 400
        letter-spacing 2px
        color $lighter-blue

        &--sortable:after
          display inline-block
          width 20px
          line-height 12px
          font-size 6px
          vertical-align middle
          text-align center
          content "▼"

        &--descending
          color $light-blue

        &--ascending
          color $light-blue
          &:after
            content "▲"


  &__cell
    vertical-align top
    padding 10px 20px
    color $stats-table-td--fg
    font-weight 300
    font-size 14px
    letter-spacing .33px
    white-space nowrap
    border-right $stats-table-cell--border

    a
      font-weight 400
      color $link-blue
      text-decoration none
      width 100%
      height 100%
