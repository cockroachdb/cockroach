.dropdown
  text-transform uppercase
  letter-spacing 2px
  line-height 17px
  padding 1rem 2rem
  vertical-align middle
  border 1px solid $gray-blue
  border-radius 4px
  display inline-flex
  white-space nowrap
  padding-right 10px
  color $light-blue

  &:hover
    background-color $hover-gray

  &__title
    vertical-align middle
    display inline-block

  &__select
    display inline-block
    vertical-align middle
    width 200px

    &:hover
      background-color $hover-gray

  &__side-arrow
    font-family Lato-Bold
    display none
    color $secondary-blue-3
    cursor pointer

    &:first-child
      border-right 1px solid $gray-blue
      padding 1rem 20px

    &:last-child
      border-left 1px solid $gray-blue
      padding 1rem 20px

    &[disabled]
      background-color $lighter-gray
      cursor auto

      polyline
        stroke $light-gray

  &--side-arrows
    padding 0

    &:hover
      background-color transparent

    .dropdown__side-arrow
      display inline

      &:hover
        background-color $hover-gray

