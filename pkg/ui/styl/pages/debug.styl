$debug-table
  margin 0 0 40px
  width 100%
  border-collapse collapse
  border-spacing 0

  &__row
    background-color $light-gray-2

    &--header
      font-weight 900
      color white
      border-style none

  &__cell
    padding 6px 12px
    height 20px
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
    max-width 200px
    border-width 1px 1px 0 0
    border-color rgba(0, 0, 0, .1)
    border-style solid

    &&--left-header
      font-weight 900
      color white
      background-color $glow-blue
      border 0
      text-align right

    &&--header
      border-style none

    &&&--warning
      color $alert-yellow-dark

    &--short
      width 1px

.failure-table
  @extend $debug-table

  &__row
    alternating-background $light-gray-2 $lighter-gray

    &&--header
      background-color $secondary-red-3

  &__cell
    white-space normal


.problems-table
  @extend $debug-table

  &__row
    background-color white

  &__cell
    white-space normal

.debugnodes-table
  @extend $debug-table
  font-size 12px

  &__row
    background-color white

  &__cell
    white-space normal
