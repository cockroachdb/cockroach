.query-plan
  display flex
  flex-direction column

.query-plan__editor
  flex 0 0 auto

  .CodeMirror
    height auto
    border-radius 5px
    border 1px solid rgba(0, 0, 0, .1)
    margin-bottom 10px

  .CodeMirror-gutters
    background white

.query-plan__graph
  flex 1 1 auto
  height 100%
  overflow hidden
  background white
  border-radius 5px
  border 1px solid rgba(0, 0, 0, .1)
  position relative

.query-plan__refresh
  position absolute
  top 10px
  right 10px
  margin-right 0

.query-plan__error
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  color $alert-color
