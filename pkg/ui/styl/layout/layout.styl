$subnav-background  = $background-color

.page
  position relative
  display flex
  flex-direction column
  height 100vh
  min-width 100%
  padding-left $nav-width
  padding-top 20px

  &:after
    content ""
    display table
    clear both

.page-config
  padding-top 12px
  padding-bottom 12px
  padding-left 24px
  z-index $z-index-page-config
  position relative

  &--fixed
    background-color $background-color
    border-bottom 1px solid $table-border-color

  &__list
    clearfix()

  &__item
    float left
    list-style none
    margin-right 24px

.l-columns
  display flex
  margin 0 -5px

.l-columns__left
  flex 3
  padding 0 5px

.l-columns__right
  flex 1
  padding 0 5px

.page.help-us
  height 100%
  background-color white

.section
  flex 0 0 auto
  padding 12px 24px
  max-width 1350px
  clearfix()

  &--heading
    padding-top 0
    padding-bottom 0

.parent-link a
  color $link-color
  font-size 14px
  font-family Lato-Regular
  font-weight bold
  text-transform uppercase
  text-decoration none
  letter-spacing 2px

#content
  position relative

.optin-text
  font-size 10px
  margin -17px 28px 20px
  line-height 1.8rem

.page.events
  .section
    padding 154px 0 0
  .event-table-container
    .table-header
      display none


.section
  .node-info, .store-info
    padding 0 0 20px

    h1
      padding-left 0

    .stats-table td
      border 0

  &.logs
    span
      margin 5px
    input:not([type=checkbox])
      width 100px
      height 20px
      margin 5px

  .num-ranges
    font-size 16px
    margin-bottom 2rem

.section-heading
  &__tooltip
    color $tooltip-color
    display inline-block
    font-family Lato-Medium
    font-size 14px
    font-weight normal
    letter-spacing 0
    text-transform none
    vertical-align middle

  &__tooltip-hover-area
    padding 6px

  &__info-icon
    width 13px
    height 13px
    border-radius 50%
    border 1px solid $tooltip-color
    font-size 11px
    color $tooltip-color
    line-height 11px
    text-align center

  .hover-tooltip--hovered &__info-icon
    border-color $body-color
    color $body-color

div.raft-filters
  label, b
    margin 5px

  label
    cursor pointer

    input[type="checkbox"]
      margin 5px

.table-stats
  margin-bottom 50px

.loading-image
  height 100%
  background-repeat no-repeat
  background-position center 40%
  padding 12px 24px

  &__spinner
    background-size 40px 40px
    min-height 40px

  &__spinner-left
    background-size 40px 40px
    min-height 40px
    width 400px
