go_library(
    name = "clusterstats",
    srcs = [
        "collector.go",
        "doc.go",
        "exporter.go",
        "helpers.go",
        "streamer.go",
    ],
    importpath = "github.com/cockroachdb/cockroach/pkg/cmd/roachtest/clusterstats",
    visibility = ["//visibility:public"],
    deps = [
        "//pkg/cmd/roachtest/cluster",
        "//pkg/cmd/roachtest/test",
        "//pkg/roachprod/logger",
        "//pkg/roachprod/prometheus",
        "//pkg/util/search",
        "//pkg/util/timeutil",
