    args = ["-test.timeout=295s"],
    embed = [":clusterstats"],
    deps = [
        "//pkg/roachprod/logger",
        "//pkg/roachprod/prometheus",
        "@com_github_golang_mock//gomock",
        "@com_github_montanaflynn_stats//:stats",
