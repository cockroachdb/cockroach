gomock(
    name = "clusterstats_mock",
    out = "mocks_generated_test.go",
    interfaces = ["Client"],
    library = "//pkg/roachprod/prometheus",
    package = "clusterstats",
    visibility = [
        ":__pkg__",
        "//pkg/gen:__pkg__",
    ],
