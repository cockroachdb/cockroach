go_library(
    name = "publish-artifacts_lib",
    srcs = ["main.go"],
    importpath = "github.com/cockroachdb/cockroach/pkg/cmd/publish-artifacts",
    visibility = ["//visibility:private"],
    deps = [
        "//pkg/release",
        "//pkg/util/version",
        "@com_github_aws_aws_sdk_go//aws",
