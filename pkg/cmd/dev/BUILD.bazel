    data = glob(["testdata/**"]),
    embed = [":dev_lib"],
    deps = [
        "//pkg/cmd/dev/io/exec",
        "//pkg/cmd/dev/io/os",
        "//pkg/cmd/dev/recording",
        "//pkg/testutils",
        "@com_github_cockroachdb_datadriven//:datadriven",
        "@com_github_stretchr_testify//require",
