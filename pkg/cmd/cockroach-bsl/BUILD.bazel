load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library", "go_test")

go_library(
    name = "cockroach-bsl_lib",
    srcs = ["main.go"],
    importpath = "github.com/cockroachdb/cockroach/pkg/cmd/cockroach-bsl",
    visibility = ["//visibility:private"],
    deps = [
        "//pkg/cli",
        "//pkg/ui/distbsl",
    ],
)

go_binary(
    name = "cockroach-bsl",
    embed = [":cockroach-bsl_lib"],
    visibility = ["//visibility:public"],
)

go_test(
    name = "cockroach-bsl_test",
    size = "medium",
    srcs = ["dep_test.go"],
    embed = [":cockroach-bsl_lib"],
    tags = ["broken_in_bazel"],
    deps = [
        "//pkg/testutils/buildutil",
        "//pkg/util/leaktest",
    ],
)
