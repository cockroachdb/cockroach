 lock: "a"
  res: req: 7, txn: 00000000-0000-0000-0000-000000000002, ts: 10.000000000,0, seq: 0
 lock: "b"
  holder: txn: 00000000-0000-0000-0000-000000000002, ts: 10.000000000,0, info: unrepl epoch: 0, seqs: [0]
   waiting readers:
    req: 8, txn: none
   distinguished req: 8
local: num=0

dequeue r=req7
----
