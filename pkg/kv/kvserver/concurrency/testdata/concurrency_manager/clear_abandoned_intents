# -------------------------------------------------------------
# A series of 3 puts find 1 abandoned intent each from same txn
# -------------------------------------------------------------

new-txn name=txn1 ts=10,1 epoch=0
----

new-txn name=txn2 ts=10,1 epoch=0
----

new-request name=req1 txn=txn1 ts=10,1
  put key=a value=v1
  put key=b value=v2
  put key=c value=v3
----

