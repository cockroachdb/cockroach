  b1
  │ └── [13 14 15 16]
  b2
  │ └── [17 18 19 20]
  b3
  │ └── [21 22 23 24]
c
  c1
    └── [25 26 27 28]
  c2
    └── [29 30 31 32]
  c3
    └── [33 34 35 36]

plot stat=replicas
