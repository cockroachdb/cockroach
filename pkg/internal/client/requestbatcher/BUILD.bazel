go_test(
    name = "requestbatcher_test",
    size = "small",
    srcs = ["batcher_test.go"],
    args = ["-test.timeout=55s"],
    embed = [":requestbatcher"],
    deps = [
        "//pkg/kv/kvpb",
        "//pkg/roachpb",
        "//pkg/testutils",
        "//pkg/util/leaktest",
        "//pkg/util/stop",
        "//pkg/util/timeutil",
        "@com_github_stretchr_testify//assert",
        "@com_github_stretchr_testify//require",
        "@org_golang_x_sync//errgroup",
    ],
