load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "requestbatcher",
    srcs = ["batcher.go"],
    importpath = "github.com/cockroachdb/cockroach/pkg/internal/client/requestbatcher",
    visibility = ["//pkg:__subpackages__"],
    deps = [
        "//pkg/kv",
        "//pkg/kv/kvpb",
        "//pkg/roachpb",
        "//pkg/util/log",
        "//pkg/util/stop",
        "//pkg/util/timeutil",
