# Test initial scans work correctly over pre-existing capability state.
# We also ensure that initial scans see the most recent state when they're
# started.

upsert ten=10 disable_admin_split=true
----
ok

upsert ten=11 disable_admin_split=false
----
ok

upsert ten=15 disable_admin_split=false
----
ok

delete ten=10
----
ok

upsert ten=15 disable_admin_split=true
----
ok

# Try reading capabilities before the Watcher is started.
get-capabilities ten=15
----
not-found

get-capabilities ten=10
----
not-found

start
----
ok

updates
----
Complete Update
update: ten=11 cap={can_admin_unsplit:false can_view_node_info:false can_view_tsdb_metrics:false disable_admin_scatter:false disable_admin_split:false}
update: ten=15 cap={can_admin_unsplit:false can_view_node_info:false can_view_tsdb_metrics:false disable_admin_scatter:false disable_admin_split:true}

flush-state
----
ten=11 cap={can_admin_unsplit:false can_view_node_info:false can_view_tsdb_metrics:false disable_admin_scatter:false disable_admin_split:false}
ten=15 cap={can_admin_unsplit:false can_view_node_info:false can_view_tsdb_metrics:false disable_admin_scatter:false disable_admin_split:true}

get-capabilities ten=10
----
not-found

get-capabilities ten=15
----
{can_admin_unsplit:false can_view_node_info:false can_view_tsdb_metrics:false disable_admin_scatter:false disable_admin_split:true}
