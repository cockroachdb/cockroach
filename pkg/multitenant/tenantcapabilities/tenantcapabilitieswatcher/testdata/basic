# Test basic tenant capability watcher functionality.

start
----
ok

updates
----

upsert ten=10 can_admin_split=true
----
ok

upsert ten=11 can_admin_split=false
----
ok

updates
----
Incremental Update
update: ten=10 cap={CanAdminSplit:true CanViewNodeInfo:false CanViewTSDBMetrics:false NotRateLimited:false}
update: ten=11 cap={CanAdminSplit:false CanViewNodeInfo:false CanViewTSDBMetrics:false NotRateLimited:false}

flush-state
----
ten=10 cap={CanAdminSplit:true CanViewNodeInfo:false CanViewTSDBMetrics:false NotRateLimited:false}
ten=11 cap={CanAdminSplit:false CanViewNodeInfo:false CanViewTSDBMetrics:false NotRateLimited:false}

upsert ten=11 can_admin_split=true
----
ok

updates
----
Incremental Update
update: ten=11 cap={CanAdminSplit:true CanViewNodeInfo:false CanViewTSDBMetrics:false NotRateLimited:false}

get-capabilities ten=11
----
{CanAdminSplit:true CanViewNodeInfo:false CanViewTSDBMetrics:false NotRateLimited:false}

delete ten=10
----
ok

updates
----
Incremental Update
delete: ten=10

get-capabilities ten=10
----
not-found

# No-op update.
delete ten=15
----
ok

updates
----

# Check that the internal state after a few incremental updates corresponds to
# what we'd expect.
flush-state
----
ten=11 cap={CanAdminSplit:true CanViewNodeInfo:false CanViewTSDBMetrics:false NotRateLimited:false}

upsert ten=15 can_admin_split=true
----
ok

updates
----
Incremental Update
update: ten=15 cap={CanAdminSplit:true CanViewNodeInfo:false CanViewTSDBMetrics:false NotRateLimited:false}

# Ensure only the last update is applied, even when there are multiple updates
# to a single key.
upsert ten=11 can_admin_split=false
----
ok

upsert ten=11 can_admin_split=true
----
ok

delete ten=11
----
ok

updates
----
Incremental Update
delete: ten=11

get-capabilities ten=11
----
not-found

flush-state
----
ten=15 cap={CanAdminSplit:true CanViewNodeInfo:false CanViewTSDBMetrics:false NotRateLimited:false}

# Same thing, but this time instead of deleting the key, leave it behind.
delete ten=15
----
ok

upsert ten=15 can_admin_split=true
----
ok

upsert ten=15 can_admin_split=false
----
ok

updates
----
Incremental Update
update: ten=15 cap={CanAdminSplit:false CanViewNodeInfo:false CanViewTSDBMetrics:false NotRateLimited:false}

flush-state
----
ten=15 cap={CanAdminSplit:false CanViewNodeInfo:false CanViewTSDBMetrics:false NotRateLimited:false}

get-capabilities ten=15
----
{CanAdminSplit:false CanViewNodeInfo:false CanViewTSDBMetrics:false NotRateLimited:false}
