load("@io_bazel_rules_go//go:def.bzl", "go_library")
load("//build/bazelutil/unused_checker:unused.bzl", "get_x_data")
load("//build:STRINGER.bzl", "stringer")

go_library(
    name = "tenantcapabilities",
    srcs = [
        "capabilities.go",
        "testingknobs.go",
        ":boolcapabilityid-stringer",  # keep
        ":spanconfigcapabilityid-stringer",  # keep
    ],
    importpath = "github.com/cockroachdb/cockroach/pkg/multitenant/tenantcapabilities",
    visibility = ["//visibility:public"],
    deps = [
        "//pkg/base",
        "//pkg/kv/kvpb",
        "//pkg/roachpb",
        "//pkg/util/stringerutil",
        "@com_github_cockroachdb_errors//:errors",
        "@com_github_cockroachdb_redact//:redact",
    ],
)

stringer(
    name = "boolcapabilityid-stringer",
    src = "capabilities.go",
    additional_args = ["--linecomment"],
    typ = "BoolCapabilityID",
)

stringer(
    name = "spanconfigcapabilityid-stringer",
    src = "capabilities.go",
    additional_args = ["--linecomment"],
    typ = "SpanConfigCapabilityID",
)

get_x_data(name = "get_x_data")
