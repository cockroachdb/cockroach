    args = ["-test.timeout=55s"],
    data = ["@go_sdk//:files"],
    embed = [":goroutineui"],
    deps = [
        "//pkg/build/bazel",
        "//pkg/util/leaktest",
        "@com_github_maruel_panicparse_v2//stack",
