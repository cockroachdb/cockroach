JDBC:   jdbc:postgresql://host/?user=user3
--defaults filled--
pq URL: postgresql://user3@host:26257/defaultdb
DSN:    database=defaultdb user=user3 host=host port=26257
JDBC:   jdbc:postgresql://host:26257/defaultdb?user=user3

