  "database": "testdb",
  "execute": true,
  "separate_txns": true,
  "statements": [
        {"sql": "CREATE database testdb"},
        {"sql": "CREATE table testdb.test (id int)"},
        {"sql": "INSERT INTO testdb.test VALUES (1)"}
  ]
}
