load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

genrule(
    name = "cockroachdb_metrics",
    srcs = [
        "//docs/generated/metrics:metrics.yaml",
        "cockroachdb_metrics_base.yaml",
        "@datadog_cockroachdb_metrics//:metrics.py",
    ],
    outs = ["cockroachdb_metrics.go"],
    cmd = "$(location //build/tools/gen-cockroachdb-metrics) $(location //docs/generated/metrics:metrics.yaml) $@ $(location @datadog_cockroachdb_metrics//:metrics.py) $(location cockroachdb_metrics_base.yaml)",
    tools = ["//build/tools/gen-cockroachdb-metrics"],
    visibility = ["//pkg/gen:__pkg__"],
)

go_library(
    name = "opentelemetry",
    srcs = [
        "cockroachdb_metrics.go",
        "opentelemetry.go",
    ],
    embedsrcs = [
        "files/opentelemetry-config.yaml.tmpl",
        "files/opentelemetry-env.conf.tmpl",
    ],
    importpath = "github.com/cockroachdb/cockroach/pkg/roachprod/agents/opentelemetry",
    visibility = ["//visibility:public"],
    deps = [
        "//pkg/roachprod/install",
        "//pkg/roachprod/logger",
        "//pkg/roachprod/vm",
        "@com_github_cockroachdb_errors//:errors",
    ],
)

go_test(
    name = "opentelemetry_test",
    srcs = ["opentelemetry_test.go"],
    embed = [":opentelemetry"],
    deps = ["@com_github_stretchr_testify//assert"],
)
