new-server name=s1 allow-implicit-access localities=us-east-1,us-west-1
----

exec-sql
CREATE DATABASE d PRIMARY REGION "us-east-1" REGION "us-west-1";
CREATE TABLE d.t (x INT);
INSERT INTO d.t VALUES (1), (2), (3);
----

query-sql
SELECT region FROM [SHOW REGIONS FROM DATABASE d];
----
us-east-1
us-west-1

exec-sql
BACKUP DATABASE d TO 'nodelocal://1/database_backup/';
----

exec-sql
BACKUP TO 'nodelocal://1/full_cluster_backup/';
----

# A new cluster with the same locality setting.
new-server name=s2 share-io-dir=s1 allow-implicit-access localities=us-east-1,us-west-1
----

exec-sql
RESTORE FROM 'nodelocal://0/full_cluster_backup/';
----

exec-sql
DROP DATABASE d;
----

exec-sql
RESTORE DATABASE d FROM 'nodelocal://0/database_backup/';
----


# A new cluster with different localities setting.
new-server name=s3 share-io-dir=s1 allow-implicit-access locality=us-west-1
----

exec-sql
RESTORE DATABASE d FROM 'nodelocal://0/database_backup/';
----
pq: detected mismatch regions between restore cluster and backup cluster, missing region us-east-1.

exec-sql
RESTORE FROM 'nodelocal://0/full_cluster_backup/';
----
pq: detected mismatch regions between restore cluster and backup cluster, missing region us-east-1.
