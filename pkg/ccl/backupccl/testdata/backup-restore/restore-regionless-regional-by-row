#
# # ensure that tables belonging to d can be modified & have the correct values
# exec-sql
# INSERT INTO d.t VALUES (4), (5);
# ----
#
# query-sql
# SELECT * FROM d.t;
# ----
# 1
# 2
# 3
# 4
# 5

subtest end
