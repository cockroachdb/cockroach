# LogicTest: default

statement ok
CREATE TABLE ok1 (
    a INT PRIMARY KEY, b INT,
    INDEX (b) PARTITION BY LIST (b) (
        PARTITION p1 VALUES IN (1)
    )
)

query TT
SHOW CREATE TABLE ok1
----
ok1  CREATE TABLE ok1 (
     a INT NOT NULL,
     b INT NULL,
     CONSTRAINT "primary" PRIMARY KEY (a ASC),
     INDEX ok1_b_idx (b ASC) PARTITION BY LIST (b) (
       PARTITION p1 VALUES IN ((1))
     ),
     FAMILY "primary" (a, b)
)

