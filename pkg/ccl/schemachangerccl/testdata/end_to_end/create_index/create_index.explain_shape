/* setup */
CREATE TABLE defaultdb.t1 (id INT PRIMARY KEY, name VARCHAR(256), money INT);

/* test */
EXPLAIN (DDL, SHAPE) CREATE INDEX id1
  ON defaultdb.t1 (id, name)
  STORING (money)
  PARTITION BY LIST (id) (PARTITION p1 VALUES IN (1));
