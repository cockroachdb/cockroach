/* setup */
CREATE TABLE defaultdb.t (id INT PRIMARY KEY, name VARCHAR(256), money INT);

/* test */
EXPLAIN (DDL, SHAPE) CREATE INDEX idx
  ON defaultdb.t (id, name)
  STORING (money)
  PARTITION BY LIST (id) (PARTITION p1 VALUES IN (1));
