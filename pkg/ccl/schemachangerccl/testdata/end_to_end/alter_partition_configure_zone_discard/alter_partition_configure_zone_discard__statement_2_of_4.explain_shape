/* setup */
CREATE TABLE t (
    id INT PRIMARY KEY,
    data STRING
) PARTITION BY LIST (id) (
    PARTITION p1 VALUES IN (1, 2, 3),
    PARTITION p2 VALUES IN (4, 5, 6)
);

/* test */
ALTER PARTITION p1 OF INDEX t@t_pkey CONFIGURE ZONE USING num_replicas = 11;
