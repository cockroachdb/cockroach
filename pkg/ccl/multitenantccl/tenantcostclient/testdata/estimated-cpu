tenant.sql_usage.write_requests: 3000
tenant.sql_usage.write_bytes: 1024000
tenant.sql_usage.sql_pods_cpu_seconds: 0.00
tenant.sql_usage.pgwire_egress_bytes: 0
tenant.sql_usage.external_io_ingress_bytes: 0
tenant.sql_usage.external_io_egress_bytes: 0
tenant.sql_usage.cross_region_network_ru: 0.00
tenant.sql_usage.estimated_kv_cpu_seconds: 1.45
tenant.sql_usage.estimated_cpu_seconds: 1.45

# Advance time to next period and do same writes, with the same write batch
# rate, but with a different estimated CPU rate. Now the estimated CPU
# consumption should be even less, since we've exceeded the rate at which fixed
# CPU overhead costs are fully amortized.

configure
write_batch_rate: 1000
estimated_cpu_rate: 12
throttle: -1
----

advance
10s
----
00:00:20.000

wait-for-event
token-bucket-response
----

write repeat=250 count=6 bytes=2048 networkCost=1
----

# Expect ~620 tokens to be consumed (rather than ~700 above).
token-bucket
