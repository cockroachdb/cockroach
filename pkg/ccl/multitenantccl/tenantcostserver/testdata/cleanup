create-tenant tenant=5
----


# First, establish a few instances.
token-bucket-request tenant=5
instance_id: 7
----

token-bucket-request tenant=5
instance_id: 3
----

token-bucket-request tenant=5
instance_id: 5
----

token-bucket-request tenant=5
instance_id: 9
----

inspect tenant=5
----
