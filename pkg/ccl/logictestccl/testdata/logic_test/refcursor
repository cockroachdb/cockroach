  BEGIN
    RETURN (1, 'foo'::REFCURSOR);
  END
$$ LANGUAGE PLpgSQL;

query T
SELECT f();
----
(1,foo)

subtest error

statement error pgcode 42804 pq: incompatible type for COLLATE: refcursor
