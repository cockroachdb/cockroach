can_view_node_info     false             default
can_view_tsdb_metrics  false             default

subtest end

subtest multiple_capability

statement ok
CREATE TENANT "multiple-capability-tenant"

statement ok
ALTER TENANT "multiple-capability-tenant" GRANT CAPABILITY can_admin_split, can_view_node_info

query TTT colnames
SELECT capability_name, capability_value, capability_source FROM [SHOW TENANT "multiple-capability-tenant" WITH CAPABILITIES]
----
capability_name        capability_value  capability_source
can_admin_split        true              user
can_view_node_info     true              user
can_view_tsdb_metrics  false             default

statement ok
ALTER TENANT "multiple-capability-tenant" REVOKE CAPABILITY can_admin_split, can_view_node_info

query TTT colnames
SELECT capability_name, capability_value, capability_source FROM [SHOW TENANT "multiple-capability-tenant" WITH CAPABILITIES]
----
capability_name        capability_value  capability_source
can_admin_split        true              default
can_view_node_info     false             default
can_view_tsdb_metrics  false             default

subtest end
