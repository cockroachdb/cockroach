# Regression tests for #59583.
statement ok
DROP TABLE t;
CREATE TABLE t (
  pk INT,
  pk2 INT NOT NULL,
  partition_by INT,
  x INT,
  y INT,
  INDEX (y)
) PARTITION BY LIST (partition_by) (
    PARTITION p1 VALUES IN (1)
);
INSERT INTO t VALUES (1,2,3,4,5),(11,12,13,14,15)

query IIIII rowsort
SELECT * FROM t@t_y_idx
----
1   2   3   4   5
11  12  13  14  15

statement ok
