  pk int PRIMARY KEY,
  partition_by int,
  a int,
  INDEX(a) PARTITION BY LIST (partition_by) (
    PARTITION one VALUES IN (1)
  )
) PARTITION ALL BY LIST (partition_by) (
  PARTITION one VALUES IN (1),
  PARTITION two VALUES IN (2)
)

