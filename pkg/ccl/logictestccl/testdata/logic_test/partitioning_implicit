# Tests for FK references against the implicit columns.
statement ok
CREATE TABLE fk_using_implicit_columns_against_t (
  pk INT NOT NULL PRIMARY KEY,
  ref_t_pk INT NOT NULL REFERENCES t,
  ref_t_c INT NOT NULL REFERENCES t(c)
)

