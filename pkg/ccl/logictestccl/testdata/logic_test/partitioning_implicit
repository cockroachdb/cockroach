CREATE TABLE public.t (
  pk INT8 NOT NULL,
  a INT8 NULL,
  b INT8 NULL,
  c INT8 NULL,
  d INT8 NULL,
  CONSTRAINT "primary" PRIMARY KEY (pk ASC),
  INDEX t_b_idx (b ASC) PARTITION BY LIST (a) (
    PARTITION b_implicit VALUES IN ((2))
  ),
