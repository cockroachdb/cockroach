# Regression tests for #59583.
statement ok
DROP TABLE t;
CREATE TABLE t (
  pk INT,
  pk2 INT NOT NULL,
  partition_by INT,
  x INT,
  y INT,
  INDEX (y)
) PARTITION BY LIST (partition_by) (
    PARTITION p1 VALUES IN (1)
);
