statement ok
SET experimental_enable_domiciling = true;

statement ok
CREATE DATABASE testdb PRIMARY REGION "ca-central-1" REGIONS "ap-southeast-2", "us-east-1"

statement ok
USE testdb

statement ok
CREATE TABLE test () LOCALITY REGIONAL BY TABLE IN PRIMARY REGION

query TT
