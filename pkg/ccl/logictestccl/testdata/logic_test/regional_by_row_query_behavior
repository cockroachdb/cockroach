# Locality optimized scan with an IN list
query T
SELECT
    *
FROM
    [
        EXPLAIN (OPT)
            SELECT
                count(*)
            FROM
                (
                    SELECT
                        *
                    FROM
                        regional_by_row_table_as4@a_idx
                    WHERE
                        a
                        IN (1, 2, 4, 5, 6, 8, 10, 11, 12, 14, 15, 16, 17, 18,
                            18, 19, 22, 23, 24, 25, 28, 30, 33, 34, 39, 40)
                    LIMIT
                        5
                )
    ]
OFFSET
    2
