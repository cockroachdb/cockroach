statement ok
DROP TABLE created_as_global;
CREATE TABLE created_as_global (
  pk int primary key,
  i int,
  b int,
  index(b),
  unique(i),
  cr crdb_internal_region,
  FAMILY (pk, i, b, cr)
) LOCALITY GLOBAL;
INSERT INTO created_as_global VALUES (0, 1, 2, 'us-east-1')

