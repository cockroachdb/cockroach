NOTICE: i: 1, x: 3
NOTICE: i: 2, x: 5
NOTICE: i: 3, x: <NULL>
NOTICE: i: 4, x: <NULL>

# Target list is larger than the number of fetched columns.
statement ok
CREATE OR REPLACE FUNCTION f() RETURNS INT AS $$
  DECLARE
    curs REFCURSOR := 'foo';
    x INT;
    y INT := 1000;
    i INT := 0;
  BEGIN
    OPEN curs FOR SELECT x FROM xy ORDER BY x;
    WHILE i < 5 LOOP
      FETCH curs INTO x, y;
      RAISE NOTICE 'i: %, x: %, y: %', i, x, y;
      i := i + 1;
    END LOOP;
    RETURN 0;
  END
$$ LANGUAGE PLpgSQL;

query T noticetrace
SELECT f();
----
