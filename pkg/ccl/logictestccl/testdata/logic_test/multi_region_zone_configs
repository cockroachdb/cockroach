 range_min_bytes = 134217728,
 range_max_bytes = 536870912,
 gc.ttlseconds = 90000,
 num_replicas = 10,
 num_voters = 3,
 constraints = '{+region=ap-southeast-2: 1, +region=ca-central-1: 1, +region=us-east-1: 1}',
 voter_constraints = '[+region=ca-central-1]',
