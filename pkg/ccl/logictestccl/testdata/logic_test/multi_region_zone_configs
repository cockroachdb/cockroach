----
TABLE regional_by_row  ALTER TABLE regional_by_row CONFIGURE ZONE USING
                       range_min_bytes = 1000,
                       range_max_bytes = 100000,
                       gc.ttlseconds = 10,
                       num_replicas = 5,
                       num_voters = 3,
                       constraints = '{+region=ap-southeast-2: 1, +region=ca-central-1: 1, +region=us-east-1: 1}',
