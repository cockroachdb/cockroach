# Ensure that when using INHERIT FROM PARENT, blocks still apply.
subtest inherit_from_parent

statement ok
CREATE TABLE tbl7 (
  pk INT PRIMARY KEY,
  i INT,
  INDEX(i)
) LOCALITY REGIONAL BY TABLE IN PRIMARY REGION

