----
a  false
b  false
c  false

statement ok
DELETE FROM t14601a

statement ok
CREATE UNIQUE INDEX i14601a ON t14601a (a) STORING (b)

statement ok
INSERT INTO t14601a VALUES
  ('a', FALSE),
  ('b', TRUE),
  ('c', FALSE)

statement ok
UPDATE t14601a SET b = NOT b WHERE a > 'a' AND a < 'c'

