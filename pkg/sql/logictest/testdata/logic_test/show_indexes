CREATE TABLE t1 (
  a INT,
  b INT,
  c INT,
  d INT,
  PRIMARY KEY (a, b),
  INDEX c_idx (c ASC),
  UNIQUE INDEX d_b_idx (d ASC, b ASC),
  INDEX expr_idx ((a+b), c)
)

