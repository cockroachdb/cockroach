CREATE TABLE t2 (
  a INT,
  b INT,
  c INT,
  d INT,
  e INT,
  PRIMARY KEY (c, b, a),
  INDEX a_e_c_idx (a ASC, e ASC, c ASC),
  UNIQUE INDEX b_d_idx (b ASC, d ASC),
  UNIQUE INDEX c_e_d_a_idx (c ASC, e ASC, d ASC, a ASC),
  INDEX d_idx (d ASC)
)

