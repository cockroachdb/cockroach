NULL  root  schemas    foo     ALL
NULL  root  schemas    public  USAGE
NULL  root  sequences  bar     ALL
NULL  root  sequences  foo     ALL
NULL  root  sequences  public  SELECT
NULL  root  tables     bar     ALL
NULL  root  tables     foo     ALL
NULL  root  tables     public  SELECT
NULL  root  types      bar     ALL
NULL  root  types      foo     ALL
NULL  root  types      public  USAGE

statement ok
ALTER DEFAULT PRIVILEGES REVOKE SELECT ON TABLES FROM foo, bar, public;
ALTER DEFAULT PRIVILEGES REVOKE ALL ON TYPES FROM foo, bar, public;
ALTER DEFAULT PRIVILEGES REVOKE ALL ON SCHEMAS FROM foo, bar, public;
ALTER DEFAULT PRIVILEGES REVOKE ALL ON SEQUENCES FROM foo, bar, public;

query TTTTT
SHOW DEFAULT PRIVILEGES
----
NULL  root  tables  bar  CREATE
NULL  root  tables  bar  DELETE
NULL  root  tables  bar  DROP
NULL  root  tables  bar  GRANT
NULL  root  tables  bar  INSERT
NULL  root  tables  bar  UPDATE
NULL  root  tables  bar  ZONECONFIG
NULL  root  tables  foo  CREATE
NULL  root  tables  foo  DELETE
NULL  root  tables  foo  DROP
NULL  root  tables  foo  GRANT
NULL  root  tables  foo  INSERT
NULL  root  tables  foo  UPDATE
NULL  root  tables  foo  ZONECONFIG

statement ok
ALTER DEFAULT PRIVILEGES REVOKE ALL ON TABLES FROM foo, bar, public;
ALTER DEFAULT PRIVILEGES GRANT GRANT, DROP, ZONECONFIG ON TABLES TO foo;

query TTTTT
SHOW DEFAULT PRIVILEGES
----
NULL  root  tables  foo  DROP
NULL  root  tables  foo  GRANT
NULL  root  tables  foo  ZONECONFIG

