CREATE TABLE t (
  k INT PRIMARY KEY,
  a INT UNIQUE,
  b STRING,
  INDEX (a, b)
)

query T
SHOW CREATE INDEXES FROM t
----
CREATE UNIQUE INDEX t_pkey ON public.t (k ASC)
CREATE UNIQUE INDEX t_a_key ON public.t (a ASC)
CREATE INDEX t_a_b_idx ON public.t (a ASC, b ASC)

query T
SHOW CREATE SECONDARY INDEXES FROM t
----
CREATE UNIQUE INDEX t_a_key ON public.t (a ASC)
CREATE INDEX t_a_b_idx ON public.t (a ASC, b ASC)

