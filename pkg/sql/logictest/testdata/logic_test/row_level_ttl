tbl                                            CREATE TABLE public.tbl (
                                               id INT8 NOT NULL,
                                               text STRING NULL,
                                               CONSTRAINT tbl_pkey PRIMARY KEY (id ASC),
                                               FAMILY fam_0_id_text (id, text)
) WITH (expire_after = '00:10:00':::INTERVAL)

statement ok
DROP TABLE tbl;
CREATE TABLE tbl (
  id INT PRIMARY KEY,
  text TEXT,
  FAMILY (id, text)
) WITH (expire_after = '10 minutes'::interval)

query TT
SHOW CREATE TABLE tbl
----
tbl                                            CREATE TABLE public.tbl (
                                               id INT8 NOT NULL,
                                               text STRING NULL,
                                               CONSTRAINT tbl_pkey PRIMARY KEY (id ASC),
                                               FAMILY fam_0_id_text (id, text)
) WITH (expire_after = '00:10:00':::INTERVAL)
