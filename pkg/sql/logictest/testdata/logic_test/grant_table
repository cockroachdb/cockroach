statement ok
CREATE TABLE t (id INT PRIMARY KEY)

query TTTT colnames
SHOW GRANTS ON t
----
Database  Table  User       Privileges
a         t      admin      ALL
a         t      readwrite  ALL
a         t      root       ALL

query TTTT colnames
SHOW GRANTS ON a.t
----
Database  Table  User       Privileges
a         t      admin      ALL
a         t      readwrite  ALL
a         t      root       ALL

statement ok
INSERT INTO system.public.users VALUES('test-user','');

statement ok
GRANT ALL ON t TO readwrite, "test-user"

query TTTT
SHOW GRANTS ON t
----
a  t  admin      ALL
a  t  readwrite  ALL
a  t  root       ALL
a  t  test-user  ALL

query TTTT
SHOW GRANTS ON t FOR readwrite, "test-user"
----
a  t  readwrite  ALL
a  t  test-user  ALL

statement ok
REVOKE INSERT,DELETE ON t FROM "test-user",readwrite

query TTTT
SHOW GRANTS ON t
----
a  t  admin      ALL
