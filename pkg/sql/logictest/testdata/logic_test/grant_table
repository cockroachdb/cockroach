# LogicTest: local

statement ok
CREATE DATABASE a

statement ok
CREATE USER readwrite

statement ok
GRANT ALL ON DATABASE a TO readwrite

query TTT colnames
SHOW GRANTS ON DATABASE a
----
database_name  grantee    privilege_type
a              admin      ALL
a              readwrite  ALL
a              root       ALL

# Show that by default GRANT is restricted to the current database
