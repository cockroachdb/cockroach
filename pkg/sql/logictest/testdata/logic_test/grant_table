# LogicTest: default

statement ok
CREATE DATABASE a

statement ok
CREATE USER readwrite

statement ok
GRANT ALL ON DATABASE a TO readwrite

query TTT colnames
SHOW GRANTS ON DATABASE a
----
Database  User       Privileges
a         admin      ALL
a         readwrite  ALL
a         root       ALL

