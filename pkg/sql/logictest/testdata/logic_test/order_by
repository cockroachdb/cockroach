·     table  abc@primary
·     spans  ALL

query T
SELECT message FROM [SHOW KV TRACE FOR SELECT a, b FROM abc ORDER BY b, a]
 WHERE message LIKE 'fetched:%' OR message LIKE 'output row%'
----
