statement ok
SET SEARCH_PATH = foo

query T
SHOW SEARCH_PATH
----
foo

statement ok
DISCARD ALL

query T
SHOW SEARCH_PATH
----
$user,public

query T
SET timezone = 'Europe/Amsterdam'; SHOW TIMEZONE
----
Europe/Amsterdam

query T
DISCARD ALL; SHOW TIMEZONE
----
UTC

query T
SET TIME ZONE 'Europe/Amsterdam'; SHOW TIME ZONE
----
Europe/Amsterdam

query T
DISCARD ALL; SHOW TIME ZONE
----
UTC

