# Verify we can read "protobuf" columns.
query I
SELECT length(descriptor) * (id - 1) FROM system.public.descriptor WHERE id = 1
----
0

# Verify format of system tables.
query TTBTT
SHOW COLUMNS FROM system.public.namespace
----
parentID  INT     false  NULL  {"primary"}
name      STRING  false  NULL  {"primary"}
id        INT     true   NULL  {}

query TTBTT
SHOW COLUMNS FROM system.public.descriptor
----
id         INT   false NULL {"primary"}
descriptor BYTES true  NULL {}

query TTBTT
