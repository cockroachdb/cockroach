   INDEX c_a_b_idx (a ASC, b ASC),
   UNIQUE INDEX unique_a (a ASC),
   FAMILY fam_0_a_rowid (a, rowid),
   FAMILY fam_1_b (b),
   CONSTRAINT check_b CHECK (b IN (1:::INT8, 2:::INT8, 3:::INT8)) NOT VALID,
   CONSTRAINT unique_a_b UNIQUE WITHOUT INDEX (a, b)
);
