----
CREATE TABLE public.my_spatial_table (
   k INT8 NOT NULL,
   geom1 GEOMETRY(POINT,4326) NULL,
   geom2 GEOMETRY(POINT,4326) NULL,
   CONSTRAINT my_spatial_table_pkey PRIMARY KEY (k ASC)
)
