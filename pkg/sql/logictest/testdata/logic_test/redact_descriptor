statement ok
CREATE VIEW redacted_descriptors AS
    SELECT
        id,
        jsonb_pretty(
            regexp_replace(
                regexp_replace(
                    regexp_replace(
                        (
                            crdb_internal.pb_to_json(
                                'desc',
                                crdb_internal.redact_descriptor(
                                    descriptor
                                )
                            )
                        )::STRING,
                        '"createdAtNanos": "[0-9]+"',
                        '"createdAtNanos": "0"',
                        'g'
                    ),
                    '"wallTime": "[0-9]+"',
                    '"wallTime": "0"'
                ),
               '"logical": [0-9]+[,]*',
               ''
            )::JSONB
        )
            AS descriptor
    FROM
        system.descriptor;

statement ok
CREATE TABLE foo (
    i INT8 DEFAULT 42 ON UPDATE 43 PRIMARY KEY,
    j INT8 AS (44) STORED,
    INDEX (j) WHERE (i = 41),
    FAMILY "primary" (i, j)
);

query T
