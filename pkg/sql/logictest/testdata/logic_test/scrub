# make sure there are no errors when values in the index are NULL

statement ok
CREATE TABLE test.xyz (
  x INT PRIMARY KEY,
  y INT,
  z INT,
  INDEX foo (z, y)
)

statement ok
INSERT INTO test.xyz (x, y) VALUES (8, 2), (9, 2);

query TTTTTTBT
EXPERIMENTAL SCRUB TABLE xyz WITH OPTIONS INDEX ALL
