# Test scrubbing sequences.

statement ok
CREATE DATABASE seq_db

statement ok
CREATE SEQUENCE seq_db.my_seq

statement ok
CREATE TABLE seq_db.my_tbl (id INT PRIMARY KEY DEFAULT nextval('seq_db.my_seq'))

statement ok
