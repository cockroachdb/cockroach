# Ensure that other changes in the same transaction
# as a DROP PRIMARY KEY get rolled back on failure.
statement ok
DROP TABLE IF EXISTS t1, t2;
CREATE TABLE t1 (x INT PRIMARY KEY, y INT NOT NULL);
CREATE TABLE t2 (x INT)

statement ok
BEGIN

statement ok
ALTER TABLE t1 DROP CONSTRAINT "primary"

statement ok
INSERT INTO t2 VALUES (1)

statement error pq: unimplemented: primary key of table t1 dropped without subsequent addition of new primary key
COMMIT

query I
SELECT * FROM t2
