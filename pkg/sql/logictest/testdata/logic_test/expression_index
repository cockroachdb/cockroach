CREATE TABLE anon (
  k INT PRIMARY KEY,
  a INT,
  b INT,
  c STRING,
  FAMILY (k, a, b, c)
);
CREATE INDEX ON anon ((a + b));
CREATE INDEX ON anon ((a + 10), b);
CREATE UNIQUE INDEX ON anon (lower(c), b);
CREATE INDEX ON anon ((a + 10), b, lower(c));
CREATE INDEX ON anon ((a + 10), (b + 100), lower(c));

