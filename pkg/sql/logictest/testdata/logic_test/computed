# Composite FK.

statement ok
CREATE TABLE xx (
  a INT,
  b INT,
  UNIQUE (a, b)
)

statement error computed column "y" cannot reference a foreign key
CREATE TABLE yy (
  x INT,
  y INT AS (3) STORED,
  FOREIGN KEY (x, y) REFERENCES xx (a, b)
)

statement error computed column "y" cannot reference a foreign key
CREATE TABLE yy (
  x INT,
  y INT AS (3) STORED,
  FOREIGN KEY (y, x) REFERENCES xx (a, b)
)

statement ok
DROP TABLE xx

