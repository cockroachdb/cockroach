   a INT8 NULL,
   b INT8 NULL AS (a * 2:::INT8) STORED,
   rowid INT8 NOT VISIBLE NOT NULL DEFAULT unique_rowid(),
   c INT8 NOT NULL AS (a + 4:::INT8) STORED,
   CONSTRAINT "primary" PRIMARY KEY (rowid ASC),
   FAMILY "primary" (a, b, rowid, c)
)

