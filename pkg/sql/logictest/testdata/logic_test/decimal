# Verify that NaNs are returned instead of invalid operation.
query R
SELECT 'inf'::decimal + '-inf'::decimal
----
NaN

# Regression test for #40327
query R
SELECT 1.0 / 'Infinity' + 2 FROM a;
----
2.

query R
SELECT 2.
----
2.
