statement ok
CREATE TYPE typ AS ENUM ('a', 'b')

statement ok
GRANT ALL ON TYPE typ TO meeter WITH GRANT OPTION

query TTTTTB colnames
SHOW GRANTS ON TYPE typ FOR alice
