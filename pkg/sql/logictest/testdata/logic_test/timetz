CREATE TABLE timetz_test (a TIMETZ PRIMARY KEY, b TIMETZ, c INT)

statement ok
INSERT INTO timetz_test VALUES
  ('11:00:00+0', '12:00:00+1', 1),
  ('12:00:00+1', '10:00:00-1', 2),
  ('13:00:00+2', '15:00:00-6', 3),
  ('14:00:00+3', '24:00:00-1459', 4),
  ('15:00:00+3', '15:00:00+3', 5)

# NOTE: lib/pq parses '24:00:00-1459' incorrectly, but the data
# structure underneath should still be correct.
query B
SELECT '24:00:00-1459' > '23:59:59-1459';
----
true

query TTI
SELECT * FROM timetz_test ORDER BY a, c ASC
----
0000-01-01 14:00:00 +0300 +0300  0000-01-01 00:00:00 -1459 -1459  4
0000-01-01 13:00:00 +0200 +0200  0000-01-01 15:00:00 -0600 -0600  3
0000-01-01 12:00:00 +0100 +0100  0000-01-01 10:00:00 -0100 -0100  2
0000-01-01 11:00:00 +0000 UTC    0000-01-01 12:00:00 +0100 +0100  1
0000-01-01 15:00:00 +0300 +0300  0000-01-01 15:00:00 +0300 +0300  5

query TTI
SELECT * FROM timetz_test ORDER BY a DESC, c ASC
----
0000-01-01 15:00:00 +0300 +0300  0000-01-01 15:00:00 +0300 +0300  5
0000-01-01 11:00:00 +0000 UTC    0000-01-01 12:00:00 +0100 +0100  1
0000-01-01 12:00:00 +0100 +0100  0000-01-01 10:00:00 -0100 -0100  2
0000-01-01 13:00:00 +0200 +0200  0000-01-01 15:00:00 -0600 -0600  3
0000-01-01 14:00:00 +0300 +0300  0000-01-01 00:00:00 -1459 -1459  4

query TTI
SELECT * FROM timetz_test WHERE a > b ORDER BY c
----
0000-01-01 11:00:00 +0000 UTC  0000-01-01 12:00:00 +0100 +0100  1

query TTI
SELECT * FROM timetz_test WHERE a = b ORDER BY c
----
0000-01-01 15:00:00 +0300 +0300  0000-01-01 15:00:00 +0300 +0300  5
