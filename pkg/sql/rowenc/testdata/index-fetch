exec
CREATE TABLE t (
  a INT PRIMARY KEY,
  b STRING,
  c DECIMAL,
  d BOOL,

  INDEX b1(b),
  INDEX b2(b) STORING (c, d),
  UNIQUE INDEX cb1(c, b DESC),
  UNIQUE INDEX cb2(c, b) STORING (d)
)
----

