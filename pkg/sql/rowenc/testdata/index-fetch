# Tests with multiple families.
exec
CREATE TABLE fam (
  a INT PRIMARY KEY,
  b STRING,
  c DECIMAL,
  d BOOL,
  e FLOAT,

  INDEX b(b),
  INDEX b2(b) STORING (d),
  INDEX c(c),
  INDEX c2(c) STORING (d),

  FAMILY f1(a, b),
  FAMILY f2(c),
  FAMILY f3(d, e)
)
----

# Primary index scan should have 3 keys per row. Also, we have default columns
# for families 0 and 1.
index-fetch
table: fam
index: fam_pkey
columns:
  - a
----
