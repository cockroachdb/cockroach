exec
CREATE TABLE inv (
   k INT PRIMARY KEY,
   b INT,
   j JSONB,
   INVERTED INDEX inv(j),
   INVERTED INDEX inv2(b, j)
)
----

# Test that the type for the inverted column key is Bytes (and not JSON).
