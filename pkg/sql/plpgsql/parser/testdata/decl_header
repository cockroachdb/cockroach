parse
DECLARE
  var1 CURSOR FOR SELECT * FROM t1 WHERE id = arg1;
BEGIN
END
----
DECLARE
var1 CURSOR FOR SELECT * FROM t1 WHERE id = arg1;
BEGIN
END
 -- normalized!
DECLARE
var1 CURSOR FOR SELECT (*) FROM t1 WHERE ((id) = (arg1));
BEGIN
END
 -- fully parenthesized
DECLARE
var1 CURSOR FOR SELECT * FROM t1 WHERE id = arg1;
BEGIN
END
 -- literals removed
DECLARE
var1 CURSOR FOR SELECT * FROM _ WHERE _ = _;
BEGIN
END
 -- identifiers removed

error
DECLARE
  var1 NO SCROLL CURSOR (arg1 INTEGER) FOR SELECT * FROM t1 WHERE id = arg1;
BEGIN
END
----
----
