# ---------------------------------------------------------
# Index With Delete Preserving Encoding
# ---------------------------------------------------------
statement
CREATE TABLE ti (
    a INT PRIMARY KEY,
    b INT,
    c INT,
    FAMILY (a, b, c),
    INDEX index_to_mutate (b, c)
);
----

mutate-index ti index_to_mutate DELETE_AND_WRITE_ONLY use_delete_preserving_encoding=true
----

statement
INSERT INTO ti VALUES (1, 2, 100)
----

kvtrace
DELETE FROM ti WHERE a = 1
----
Scan /Table/56/1/1/0
Put (delete) /Table/56/2/2/100/1/0
Del /Table/56/1/1/0

# ---------------------------------------------------------
# Partial Index With Delete Preserving Encoding
# ---------------------------------------------------------
statement
CREATE TABLE tpi (
    a INT PRIMARY KEY,
    b INT,
    c STRING,
    FAMILY (a, b, c),
    INDEX partial (c) WHERE a > b AND c IN ('foo', 'foobar')
);
----

mutate-index tpi partial DELETE_AND_WRITE_ONLY use_delete_preserving_encoding=true
----

statement
INSERT INTO tpi VALUES (1, 2, 'bar'), (2, 3, 'bar'), (3, 2, 'foo')
----

# Delete a row that doesn't match the partial index.
kvtrace
DELETE FROM tpi WHERE a = 1
----
Scan /Table/57/1/1/0
Del /Table/57/1/1/0

# Delete a row that matches the partial index.
kvtrace
DELETE FROM tpi WHERE a = 3
----
Scan /Table/57/1/3/0
Put (delete) /Table/57/2/"foo"/3/0
Del /Table/57/1/3/0

# ---------------------------------------------------------
# Expression Index With Delete Preserving Encoding
# ---------------------------------------------------------
statement
CREATE TABLE tei (
  k INT PRIMARY KEY,
  a INT,
  b INT,
  FAMILY (k, a, b),
  INDEX t_a_plus_b_idx ((a + b))
)
----

mutate-index tei t_a_plus_b_idx DELETE_AND_WRITE_ONLY use_delete_preserving_encoding=true
----

statement
INSERT INTO tei VALUES (1, 2, 100), (2, 3, 200), (3, 4, 300)
----

kvtrace
DELETE FROM tei WHERE a + b = 102
----
Scan /Table/58/{1-2}
Put (delete) /Table/58/2/102/1/0
Del /Table/58/1/1/0

# ---------------------------------------------------------
# Inverted Index With Delete Preserving Encoding
# ---------------------------------------------------------

statement
CREATE TABLE tii (
  a INT PRIMARY KEY,
  b INT[],
  FAMILY (a,b),
  INVERTED INDEX inverted (b)
)
----

mutate-index tii inverted DELETE_AND_WRITE_ONLY use_delete_preserving_encoding=true
----

statement
INSERT INTO tii VALUES (1, ARRAY[1, 2, 3, 2, 2, NULL, 3])
----

kvtrace
DELETE FROM tii WHERE a = 1
----
Scan /Table/59/1/1/0
Put (delete) /Table/59/2/NULL/1/0
Put (delete) /Table/59/2/1/1/0
Put (delete) /Table/59/2/2/1/0
Put (delete) /Table/59/2/3/1/0
Del /Table/59/1/1/0

# ---------------------------------------------------------
# Multicolumn Inverted Index With Delete Preserving Encoding
# ---------------------------------------------------------

statement
CREATE TABLE tmi (
  a INT PRIMARY KEY,
  b INT,
  c JSON,
  FAMILY (a, b, c),
  INVERTED INDEX inverted (b, c)
)
----

mutate-index tmi inverted DELETE_AND_WRITE_ONLY use_delete_preserving_encoding=true
----

statement
INSERT INTO tmi VALUES (1, 2, '{"a": "foo", "b": "bar"}'::json)
----

kvtrace
DELETE FROM tmi WHERE a = 1
----
Scan /Table/60/1/1/0
Put (delete) /Table/60/2/2/"a"/"foo"/1/0
Put (delete) /Table/60/2/2/"b"/"bar"/1/0
Del /Table/60/1/1/0
