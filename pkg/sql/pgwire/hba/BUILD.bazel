go_test(
    name = "hba_test",
    size = "small",
    srcs = ["hba_test.go"],
    args = ["-test.timeout=55s"],
    data = glob(["testdata/**"]),
    embed = [":hba"],
    deps = [
        "//pkg/settings/rulebasedscanner",
        "//pkg/testutils/datapathutils",
        "@com_github_cockroachdb_datadriven//:datadriven",
        "@com_github_kr_pretty//:pretty",
