subtest fields

file
a b c
----
hba.scannedInput{
    lines: {
        {
            {
                {Value:"a", Quoted:false},
            },
            {
                {Value:"b", Quoted:false},
            },
            {
                {Value:"c", Quoted:false},
            },
        },
    },
    linenos: {1},
}

file
a b c
d e
----
hba.scannedInput{
    lines: {
        {
            {
                {Value:"a", Quoted:false},
            },
            {
                {Value:"b", Quoted:false},
            },
            {
                {Value:"c", Quoted:false},
            },
        },
        {
            {
                {Value:"d", Quoted:false},
            },
            {
                {Value:"e", Quoted:false},
            },
        },
    },
    linenos: {1, 2},
}

file
