subtest token

token
----
hba.String{} false ""


token
  # Just a comment.
----
hba.String{} false ""

token
a b
----
hba.String{Value:"a", Quoted:false} false " b"

token
a,b
----
hba.String{Value:"a", Quoted:false} true "b"

token
a, b
----
hba.String{Value:"a", Quoted:false} true " b"


token
a  ,b
----
hba.String{Value:"a", Quoted:false} false "  ,b"

token
abc,def
----
hba.String{Value:"abc", Quoted:false} true "def"

token
"abc",def
----
hba.String{Value:"abc", Quoted:true} true "def"

token
"abc"def
----
hba.String{Value:"abc", Quoted:true} false "def"

token
# abc,def
----
hba.String{} false ""

token
# "abc
----
hba.String{} false ""


token
"abc
----
error: unterminated quoted string

subtest end

subtest field

field
----
[]
""

field
  # Just a comment.
----
[]
""

field
a b c
----
[a]
" b c"

field
  a  b # c d e
----
[a]
"  b # c d e"

field
   a,b    
----
[a b]
""

field
   a,b    c
----
[a b]
"    c"

field
   a,b,    c
----
[a b c]
""

field
   a,b    ,c
----
[a b]
"    ,c"

field
a,"b",c  d
----
[a "b" c]
"  d"

field
"a",b,c   d
----
["a" b c]
"   d"

field
"a","b","c"   d
----
["a" "b" "c"]
"   d"

field
"a, b ,c"   d
----
["a, b ,c"]
"   d"

field
all,abc
----
[all abc]
""

field
# all,abc
----
[]
""

field
all,"abc
----
error: unterminated quoted string

subtest end

