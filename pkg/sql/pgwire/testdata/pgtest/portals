{"Type":"BindComplete"}
{"Type":"NoData"}
{"Type":"CommandComplete","CommandTag":"INSERT 0 1"}
{"Type":"BindComplete"}
{"Type":"NoData"}
{"Type":"ErrorResponse","Code":"23514"}
