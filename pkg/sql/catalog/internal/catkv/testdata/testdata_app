# Get* queries involving IDs or names which don't exist after a
# ScanAll should bypass storage in the cached CatalogReader.
get_by_ids id=456
----
catalog: {}
trace:
- Get /Table/3/1/456/2/1
- Scan /Table/24/1/0/456
