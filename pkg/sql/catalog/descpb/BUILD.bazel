stringer(
    name = "gen-formatversion-stringer",
    src = "structured.go",
    typ = "FormatVersion",
)

disallowed_imports_test(
    "descpb",
    disallowed_list = ["//pkg/sql/parser"],
)

get_x_data(name = "get_x_data")
