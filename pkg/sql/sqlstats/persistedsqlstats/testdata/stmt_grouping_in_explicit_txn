  encode(transaction_fingerprint_id, 'hex') NOT IN (
    SELECT
      encode(fingerprint_id, 'hex')
    FROM
      crdb_internal.transaction_statistics
    WHERE
      jsonb_array_length(metadata -> 'stmtFingerprintIDs') >= 3
  )
ORDER BY
  (statistics -> 'statistics' ->> 'cnt')::INT
ASC
