exec-sql
SET application_name = 'consistent-test'
----

register-callback event=stmt-stats-flushed callbackCmd=set-time callbackCmdArgKey=time callbackCmdArgValue=2021-09-20T15:00:01Z
----

set-time time=2021-09-20T14:59:59Z
----
2021-09-20 14:59:59 +0000 UTC

exec-sql
SELECT 1
----

wait-for-stmt-stats app=consistent-test count=1
----


observe-sql
SELECT
  aggregated_ts,
  encode(fingerprint_id, 'hex'),
  metadata -> 'stmtFingerprintIDs'
FROM
  crdb_internal.transaction_statistics
WHERE
  app_name = 'consistent-test'
ORDER BY aggregated_ts
----
2021-09-20 14:00:00 +0000 UTC,c5999b4f9e57aca0,["6afa260318561b7f"]


observe-sql
SELECT
  aggregated_ts,
  encode(fingerprint_id, 'hex'),
  metadata ->> 'query'
FROM
  crdb_internal.statement_statistics
WHERE
  app_name = 'consistent-test'
ORDER BY aggregated_ts
----
2021-09-20 14:00:00 +0000 UTC,6afa260318561b7f,SELECT _

sql-stats-flush
----

observe-sql
SELECT
  aggregated_ts,
  encode(fingerprint_id, 'hex'),
  metadata ->> 'query'
FROM
  crdb_internal.statement_statistics
WHERE
  app_name = 'consistent-test'
ORDER BY aggregated_ts
----
2021-09-20 14:00:00 +0000 UTC,6afa260318561b7f,SELECT _

observe-sql
SELECT
  aggregated_ts,
  encode(fingerprint_id, 'hex'),
  metadata -> 'stmtFingerprintIDs'
FROM
  crdb_internal.transaction_statistics
WHERE
  app_name = 'consistent-test'
ORDER BY aggregated_ts
----
2021-09-20 14:00:00 +0000 UTC,c5999b4f9e57aca0,["6afa260318561b7f"]

exec-sql
SELECT 1
----

# This waits for in-memory stats, which should be 1 since we flushed the previous statement.
wait-for-stmt-stats app=consistent-test count=1
----


observe-sql
SELECT
  aggregated_ts,
  encode(fingerprint_id, 'hex'),
  metadata ->> 'query'
FROM
  crdb_internal.statement_statistics
WHERE
  app_name = 'consistent-test'
ORDER BY aggregated_ts
----
2021-09-20 14:00:00 +0000 UTC,6afa260318561b7f,SELECT _
2021-09-20 15:00:00 +0000 UTC,6afa260318561b7f,SELECT _

observe-sql
SELECT
  aggregated_ts,
  encode(fingerprint_id, 'hex'),
  metadata -> 'stmtFingerprintIDs'
FROM
  crdb_internal.transaction_statistics
WHERE
  app_name = 'consistent-test'
ORDER BY aggregated_ts
----
2021-09-20 14:00:00 +0000 UTC,c5999b4f9e57aca0,["6afa260318561b7f"]
2021-09-20 15:00:00 +0000 UTC,c5999b4f9e57aca0,["6afa260318561b7f"]

unregister-callback event=stmt-stats-flushed
----
