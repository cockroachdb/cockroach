----
CREATE TRIGGER foo AFTER UPDATE ON t FOR EACH ROW EXECUTE FUNCTION bar() -- normalized!
CREATE TRIGGER foo AFTER UPDATE ON t FOR EACH ROW EXECUTE FUNCTION bar() -- fully parenthesized
CREATE TRIGGER foo AFTER UPDATE ON t FOR EACH ROW EXECUTE FUNCTION bar() -- literals removed
CREATE TRIGGER _ AFTER UPDATE ON _ FOR EACH ROW EXECUTE FUNCTION _() -- identifiers removed


parse
CREATE TRIGGER foo INSTEAD OF DELETE ON t FOR EACH STATEMENT EXECUTE FUNCTION bar();
----
CREATE TRIGGER foo INSTEAD OF DELETE ON t FOR EACH STATEMENT EXECUTE FUNCTION bar() -- normalized!
CREATE TRIGGER foo INSTEAD OF DELETE ON t FOR EACH STATEMENT EXECUTE FUNCTION bar() -- fully parenthesized
CREATE TRIGGER foo INSTEAD OF DELETE ON t FOR EACH STATEMENT EXECUTE FUNCTION bar() -- literals removed
CREATE TRIGGER _ INSTEAD OF DELETE ON _ FOR EACH STATEMENT EXECUTE FUNCTION _() -- identifiers removed

parse
CREATE TRIGGER foo AFTER INSERT OR UPDATE ON t EXECUTE FUNCTION bar();
----
CREATE TRIGGER foo AFTER INSERT OR UPDATE ON t FOR EACH STATEMENT EXECUTE FUNCTION bar() -- normalized!
CREATE TRIGGER foo AFTER INSERT OR UPDATE ON t FOR EACH STATEMENT EXECUTE FUNCTION bar() -- fully parenthesized
CREATE TRIGGER foo AFTER INSERT OR UPDATE ON t FOR EACH STATEMENT EXECUTE FUNCTION bar() -- literals removed
CREATE TRIGGER _ AFTER INSERT OR UPDATE ON _ FOR EACH STATEMENT EXECUTE FUNCTION _() -- identifiers removed

parse
CREATE TRIGGER foo AFTER INSERT OR UPDATE OR DELETE ON t EXECUTE FUNCTION bar();
----
CREATE TRIGGER foo AFTER INSERT OR UPDATE OR DELETE ON t FOR EACH STATEMENT EXECUTE FUNCTION bar() -- normalized!
CREATE TRIGGER foo AFTER INSERT OR UPDATE OR DELETE ON t FOR EACH STATEMENT EXECUTE FUNCTION bar() -- fully parenthesized
CREATE TRIGGER foo AFTER INSERT OR UPDATE OR DELETE ON t FOR EACH STATEMENT EXECUTE FUNCTION bar() -- literals removed
CREATE TRIGGER _ AFTER INSERT OR UPDATE OR DELETE ON _ FOR EACH STATEMENT EXECUTE FUNCTION _() -- identifiers removed
