parse
CREATE TRIGGER foo AFTER INSERT ON t EXECUTE FUNCTION bar();
----
CREATE TRIGGER foo AFTER INSERT ON t FOR EACH STATEMENT EXECUTE FUNCTION bar() -- normalized!
CREATE TRIGGER foo AFTER INSERT ON t FOR EACH STATEMENT EXECUTE FUNCTION bar() -- fully parenthesized
CREATE TRIGGER foo AFTER INSERT ON t FOR EACH STATEMENT EXECUTE FUNCTION bar() -- literals removed
CREATE TRIGGER _ AFTER INSERT ON _ FOR EACH STATEMENT EXECUTE FUNCTION _() -- identifiers removed

parse
CREATE TRIGGER foo BEFORE UPDATE ON t FOR EACH ROW EXECUTE FUNCTION bar();
----
CREATE TRIGGER foo BEFORE UPDATE ON t FOR EACH ROW EXECUTE FUNCTION bar() -- normalized!
CREATE TRIGGER foo BEFORE UPDATE ON t FOR EACH ROW EXECUTE FUNCTION bar() -- fully parenthesized
CREATE TRIGGER foo BEFORE UPDATE ON t FOR EACH ROW EXECUTE FUNCTION bar() -- literals removed
CREATE TRIGGER _ BEFORE UPDATE ON _ FOR EACH ROW EXECUTE FUNCTION _() -- identifiers removed

parse
