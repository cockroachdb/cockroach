      └── scan abc
           ├── columns: a:8!null b:9 c:10 crdb_internal_mvcc_timestamp:11 tableoid:12
           └── ordering: +8

# Tests for ALTER TABLE EXPERIMENTAL_RELOCATE.
build
ALTER TABLE abc EXPERIMENTAL_RELOCATE VALUES (ARRAY[1,2,3], 1), (ARRAY[4], 2)
----
