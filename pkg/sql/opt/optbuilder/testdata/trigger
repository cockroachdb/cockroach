# Show interaction with computed columns.
exec-ddl
CREATE TRIGGER tr BEFORE INSERT OR UPDATE ON computed FOR EACH ROW
WHEN ((NEW).v IS NULL AND (NEW).w IS NULL) EXECUTE FUNCTION f();
