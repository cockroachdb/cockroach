      │    │         │    └── projections
      │    │         │         └── CASE WHEN ((new:9).v IS NULL) AND ((new:9).w IS NULL) THEN f(new:9, NULL, 'tr', 'BEFORE', 'ROW', 'INSERT', 54, 'computed', 'computed', 'public', 0, ARRAY[]) ELSE new:9 END [as=f:23]
      │    │         └── filters
      │    │              └── f:23 IS DISTINCT FROM NULL
      │    └── projections
      │         └── (f:23).k [as=k_new:24]
      └── projections
           ├── k_new:24 + 1 [as=v_comp:25]
           └── k_new:24 + 2 [as=w_comp:26]

