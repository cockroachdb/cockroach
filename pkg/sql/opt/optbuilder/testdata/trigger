      │    │         │    │              ├── 4 [as=w_comp:13]
      │    │         │    │              ├── 2 [as=k_new:11]
      │    │         │    │              └── k:6 + 2 [as=w:8]
      │    │         │    └── projections
      │    │         │         └── CASE WHEN ((new:15).v IS NULL) AND ((new:15).w IS NULL) THEN f(new:15, old:14, 'tr', 'BEFORE', 'ROW', 'UPDATE', 54, 'computed', 'computed', 'public', 0, ARRAY[]) ELSE new:15 END [as=f:29]
      │    │         └── filters
      │    │              └── f:29 IS DISTINCT FROM NULL
      │    └── projections
      │         └── (f:29).k [as=k_new:30]
      └── projections
           ├── k_new:30 + 1 [as=v_comp:31]
           └── k_new:30 + 2 [as=w_comp:32]

# ------------------------------------------------------------------------------
# Row-level AFTER triggers.
# ------------------------------------------------------------------------------

