# Testing SELECT INTO.
exec-ddl
CREATE OR REPLACE FUNCTION f() RETURNS INT AS $$
  DECLARE
    i INT;
    j INT;
  BEGIN
    SELECT x, y INTO i, j FROM xy ORDER BY x DESC;
    RETURN i + j;
  END
$$ LANGUAGE PLpgSQL;
----

build format=show-scalars
SELECT f();
----
project
 ├── columns: f:17
 ├── values
 │    └── tuple
 └── projections
      └── udf: f [as=f:17]
           └── body
                └── limit
                     ├── columns: "_stmt_exec_1":16
                     ├── project
                     │    ├── columns: "_stmt_exec_1":16
                     │    ├── project
                     │    │    ├── columns: j:2 i:1
                     │    │    ├── project
