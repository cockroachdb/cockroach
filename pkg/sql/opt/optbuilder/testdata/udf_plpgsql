# Testing CLOSE statement.
exec-ddl
CREATE OR REPLACE FUNCTION f() RETURNS INT AS $$
  DECLARE
    curs REFCURSOR := 'foo';
  BEGIN
    OPEN curs FOR SELECT 1;
    CLOSE curs;
    RETURN 0;
  END
$$ LANGUAGE PLpgSQL;
----

