exec-ddl
CREATE OR REPLACE FUNCTION f(n INT) RETURNS INT AS $$
  DECLARE
    sum INT := 0;
    i INT := 0;
  BEGIN
    LOOP
      CONTINUE WHEN i % 2 = 0;
      sum := sum + i;
      i := i + 1;
    END LOOP;
    RETURN sum;
  END
$$ LANGUAGE PLpgSQL;
----

