exec-ddl
CREATE OR REPLACE FUNCTION f() RETURNS INT AS $$
  DECLARE
    i INT := 0;
  BEGIN
    WHILE i < 10 LOOP
      i := i + 1;
    END LOOP;
  END
$$ LANGUAGE PLpgSQL;
----

