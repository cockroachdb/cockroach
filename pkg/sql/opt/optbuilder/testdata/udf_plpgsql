 ├── columns: f114826:35
 ├── values
 │    └── tuple
 └── projections
      └── udf: f114826 [as=f114826:35]
           └── body
                └── limit
                     ├── columns: "_stmt_raise_1":34
                     ├── project
                     │    ├── columns: "_stmt_raise_1":34
                     │    ├── barrier
                     │    │    ├── columns: found:1
                     │    │    └── project
                     │    │         ├── columns: found:1
                     │    │         ├── values
                     │    │         │    └── tuple
                     │    │         └── projections
                     │    │              └── cast: INT8 [as=found:1]
                     │    │                   └── null
                     │    └── projections
                     │         └── udf: _stmt_raise_1 [as="_stmt_raise_1":34]
                     │              ├── args
                     │              │    └── variable: found:1
                     │              ├── params: found:2
                     │              └── body
                     │                   ├── project
                     │                   │    ├── columns: stmt_raise_2:3
                     │                   │    ├── values
                     │                   │    │    └── tuple
                     │                   │    └── projections
