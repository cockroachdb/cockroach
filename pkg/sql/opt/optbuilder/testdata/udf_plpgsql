# Correctly display the OTHERS branch.
exec-ddl
CREATE OR REPLACE FUNCTION f() RETURNS INT AS $$
  BEGIN
    RETURN 1 // 0;
  EXCEPTION
    WHEN assert_failure THEN
      RETURN -1;
    WHEN OTHERS THEN
      RETURN -2;
    WHEN query_canceled THEN
      RETURN -3;
  END
$$ LANGUAGE PLpgSQL;
----

