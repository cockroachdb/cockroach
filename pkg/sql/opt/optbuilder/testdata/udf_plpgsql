           └── body
                └── limit
                     ├── columns: stmt_loop_5:23
                     ├── project
                     │    ├── columns: stmt_loop_5:23
                     │    ├── project
                     │    │    ├── columns: i:3
                     │    │    ├── values
                     │    │    │    └── tuple
                     │    │    └── projections
                     │    │         └── variable: a:1 [as=i:3]
                     │    └── projections
                     │         └── udf: stmt_loop_5 [as=stmt_loop_5:23]
                     │              ├── args
                     │              │    ├── variable: a:1
                     │              │    ├── variable: b:2
                     │              │    └── variable: i:3
                     │              ├── params: a:13 b:14 i:15
