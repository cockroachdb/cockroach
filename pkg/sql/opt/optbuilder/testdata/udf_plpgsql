 ├── columns: f:31
 ├── values
 │    └── tuple
 └── projections
      └── udf: f [as=f:31]
           ├── args
           │    └── const: 0
           ├── params: i:1
           └── body
                └── limit
                     ├── columns: nested_block_3:30
                     ├── project
