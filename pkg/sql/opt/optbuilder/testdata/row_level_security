      ├── scan t1
      │    ├── columns: c1:1 c2:2 c3:3 rowid:4!null crdb_internal_mvcc_timestamp:5 tableoid:6
      │    └── locking: for-update
      └── filters
           └── true AND (c3:3 IN ('2025-01-01', '2024-12-31'))

