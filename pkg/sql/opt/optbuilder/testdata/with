      └── columns: a:3(int)

# Chaining multiple CTEs.
build
WITH
    t1 AS (SELECT a FROM y WHERE a < 3),
    t2 AS (SELECT * FROM t1 WHERE a > 1)
SELECT * FROM t2
----
with &1
 ├── columns: a:4(int)
 ├── project
 │    ├── columns: y.a:1(int!null)
 │    └── select
 │         ├── columns: y.a:1(int!null) rowid:2(int!null)
 │         ├── scan y
 │         │    └── columns: y.a:1(int) rowid:2(int!null)
 │         └── filters
 │              └── lt [type=bool]
 │                   ├── variable: y.a [type=int]
 │                   └── const: 3 [type=int]
 └── with &2
      ├── columns: a:4(int)
      ├── select
      │    ├── columns: a:3(int!null)
      │    ├── with-ref &1
      │    │    └── columns: a:3(int)
      │    └── filters
      │         └── gt [type=bool]
      │              ├── variable: a [type=int]
      │              └── const: 1 [type=int]
      └── with-ref &2
           └── columns: a:4(int)

build
WITH
    t1 AS (SELECT a FROM y WHERE a < 3),
    t2 AS (SELECT * FROM t1 WHERE a > 1),
    t3 AS (SELECT * FROM t2 WHERE a = 2)
SELECT * FROM t3
