# Make sure they scope properly.
build
WITH t AS (SELECT true) SELECT * FROM (WITH t AS (SELECT false) SELECT * FROM t)
----
with &1
 ├── columns: bool:3(bool)
 ├── project
 │    ├── columns: bool:1(bool!null)
 │    ├── values
 │    │    └── tuple [type=tuple]
 │    └── projections
 │         └── true [type=bool]
 └── with &2
      ├── columns: bool:3(bool)
      ├── project
      │    ├── columns: bool:2(bool!null)
      │    ├── values
      │    │    └── tuple [type=tuple]
      │    └── projections
      │         └── false [type=bool]
      └── with-ref &2
           └── columns: bool:3(bool)

build
WITH
    t AS (SELECT true),
    t AS (SELECT false)
SELECT * FROM t
----
error (42712): WITH query name t specified more than once

# Using a CTE once in another CTE and once otherwise.
build
WITH
    t1 AS (SELECT true),
    t2 AS (SELECT * FROM t1)
SELECT * FROM t1 NATURAL JOIN t2
----
with &1
 ├── columns: bool:3(bool!null)
 ├── project
 │    ├── columns: bool:1(bool!null)
 │    ├── values
 │    │    └── tuple [type=tuple]
 │    └── projections
 │         └── true [type=bool]
 └── with &2
      ├── columns: bool:3(bool!null)
      ├── with-ref &1
      │    └── columns: bool:2(bool)
      └── project
           ├── columns: bool:3(bool!null)
           └── inner-join
                ├── columns: bool:3(bool!null) bool:4(bool!null)
                ├── with-ref &1
                │    └── columns: bool:3(bool)
                ├── with-ref &2
                │    └── columns: bool:4(bool)
                └── filters
                     └── eq [type=bool]
                          ├── variable: bool [type=bool]
                          └── variable: bool [type=bool]

