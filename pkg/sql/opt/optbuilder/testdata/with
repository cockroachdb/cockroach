# Using a subquery inside a CTE
build
SELECT * FROM x WHERE a IN
  (WITH t AS (SELECT * FROM y WHERE a < 3) SELECT * FROM t)
----
project
 ├── columns: a:1(int)
 └── select
      ├── columns: x.a:1(int) x.rowid:2(int!null)
      ├── scan x
      │    └── columns: x.a:1(int) x.rowid:2(int!null)
      └── filters
           └── any: eq [type=bool]
                ├── with &1
                │    ├── columns: a:5(int)
                │    ├── project
                │    │    ├── columns: y.a:3(int!null)
                │    │    └── select
                │    │         ├── columns: y.a:3(int!null) y.rowid:4(int!null)
                │    │         ├── scan y
                │    │         │    └── columns: y.a:3(int) y.rowid:4(int!null)
                │    │         └── filters
                │    │              └── lt [type=bool]
                │    │                   ├── variable: y.a [type=int]
                │    │                   └── const: 3 [type=int]
                │    └── with-ref &1
                │         └── columns: a:5(int)
                └── variable: x.a [type=int]

# Using a correlated subquery inside a CTE
build
SELECT (WITH t AS (SELECT * FROM y WHERE x.a = y.a) SELECT * FROM t LIMIT 1) FROM x
----
error (0A000): CTEs may not be correlated

# Rename columns
build
WITH t(b) AS (SELECT a FROM x) SELECT b, t.b FROM t
----
with &1
 ├── columns: b:3(int) b:3(int)
 ├── project
 │    ├── columns: a:1(int)
 │    └── scan x
 │         └── columns: a:1(int) rowid:2(int!null)
 └── with-ref &1
      └── columns: b:3(int)

build
WITH t(b, c) AS (SELECT a FROM x) SELECT b, t.b FROM t
----
error (42P10): source "t" has 1 columns available but 2 columns specified

# Ensure you can't reference the original table name
build
WITH t AS (SELECT a FROM x) SELECT a, x.t FROM t
----
error (42P01): no data source matches prefix: x

# Nested WITH, name shadowing
build
WITH t(x) AS (WITH t(x) AS (SELECT 1) SELECT x * 10 FROM t) SELECT x + 2 FROM t
----
with &1
 ├── columns: "?column?":5(int)
 ├── project
 │    ├── columns: "?column?":1(int!null)
 │    ├── values
 │    │    └── tuple [type=tuple]
 │    └── projections
 │         └── const: 1 [type=int]
 └── with &2
      ├── columns: "?column?":5(int)
      ├── with &1
      │    ├── columns: "?column?":3(int)
      │    ├── project
      │    │    ├── columns: "?column?":1(int!null)
      │    │    ├── values
      │    │    │    └── tuple [type=tuple]
      │    │    └── projections
      │    │         └── const: 1 [type=int]
      │    └── project
      │         ├── columns: "?column?":3(int)
      │         ├── with-ref &1
      │         │    └── columns: x:2(int)
      │         └── projections
      │              └── mult [type=int]
      │                   ├── variable: x [type=int]
      │                   └── const: 10 [type=int]
      └── project
           ├── columns: "?column?":5(int)
           ├── with-ref &2
           │    └── columns: x:4(int)
           └── projections
                └── plus [type=int]
                     ├── variable: x [type=int]
                     └── const: 2 [type=int]

build
WITH one AS (SELECT a AS u FROM x),
     two AS (SELECT a AS v FROM (SELECT a FROM y UNION ALL SELECT u FROM one))
  SELECT * FROM one JOIN two ON u = v
----
with &1
 ├── columns: u:7(int!null) v:8(int!null)
 ├── project
 │    ├── columns: x.a:1(int)
 │    └── scan x
 │         └── columns: x.a:1(int) x.rowid:2(int!null)
 └── with &2
      ├── columns: u:7(int!null) v:8(int!null)
      ├── union-all
      │    ├── columns: a:6(int)
      │    ├── left columns: y.a:3(int)
      │    ├── right columns: u:5(int)
      │    ├── project
      │    │    ├── columns: y.a:3(int)
      │    │    └── scan y
      │    │         └── columns: y.a:3(int) y.rowid:4(int!null)
      │    └── with-ref &1
      │         └── columns: u:5(int)
      └── inner-join
           ├── columns: u:7(int!null) v:8(int!null)
           ├── with-ref &1
           │    └── columns: u:7(int)
           ├── with-ref &2
           │    └── columns: v:8(int)
           └── filters
                └── eq [type=bool]
                     ├── variable: u [type=int]
                     └── variable: v [type=int]

# Mutations.
build
WITH t AS (SELECT a FROM x) INSERT INTO x SELECT a + 20 FROM t RETURNING *
----
with &1
 ├── columns: a:3(int)
 ├── project
 │    ├── columns: x.a:1(int)
 │    └── scan x
 │         └── columns: x.a:1(int) rowid:2(int!null)
 └── project
      ├── columns: x.a:3(int)
      └── insert x
           ├── columns: x.a:3(int) rowid:4(int!null)
           ├── insert-mapping:
           │    ├──  "?column?":6 => x.a:3
           │    └──  column7:7 => rowid:4
           └── project
                ├── columns: column7:7(int) "?column?":6(int)
                ├── project
                │    ├── columns: "?column?":6(int)
                │    ├── with-ref &1
                │    │    └── columns: a:5(int)
                │    └── projections
                │         └── plus [type=int]
                │              ├── variable: a [type=int]
                │              └── const: 20 [type=int]
                └── projections
                     └── function: unique_rowid [type=int]

build
WITH t AS (SELECT a FROM x) UPDATE x SET a = (SELECT * FROM t) RETURNING *
----
with &1
 ├── columns: a:3(int)
 ├── project
 │    ├── columns: x.a:1(int)
 │    └── scan x
 │         └── columns: x.a:1(int) rowid:2(int!null)
 └── project
      ├── columns: x.a:3(int)
      └── update x
           ├── columns: x.a:3(int) rowid:4(int!null)
           ├── fetch columns: x.a:5(int) rowid:6(int)
           ├── update-mapping:
           │    └──  column8:8 => x.a:3
           └── project
                ├── columns: column8:8(int) x.a:5(int) rowid:6(int!null)
                ├── scan x
                │    └── columns: x.a:5(int) rowid:6(int!null)
                └── projections
                     └── subquery [type=int]
                          └── max1-row
                               ├── columns: a:7(int)
                               └── with-ref &1
                                    └── columns: a:7(int)

build
WITH t AS (SELECT a FROM x) DELETE FROM x WHERE a = (SELECT * FROM t) RETURNING *
----
with &1
 ├── columns: a:3(int!null)
 ├── project
 │    ├── columns: x.a:1(int)
 │    └── scan x
 │         └── columns: x.a:1(int) rowid:2(int!null)
 └── project
      ├── columns: x.a:3(int!null)
      └── delete x
           ├── columns: x.a:3(int!null) rowid:4(int!null)
           ├── fetch columns: x.a:5(int) rowid:6(int)
           └── select
                ├── columns: x.a:5(int!null) rowid:6(int!null)
                ├── scan x
                │    └── columns: x.a:5(int) rowid:6(int!null)
                └── filters
                     └── eq [type=bool]
                          ├── variable: x.a [type=int]
                          └── subquery [type=int]
                               └── max1-row
                                    ├── columns: a:7(int)
                                    └── with-ref &1
                                         └── columns: a:7(int)

# Correlated WITH is not allowed.

build
SELECT (WITH foo AS (SELECT x.a FROM x WHERE x.a = y.a) SELECT a FROM foo) FROM y
----
error (0A000): CTEs may not be correlated
