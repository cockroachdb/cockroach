# Make sure UPDATE ... FROM can return hidden columns.
opt
UPDATE abc
SET
  b=ab.b, c = ac.c
FROM
  ab, ac
WHERE
  abc.a=ab.a AND abc.a = ac.a
RETURNING
  *, ab.rowid, ac.rowid
----
update abc
 ├── columns: a:1(int!null) b:2(int) c:3(int) a:7(int) b:8(int) a:10(int) c:11(int) rowid:9(int) rowid:12(int)
