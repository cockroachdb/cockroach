# Build an implicit RETURN statement for a routine with OUT params.
exec-ddl
CREATE PROCEDURE p_out(OUT x INT, OUT y INT) AS $$
  BEGIN
    x := 1;
    IF x > 0 THEN
      y := 2;
    END IF;
  END
$$ LANGUAGE PLpgSQL;
----

build format=show-scalars
CALL p_out(NULL, NULL);
