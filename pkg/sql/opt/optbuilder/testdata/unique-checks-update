exec-ddl
CREATE TABLE uniq (
  k INT PRIMARY KEY,
  v INT UNIQUE,
  w INT UNIQUE WITHOUT INDEX,
  x INT,
  y INT,
  UNIQUE WITHOUT INDEX (x, y)
)
----

# None of the updated values have nulls.
build
UPDATE uniq SET w = 1, x = 2
----
update uniq
 ├── columns: <none>
 ├── fetch columns: uniq.k:7 v:8 uniq.w:9 uniq.x:10 uniq.y:11
 ├── update-mapping:
 │    ├── w_new:13 => uniq.w:3
 │    └── x_new:14 => uniq.x:4
 ├── input binding: &1
 ├── project
 │    ├── columns: w_new:13!null x_new:14!null uniq.k:7!null v:8 uniq.w:9 uniq.x:10 uniq.y:11 crdb_internal_mvcc_timestamp:12
 │    ├── scan uniq
 │    │    └── columns: uniq.k:7!null v:8 uniq.w:9 uniq.x:10 uniq.y:11 crdb_internal_mvcc_timestamp:12
 │    └── projections
 │         ├── 1 [as=w_new:13]
 │         └── 2 [as=x_new:14]
 └── unique-checks
      ├── unique-checks-item: uniq(w)
      │    └── semi-join (hash)
      │         ├── columns: w:15!null k:16!null
      │         ├── with-scan &1
      │         │    ├── columns: w:15!null k:16!null
      │         │    └── mapping:
      │         │         ├──  w_new:13 => w:15
      │         │         └──  uniq.k:7 => k:16
      │         ├── scan uniq
      │         │    └── columns: uniq.k:17!null uniq.w:19
      │         └── filters
      │              ├── w:15 = uniq.w:19
      │              └── k:16 != uniq.k:17
      └── unique-checks-item: uniq(x,y)
           └── semi-join (hash)
                ├── columns: x:23!null y:24 k:25!null
                ├── with-scan &1
                │    ├── columns: x:23!null y:24 k:25!null
                │    └── mapping:
                │         ├──  x_new:14 => x:23
                │         ├──  uniq.y:11 => y:24
                │         └──  uniq.k:7 => k:25
                ├── scan uniq
                │    └── columns: uniq.k:26!null uniq.x:29 uniq.y:30
                └── filters
                     ├── x:23 = uniq.x:29
                     ├── y:24 = uniq.y:30
                     └── k:25 != uniq.k:26

