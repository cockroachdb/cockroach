exec-ddl
CREATE TABLE child_cascade (c INT PRIMARY KEY, p INT NOT NULL REFERENCES parent(p) ON DELETE CASCADE)
----

# Bail in the presence of CASCADE, so that exec-style FK checks take over.
build
DELETE FROM parent WHERE p = 1
