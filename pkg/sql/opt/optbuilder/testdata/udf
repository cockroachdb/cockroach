# --------------------------------------------------
# UDFs with implicit record types.
# --------------------------------------------------

exec-ddl
CREATE FUNCTION get_abc(i INT) RETURNS abc LANGUAGE SQL AS $$
  SELECT a, b, c FROM abc WHERE c > i ORDER BY b DESC
$$;
----

build format=show-scalars
SELECT get_abc(3)
----
project
 ├── columns: get_abc:8
 ├── values
 │    └── tuple
 └── projections
