# Mutation columns should be updated.
build
UPDATE mutation SET m=1
----
update mutation
 ├── columns: <none>
 ├── fetch columns: mutation.m:7 n:8 mutation.o:9 mutation.p:10 q:11
 ├── update-mapping:
 │    ├── m:13 => mutation.m:1
 │    ├── o:14 => mutation.o:3
 │    └── p:15 => mutation.p:4
 ├── check columns: check1:16
 └── project
      ├── columns: check1:16!null mutation.m:7!null n:8 mutation.o:9 mutation.p:10 q:11 crdb_internal_mvcc_timestamp:12 m:13!null o:14!null p:15
      ├── project
      │    ├── columns: p:15 mutation.m:7!null n:8 mutation.o:9 mutation.p:10 q:11 crdb_internal_mvcc_timestamp:12 m:13!null o:14!null
      │    ├── project
      │    │    ├── columns: o:14!null mutation.m:7!null n:8 mutation.o:9 mutation.p:10 q:11 crdb_internal_mvcc_timestamp:12 m:13!null
      │    │    ├── project
      │    │    │    ├── columns: m:13!null mutation.m:7!null n:8 mutation.o:9 mutation.p:10 q:11 crdb_internal_mvcc_timestamp:12
      │    │    │    ├── scan mutation
      │    │    │    │    ├── columns: mutation.m:7!null n:8 mutation.o:9 mutation.p:10 q:11 crdb_internal_mvcc_timestamp:12
      │    │    │    │    └── check constraint expressions
      │    │    │    │         └── mutation.m:7 > 0
      │    │    │    └── projections
      │    │    │         └── 1 [as=m:13]
      │    │    └── projections
      │    │         └── 10 [as=o:14]
      │    └── projections
      │         └── o:14 + n:8 [as=p:15]
      └── projections
           └── m:13 > 0 [as=check1:16]

# Update column that mutation column depends upon.
build
UPDATE mutation SET m=1, n=2
----
update mutation
 ├── columns: <none>
 ├── fetch columns: mutation.m:7 mutation.n:8 mutation.o:9 mutation.p:10 q:11
 ├── update-mapping:
 │    ├── m:13 => mutation.m:1
 │    ├── n:14 => mutation.n:2
 │    ├── o:15 => mutation.o:3
 │    └── p:16 => mutation.p:4
 ├── check columns: check1:17
 └── project
