      │    │    │    │         └── m:6 > 0
      │    │    │    └── projections
      │    │    │         └── 1 [as=m_new:11]
      │    │    └── projections
      │    │         └── 10 [as=column12:12]
      │    └── projections
      │         └── column12:12 + n:7 [as=column13:13]
      └── projections
           └── m_new:11 > 0 [as=check1:14]

