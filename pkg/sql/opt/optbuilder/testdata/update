 │    │    └── a:15 => e:5
 │    └── project
 │         ├── columns: d:16 foo.a:8!null b:9 c:10 foo.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14 a:15!null
 │         ├── project
 │         │    ├── columns: a:15!null foo.a:8!null b:9 c:10 foo.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
 │         │    ├── select
 │         │    │    ├── columns: foo.a:8!null b:9 c:10 foo.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
 │         │    │    ├── scan abcde [as=foo]
 │         │    │    │    ├── columns: foo.a:8!null b:9 c:10 foo.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
 │         │    │    │    └── computed column expressions
 │         │    │    │         ├── foo.d:11
 │         │    │    │         │    └── (b:9 + c:10) + 1
 │         │    │    │         └── e:12
