build
UPDATE abcde SET (a, b)=(1, 2, 3)
----
error (42601): number of columns (2) does not match number of values (3)

build
UPDATE abcde SET (a, b, a)=(1, 2, 3)
----
error (42601): multiple assignments to the same column "a"

build
UPDATE abcde SET (a, unk)=(1, 2)
----
error (42703): column "unk" does not exist

build
UPDATE abcde SET (a, d)=(1, 2)
----
error (55000): cannot write directly to computed column "d"

# ------------------------------------------------------------------------------
# Test subqueries.
# ------------------------------------------------------------------------------

# Update single column.
build
UPDATE abcde SET (a)=(SELECT 1 AS one)
----
update abcde
 ├── columns: <none>
 ├── fetch columns: a:8 b:9 c:10 abcde.d:11 e:12 rowid:13
 ├── update-mapping:
 │    └── one:15 => a:1
 └── project
      ├── columns: d:16 a:8!null b:9 c:10 abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14 one:15
      ├── left-join-apply
      │    ├── columns: a:8!null b:9 c:10 abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14 one:15
      │    ├── scan abcde
      │    │    ├── columns: a:8!null b:9 c:10 abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
      │    │    └── computed column expressions
      │    │         ├── abcde.d:11
      │    │         │    └── (b:9 + c:10) + 1
      │    │         └── e:12
      │    │              └── a:8
      │    ├── max1-row
      │    │    ├── columns: one:15!null
      │    │    └── project
      │    │         ├── columns: one:15!null
      │    │         ├── values
      │    │         │    └── ()
      │    │         └── projections
      │    │              └── 1 [as=one:15]
      │    └── filters (true)
      └── projections
           └── (b:9 + c:10) + 1 [as=d:16]

# Update all updatable columns.
build
UPDATE abcde SET (a, b, c, rowid)=(SELECT x::int, y, z::int, y+1 AS y1 FROM xyz)
----
update abcde
 ├── columns: <none>
 ├── fetch columns: a:8 b:9 c:10 abcde.d:11 e:12 rowid:13
 ├── update-mapping:
 │    ├── x:19 => a:1
 │    ├── y:16 => b:2
 │    ├── z:20 => c:3
 │    └── y1:21 => rowid:6
 └── project
      ├── columns: d:22 a:8!null b:9 c:10 abcde.d:11 e:12 rowid:13!null abcde.crdb_internal_mvcc_timestamp:14 y:16 x:19 z:20 y1:21
      ├── left-join-apply
      │    ├── columns: a:8!null b:9 c:10 abcde.d:11 e:12 rowid:13!null abcde.crdb_internal_mvcc_timestamp:14 y:16 x:19 z:20 y1:21
      │    ├── scan abcde
      │    │    ├── columns: a:8!null b:9 c:10 abcde.d:11 e:12 rowid:13!null abcde.crdb_internal_mvcc_timestamp:14
      │    │    └── computed column expressions
      │    │         ├── abcde.d:11
      │    │         │    └── (b:9 + c:10) + 1
      │    │         └── e:12
      │    │              └── a:8
      │    ├── max1-row
      │    │    ├── columns: y:16 x:19!null z:20 y1:21
      │    │    └── project
      │    │         ├── columns: x:19!null z:20 y1:21 y:16
      │    │         ├── scan xyz
      │    │         │    └── columns: xyz.x:15!null y:16 xyz.z:17 xyz.crdb_internal_mvcc_timestamp:18
      │    │         └── projections
      │    │              ├── xyz.x:15::INT8 [as=x:19]
      │    │              ├── xyz.z:17::INT8 [as=z:20]
      │    │              └── y:16 + 1 [as=y1:21]
      │    └── filters (true)
      └── projections
           └── (b:9 + c:10) + 1 [as=d:22]

# Update using combination of subquery and tuple SET expressions.
