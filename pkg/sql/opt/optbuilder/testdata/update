exec-ddl
CREATE TABLE abcde (
    a INT NOT NULL,
    b INT,
    c INT DEFAULT (10),
    d INT AS (b + c + 1) STORED,
    e INT AS (a) STORED
)
----

exec-ddl
CREATE TABLE xyz (
    x TEXT PRIMARY KEY,
    y INT8,
    z FLOAT8
)
----

exec-ddl
CREATE TABLE uv (
    u DECIMAL,
    v BYTES
)
----

exec-ddl
CREATE TABLE mutation (
    m INT PRIMARY KEY,
    n INT,
    "o:write-only" INT DEFAULT(10),
    "p:write-only" INT AS (o + n) STORED,
    "q:delete-only" INT AS (m * p) STORED,
    CHECK (m > 0)
)
----

exec-ddl
CREATE TABLE checks (
    a INT PRIMARY KEY CHECK (a > 0),
    b INT,
    c INT,
    d INT AS (c + 1) STORED,
    CHECK (b < d)
)
----

exec-ddl
CREATE TABLE decimals (
    a DECIMAL(10,0) PRIMARY KEY CHECK (round(a) = a),
    b DECIMAL(5,1)[] CHECK (b[0] > 1),
    c DECIMAL(10,1) DEFAULT (1.23),
    d DECIMAL(10,1) AS (a+c) STORED
)
----

# ------------------------------------------------------------------------------
# Basic tests.
# ------------------------------------------------------------------------------

# Set single column.
build
UPDATE abcde SET a=2 WHERE a=1
----
update abcde
 ├── columns: <none>
 ├── fetch columns: abcde.a:8 b:9 c:10 abcde.d:11 e:12 rowid:13
 ├── update-mapping:
 │    ├── a:15 => abcde.a:1
 │    └── a:15 => e:5
 └── project
      ├── columns: d:16 abcde.a:8!null b:9 c:10 abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14 a:15!null
      ├── project
      │    ├── columns: a:15!null abcde.a:8!null b:9 c:10 abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
      │    ├── select
      │    │    ├── columns: abcde.a:8!null b:9 c:10 abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
      │    │    ├── scan abcde
      │    │    │    ├── columns: abcde.a:8!null b:9 c:10 abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
      │    │    │    └── computed column expressions
      │    │    │         ├── abcde.d:11
      │    │    │         │    └── (b:9 + c:10) + 1
      │    │    │         └── e:12
      │    │    │              └── abcde.a:8
      │    │    └── filters
      │    │         └── abcde.a:8 = 1
      │    └── projections
      │         └── 2 [as=a:15]
      └── projections
           └── (b:9 + c:10) + 1 [as=d:16]

# Set all non-computed columns.
build
UPDATE abcde SET a=1, b=2, c=3, rowid=4
----
update abcde
 ├── columns: <none>
 ├── fetch columns: abcde.a:8 abcde.b:9 abcde.c:10 abcde.d:11 e:12 abcde.rowid:13
 ├── update-mapping:
 │    ├── a:15 => abcde.a:1
 │    ├── b:16 => abcde.b:2
 │    ├── c:17 => abcde.c:3
 │    ├── d:19 => abcde.d:4
 │    ├── a:15 => e:5
 │    └── rowid:18 => abcde.rowid:6
 └── project
      ├── columns: d:19!null abcde.a:8!null abcde.b:9 abcde.c:10 abcde.d:11 e:12 abcde.rowid:13!null crdb_internal_mvcc_timestamp:14 a:15!null b:16!null c:17!null rowid:18!null
      ├── project
      │    ├── columns: a:15!null b:16!null c:17!null rowid:18!null abcde.a:8!null abcde.b:9 abcde.c:10 abcde.d:11 e:12 abcde.rowid:13!null crdb_internal_mvcc_timestamp:14
      │    ├── scan abcde
      │    │    ├── columns: abcde.a:8!null abcde.b:9 abcde.c:10 abcde.d:11 e:12 abcde.rowid:13!null crdb_internal_mvcc_timestamp:14
      │    │    └── computed column expressions
      │    │         ├── abcde.d:11
      │    │         │    └── (abcde.b:9 + abcde.c:10) + 1
      │    │         └── e:12
      │    │              └── abcde.a:8
      │    └── projections
      │         ├── 1 [as=a:15]
      │         ├── 2 [as=b:16]
      │         ├── 3 [as=c:17]
      │         └── 4 [as=rowid:18]
      └── projections
           └── (b:16 + c:17) + 1 [as=d:19]

# Set all non-computed columns in reverse order.
build
UPDATE abcde SET rowid=1, c=2, b=3, a=4
----
update abcde
 ├── columns: <none>
 ├── fetch columns: abcde.a:8 abcde.b:9 abcde.c:10 abcde.d:11 e:12 abcde.rowid:13
 ├── update-mapping:
 │    ├── a:18 => abcde.a:1
 │    ├── b:17 => abcde.b:2
 │    ├── c:16 => abcde.c:3
 │    ├── d:19 => abcde.d:4
 │    ├── a:18 => e:5
 │    └── rowid:15 => abcde.rowid:6
 └── project
      ├── columns: d:19!null abcde.a:8!null abcde.b:9 abcde.c:10 abcde.d:11 e:12 abcde.rowid:13!null crdb_internal_mvcc_timestamp:14 rowid:15!null c:16!null b:17!null a:18!null
      ├── project
      │    ├── columns: rowid:15!null c:16!null b:17!null a:18!null abcde.a:8!null abcde.b:9 abcde.c:10 abcde.d:11 e:12 abcde.rowid:13!null crdb_internal_mvcc_timestamp:14
      │    ├── scan abcde
      │    │    ├── columns: abcde.a:8!null abcde.b:9 abcde.c:10 abcde.d:11 e:12 abcde.rowid:13!null crdb_internal_mvcc_timestamp:14
      │    │    └── computed column expressions
      │    │         ├── abcde.d:11
      │    │         │    └── (abcde.b:9 + abcde.c:10) + 1
      │    │         └── e:12
      │    │              └── abcde.a:8
      │    └── projections
      │         ├── 1 [as=rowid:15]
      │         ├── 2 [as=c:16]
      │         ├── 3 [as=b:17]
      │         └── 4 [as=a:18]
      └── projections
           └── (b:17 + c:16) + 1 [as=d:19]

# Set all non-computed columns to NULL.
build
UPDATE abcde SET a=NULL, b=NULL, c=NULL, rowid=NULL
----
update abcde
 ├── columns: <none>
 ├── fetch columns: abcde.a:8 b:9 c:10 abcde.d:11 e:12 rowid:13
 ├── update-mapping:
 │    ├── a:15 => abcde.a:1
 │    ├── a:15 => b:2
 │    ├── a:15 => c:3
 │    ├── d:16 => abcde.d:4
 │    ├── a:15 => e:5
 │    └── a:15 => rowid:6
 └── project
      ├── columns: d:16 abcde.a:8!null b:9 c:10 abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14 a:15
      ├── project
      │    ├── columns: a:15 abcde.a:8!null b:9 c:10 abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
      │    ├── scan abcde
      │    │    ├── columns: abcde.a:8!null b:9 c:10 abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
      │    │    └── computed column expressions
      │    │         ├── abcde.d:11
      │    │         │    └── (b:9 + c:10) + 1
      │    │         └── e:12
      │    │              └── abcde.a:8
      │    └── projections
      │         └── NULL::INT8 [as=a:15]
      └── projections
           └── (a:15 + a:15) + 1 [as=d:16]

# Set columns using variable expressions.
build
UPDATE abcde SET a=a+1, b=b*c WHERE b>e
----
update abcde
 ├── columns: <none>
 ├── fetch columns: abcde.a:8 abcde.b:9 c:10 abcde.d:11 e:12 rowid:13
 ├── update-mapping:
 │    ├── a:15 => abcde.a:1
 │    ├── b:16 => abcde.b:2
 │    ├── d:17 => abcde.d:4
 │    └── a:15 => e:5
 └── project
      ├── columns: d:17 abcde.a:8!null abcde.b:9!null c:10 abcde.d:11 e:12!null rowid:13!null crdb_internal_mvcc_timestamp:14 a:15!null b:16
      ├── project
      │    ├── columns: a:15!null b:16 abcde.a:8!null abcde.b:9!null c:10 abcde.d:11 e:12!null rowid:13!null crdb_internal_mvcc_timestamp:14
      │    ├── select
      │    │    ├── columns: abcde.a:8!null abcde.b:9!null c:10 abcde.d:11 e:12!null rowid:13!null crdb_internal_mvcc_timestamp:14
      │    │    ├── scan abcde
      │    │    │    ├── columns: abcde.a:8!null abcde.b:9 c:10 abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
      │    │    │    └── computed column expressions
      │    │    │         ├── abcde.d:11
      │    │    │         │    └── (abcde.b:9 + c:10) + 1
      │    │    │         └── e:12
      │    │    │              └── abcde.a:8
      │    │    └── filters
      │    │         └── abcde.b:9 > e:12
      │    └── projections
      │         ├── abcde.a:8 + 1 [as=a:15]
      │         └── abcde.b:9 * c:10 [as=b:16]
      └── projections
           └── (b:16 + c:10) + 1 [as=d:17]

# Set columns using aliased expressions.
build
UPDATE abcde AS foo SET a=foo.b, b=foo.c
----
update abcde [as=foo]
 ├── columns: <none>
 ├── fetch columns: a:8 b:9 c:10 foo.d:11 e:12 rowid:13
 ├── update-mapping:
 │    ├── b:9 => a:1
 │    ├── c:10 => b:2
 │    ├── d:15 => foo.d:4
 │    └── b:9 => e:5
 └── project
      ├── columns: d:15 a:8!null b:9 c:10 foo.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
      ├── scan abcde [as=foo]
      │    ├── columns: a:8!null b:9 c:10 foo.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
      │    └── computed column expressions
      │         ├── foo.d:11
      │         │    └── (b:9 + c:10) + 1
      │         └── e:12
      │              └── a:8
      └── projections
           └── (c:10 + c:10) + 1 [as=d:15]

# Use WHERE, ORDER BY, LIMIT.
build
UPDATE abcde SET b=1 WHERE a>0 ORDER BY a LIMIT 10
----
update abcde
 ├── columns: <none>
 ├── fetch columns: a:8 abcde.b:9 c:10 abcde.d:11 e:12 rowid:13
 ├── update-mapping:
 │    ├── b:15 => abcde.b:2
 │    └── d:16 => abcde.d:4
 └── project
      ├── columns: d:16 a:8!null abcde.b:9 c:10 abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14 b:15!null
      ├── project
      │    ├── columns: b:15!null a:8!null abcde.b:9 c:10 abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
      │    ├── limit
      │    │    ├── columns: a:8!null abcde.b:9 c:10 abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
      │    │    ├── internal-ordering: +8
      │    │    ├── sort
      │    │    │    ├── columns: a:8!null abcde.b:9 c:10 abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
      │    │    │    ├── ordering: +8
      │    │    │    ├── limit hint: 10.00
      │    │    │    └── select
      │    │    │         ├── columns: a:8!null abcde.b:9 c:10 abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
      │    │    │         ├── scan abcde
      │    │    │         │    ├── columns: a:8!null abcde.b:9 c:10 abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
      │    │    │         │    └── computed column expressions
      │    │    │         │         ├── abcde.d:11
      │    │    │         │         │    └── (abcde.b:9 + c:10) + 1
      │    │    │         │         └── e:12
      │    │    │         │              └── a:8
      │    │    │         └── filters
      │    │    │              └── a:8 > 0
      │    │    └── 10
      │    └── projections
      │         └── 1 [as=b:15]
      └── projections
           └── (b:15 + c:10) + 1 [as=d:16]

# UPDATE with index hints.
exec-ddl
CREATE TABLE xyzw (
  x INT PRIMARY KEY,
  y INT,
  z INT,
  w INT,
  INDEX foo (z, y)
)
----

build
UPDATE xyzw@primary SET x=2 WHERE z=1
----
update xyzw
 ├── columns: <none>
 ├── fetch columns: xyzw.x:6 y:7 z:8 w:9
 ├── update-mapping:
 │    └── x:11 => xyzw.x:1
 └── project
      ├── columns: x:11!null xyzw.x:6!null y:7 z:8!null w:9 crdb_internal_mvcc_timestamp:10
      ├── select
      │    ├── columns: xyzw.x:6!null y:7 z:8!null w:9 crdb_internal_mvcc_timestamp:10
      │    ├── scan xyzw
      │    │    ├── columns: xyzw.x:6!null y:7 z:8 w:9 crdb_internal_mvcc_timestamp:10
      │    │    └── flags: force-index=primary
      │    └── filters
      │         └── z:8 = 1
      └── projections
           └── 2 [as=x:11]

build
UPDATE xyzw@foo SET x=2 WHERE z=1
----
update xyzw
 ├── columns: <none>
 ├── fetch columns: xyzw.x:6 y:7 z:8 w:9
 ├── update-mapping:
 │    └── x:11 => xyzw.x:1
 └── project
      ├── columns: x:11!null xyzw.x:6!null y:7 z:8!null w:9 crdb_internal_mvcc_timestamp:10
      ├── select
      │    ├── columns: xyzw.x:6!null y:7 z:8!null w:9 crdb_internal_mvcc_timestamp:10
      │    ├── scan xyzw
      │    │    ├── columns: xyzw.x:6!null y:7 z:8 w:9 crdb_internal_mvcc_timestamp:10
      │    │    └── flags: force-index=foo
      │    └── filters
      │         └── z:8 = 1
      └── projections
           └── 2 [as=x:11]

build
UPDATE xyzw@{FORCE_INDEX=foo,ASC} SET x=2 WHERE z=1
----
update xyzw
 ├── columns: <none>
 ├── fetch columns: xyzw.x:6 y:7 z:8 w:9
 ├── update-mapping:
 │    └── x:11 => xyzw.x:1
 └── project
      ├── columns: x:11!null xyzw.x:6!null y:7 z:8!null w:9 crdb_internal_mvcc_timestamp:10
      ├── select
      │    ├── columns: xyzw.x:6!null y:7 z:8!null w:9 crdb_internal_mvcc_timestamp:10
      │    ├── scan xyzw
      │    │    ├── columns: xyzw.x:6!null y:7 z:8 w:9 crdb_internal_mvcc_timestamp:10
      │    │    └── flags: force-index=foo,fwd
      │    └── filters
      │         └── z:8 = 1
      └── projections
           └── 2 [as=x:11]

build
UPDATE xyzw@{FORCE_INDEX=foo,DESC} SET x=2 WHERE z=1
----
update xyzw
 ├── columns: <none>
 ├── fetch columns: xyzw.x:6 y:7 z:8 w:9
 ├── update-mapping:
 │    └── x:11 => xyzw.x:1
 └── project
      ├── columns: x:11!null xyzw.x:6!null y:7 z:8!null w:9 crdb_internal_mvcc_timestamp:10
      ├── select
      │    ├── columns: xyzw.x:6!null y:7 z:8!null w:9 crdb_internal_mvcc_timestamp:10
      │    ├── scan xyzw,rev
      │    │    ├── columns: xyzw.x:6!null y:7 z:8 w:9 crdb_internal_mvcc_timestamp:10
      │    │    └── flags: force-index=foo,rev
      │    └── filters
      │         └── z:8 = 1
      └── projections
           └── 2 [as=x:11]

build
UPDATE xyzw@{NO_INDEX_JOIN} SET x=2 WHERE z=1
----
update xyzw
 ├── columns: <none>
 ├── fetch columns: xyzw.x:6 y:7 z:8 w:9
 ├── update-mapping:
 │    └── x:11 => xyzw.x:1
 └── project
      ├── columns: x:11!null xyzw.x:6!null y:7 z:8!null w:9 crdb_internal_mvcc_timestamp:10
      ├── select
      │    ├── columns: xyzw.x:6!null y:7 z:8!null w:9 crdb_internal_mvcc_timestamp:10
      │    ├── scan xyzw
      │    │    ├── columns: xyzw.x:6!null y:7 z:8 w:9 crdb_internal_mvcc_timestamp:10
      │    │    └── flags: no-index-join
      │    └── filters
      │         └── z:8 = 1
      └── projections
           └── 2 [as=x:11]

build
UPDATE xyzw@bad_idx SET x=2 WHERE z=1
----
error: index "bad_idx" not found


# Infer types.
build
UPDATE xyz SET y=1, z=1
----
update xyz
 ├── columns: <none>
 ├── fetch columns: x:5 xyz.y:6 xyz.z:7
 ├── update-mapping:
 │    ├── y:9 => xyz.y:2
 │    └── z:10 => xyz.z:3
 └── project
      ├── columns: y:9!null z:10!null x:5!null xyz.y:6 xyz.z:7 crdb_internal_mvcc_timestamp:8
      ├── scan xyz
      │    └── columns: x:5!null xyz.y:6 xyz.z:7 crdb_internal_mvcc_timestamp:8
      └── projections
           ├── 1 [as=y:9]
           └── 1.0 [as=z:10]

# Use placeholders.
build
UPDATE xyz SET x=$1, y=$2, z=$3
----
update xyz
 ├── columns: <none>
 ├── fetch columns: xyz.x:5 xyz.y:6 xyz.z:7
 ├── update-mapping:
 │    ├── x:9 => xyz.x:1
 │    ├── y:10 => xyz.y:2
 │    └── z:11 => xyz.z:3
 └── project
      ├── columns: x:9 y:10 z:11 xyz.x:5!null xyz.y:6 xyz.z:7 crdb_internal_mvcc_timestamp:8
      ├── scan xyz
      │    └── columns: xyz.x:5!null xyz.y:6 xyz.z:7 crdb_internal_mvcc_timestamp:8
      └── projections
           ├── $1 [as=x:9]
           ├── $2 [as=y:10]
           └── $3 [as=z:11]

# Duplicate expressions with placeholders.
build
UPDATE abcde SET a=$1 + 1, b=$1 + 1 WHERE c=10
----
update abcde
 ├── columns: <none>
 ├── fetch columns: abcde.a:8 b:9 c:10 abcde.d:11 e:12 rowid:13
 ├── update-mapping:
 │    ├── a:15 => abcde.a:1
 │    ├── a:15 => b:2
 │    ├── d:16 => abcde.d:4
 │    └── a:15 => e:5
 └── project
      ├── columns: d:16 abcde.a:8!null b:9 c:10!null abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14 a:15
      ├── project
      │    ├── columns: a:15 abcde.a:8!null b:9 c:10!null abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
      │    ├── select
      │    │    ├── columns: abcde.a:8!null b:9 c:10!null abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
      │    │    ├── scan abcde
      │    │    │    ├── columns: abcde.a:8!null b:9 c:10 abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
      │    │    │    └── computed column expressions
      │    │    │         ├── abcde.d:11
      │    │    │         │    └── (b:9 + c:10) + 1
      │    │    │         └── e:12
      │    │    │              └── abcde.a:8
      │    │    └── filters
      │    │         └── c:10 = 10
      │    └── projections
      │         └── $1 + 1 [as=a:15]
      └── projections
           └── (a:15 + c:10) + 1 [as=d:16]


# Unknown target table.
build
UPDATE unknown SET x=1
----
error (42P01): no data source matches prefix: "unknown"

# Unknown target column.
build
UPDATE abcde SET f=1
----
error (42703): column "f" does not exist

# Test SET type checking.
build
UPDATE xyz SET x=1, y=1, z=1
----
error (42804): value type int doesn't match type string of column "x"

# Try to use non-returning UPDATE as expression.
build
SELECT * FROM [UPDATE abcde SET a=1]
----
error (42703): statement source "UPDATE abcde SET a = 1" does not return any columns

# Non-referenced CTE with mutation.
build
WITH cte AS (SELECT b FROM [UPDATE abcde SET a=b RETURNING *]) UPDATE abcde SET a=b
----
with &1
 ├── project
 │    ├── columns: abcde.a:1!null abcde.b:2 abcde.c:3 abcde.d:4 abcde.e:5
 │    └── update abcde
 │         ├── columns: abcde.a:1!null abcde.b:2 abcde.c:3 abcde.d:4 abcde.e:5 rowid:6!null
 │         ├── fetch columns: abcde.a:8 abcde.b:9 abcde.c:10 abcde.d:11 abcde.e:12 rowid:13
 │         ├── update-mapping:
 │         │    ├── abcde.b:9 => abcde.a:1
 │         │    ├── d:15 => abcde.d:4
 │         │    └── abcde.b:9 => abcde.e:5
 │         └── project
 │              ├── columns: d:15 abcde.a:8!null abcde.b:9 abcde.c:10 abcde.d:11 abcde.e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
 │              ├── scan abcde
 │              │    ├── columns: abcde.a:8!null abcde.b:9 abcde.c:10 abcde.d:11 abcde.e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
 │              │    └── computed column expressions
 │              │         ├── abcde.d:11
 │              │         │    └── (abcde.b:9 + abcde.c:10) + 1
 │              │         └── abcde.e:12
 │              │              └── abcde.a:8
 │              └── projections
 │                   └── (abcde.b:9 + abcde.c:10) + 1 [as=d:15]
 └── with &2 (cte)
      ├── project
      │    ├── columns: b:17
      │    └── with-scan &1
      │         ├── columns: a:16!null b:17 c:18 d:19 e:20
      │         └── mapping:
      │              ├──  abcde.a:1 => a:16
      │              ├──  abcde.b:2 => b:17
      │              ├──  abcde.c:3 => c:18
      │              ├──  abcde.d:4 => d:19
      │              └──  abcde.e:5 => e:20
      └── update abcde
           ├── columns: <none>
           ├── fetch columns: abcde.a:28 abcde.b:29 abcde.c:30 abcde.d:31 abcde.e:32 rowid:33
           ├── update-mapping:
           │    ├── abcde.b:29 => abcde.a:21
           │    ├── d:35 => abcde.d:24
           │    └── abcde.b:29 => abcde.e:25
           └── project
                ├── columns: d:35 abcde.a:28!null abcde.b:29 abcde.c:30 abcde.d:31 abcde.e:32 rowid:33!null crdb_internal_mvcc_timestamp:34
                ├── scan abcde
                │    ├── columns: abcde.a:28!null abcde.b:29 abcde.c:30 abcde.d:31 abcde.e:32 rowid:33!null crdb_internal_mvcc_timestamp:34
                │    └── computed column expressions
                │         ├── abcde.d:31
                │         │    └── (abcde.b:29 + abcde.c:30) + 1
                │         └── abcde.e:32
                │              └── abcde.a:28
                └── projections
                     └── (abcde.b:29 + abcde.c:30) + 1 [as=d:35]

# With alias, original table name should be inaccessible.
build
UPDATE abcde AS foo SET a=abcde.b
----
error (42P01): no data source matches prefix: abcde in this context

# ORDER BY can only be used with LIMIT.
build
UPDATE abcde SET b=1 ORDER BY c
----
error (42601): UPDATE statement requires LIMIT when ORDER BY is used

# ------------------------------------------------------------------------------
# Test RETURNING.
# ------------------------------------------------------------------------------

# Return values from update.
build
UPDATE abcde SET a=2 WHERE a=1 RETURNING *
----
project
 ├── columns: a:1!null b:2 c:3 d:4 e:5!null
 └── update abcde
      ├── columns: abcde.a:1!null b:2 c:3 abcde.d:4 e:5!null rowid:6!null
      ├── fetch columns: abcde.a:8 b:9 c:10 abcde.d:11 e:12 rowid:13
      ├── update-mapping:
      │    ├── a:15 => abcde.a:1
      │    └── a:15 => e:5
      └── project
           ├── columns: d:16 abcde.a:8!null b:9 c:10 abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14 a:15!null
           ├── project
           │    ├── columns: a:15!null abcde.a:8!null b:9 c:10 abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
           │    ├── select
           │    │    ├── columns: abcde.a:8!null b:9 c:10 abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
           │    │    ├── scan abcde
           │    │    │    ├── columns: abcde.a:8!null b:9 c:10 abcde.d:11 e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
           │    │    │    └── computed column expressions
           │    │    │         ├── abcde.d:11
           │    │    │         │    └── (b:9 + c:10) + 1
           │    │    │         └── e:12
           │    │    │              └── abcde.a:8
           │    │    └── filters
           │    │         └── abcde.a:8 = 1
           │    └── projections
           │         └── 2 [as=a:15]
           └── projections
                └── (b:9 + c:10) + 1 [as=d:16]

# Return values from aliased table.
