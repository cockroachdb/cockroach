# Use CTE within WHERE clause.
build
WITH cte AS (SELECT x FROM xyz) UPDATE abcde SET a=b WHERE EXISTS(SELECT * FROM cte)
----
with &1 (cte)
 ├── project
 │    ├── columns: xyz.x:1!null
 │    └── scan xyz
 │         └── columns: xyz.x:1!null y:2 z:3 xyz.crdb_internal_mvcc_timestamp:4
 └── update abcde
      ├── columns: <none>
      ├── fetch columns: a:12 b:13 c:14 abcde.d:15 e:16 rowid:17
      ├── update-mapping:
      │    ├── b:13 => a:5
      │    ├── d:20 => abcde.d:8
      │    └── b:13 => e:9
      └── project
           ├── columns: d:20 a:12!null b:13 c:14 abcde.d:15 e:16 rowid:17!null abcde.crdb_internal_mvcc_timestamp:18
           ├── select
           │    ├── columns: a:12!null b:13 c:14 abcde.d:15 e:16 rowid:17!null abcde.crdb_internal_mvcc_timestamp:18
           │    ├── scan abcde
           │    │    ├── columns: a:12!null b:13 c:14 abcde.d:15 e:16 rowid:17!null abcde.crdb_internal_mvcc_timestamp:18
           │    │    └── computed column expressions
           │    │         ├── abcde.d:15
           │    │         │    └── (b:13 + c:14) + 1
           │    │         └── e:16
           │    │              └── a:12
           │    └── filters
           │         └── exists
           │              └── with-scan &1 (cte)
           │                   ├── columns: x:19!null
           │                   └── mapping:
           │                        └──  xyz.x:1 => x:19
           └── projections
                └── (b:13 + c:14) + 1 [as=d:20]

