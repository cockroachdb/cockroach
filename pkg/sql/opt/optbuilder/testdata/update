 └── project
      ├── columns: d:22 a:8!null b:9 c:10 abcde.d:11 e:12 rowid:13!null abcde.crdb_internal_mvcc_timestamp:14 y:16 y1:19 one:20 two:21
      ├── left-join-apply
      │    ├── columns: a:8!null b:9 c:10 abcde.d:11 e:12 rowid:13!null abcde.crdb_internal_mvcc_timestamp:14 y:16 y1:19 one:20 two:21
      │    ├── left-join-apply
      │    │    ├── columns: a:8!null b:9 c:10 abcde.d:11 e:12 rowid:13!null abcde.crdb_internal_mvcc_timestamp:14 y:16 y1:19
      │    │    ├── scan abcde
      │    │    │    ├── columns: a:8!null b:9 c:10 abcde.d:11 e:12 rowid:13!null abcde.crdb_internal_mvcc_timestamp:14
      │    │    │    └── computed column expressions
      │    │    │         ├── abcde.d:11
      │    │    │         │    └── (b:9 + c:10) + 1
      │    │    │         └── e:12
      │    │    │              └── a:8
      │    │    ├── max1-row
      │    │    │    ├── columns: y:16 y1:19
      │    │    │    └── project
      │    │    │         ├── columns: y1:19 y:16
      │    │    │         ├── scan xyz
      │    │    │         │    └── columns: x:15!null y:16 z:17 xyz.crdb_internal_mvcc_timestamp:18
      │    │    │         └── projections
