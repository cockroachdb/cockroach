      │    └── y1:21 => b:7
      └── project
           ├── columns: d:22 a:13!null b:14 c:15 abcde.d:16 e:17 rowid:18!null abcde.crdb_internal_mvcc_timestamp:19 y:20 y1:21
           ├── left-join-apply
           │    ├── columns: a:13!null b:14 c:15 abcde.d:16 e:17 rowid:18!null abcde.crdb_internal_mvcc_timestamp:19 y:20 y1:21
           │    ├── scan abcde
           │    │    ├── columns: a:13!null b:14 c:15 abcde.d:16 e:17 rowid:18!null abcde.crdb_internal_mvcc_timestamp:19
           │    │    └── computed column expressions
           │    │         ├── abcde.d:16
           │    │         │    └── (b:14 + c:15) + 1
           │    │         └── e:17
           │    │              └── a:13
           │    ├── max1-row
