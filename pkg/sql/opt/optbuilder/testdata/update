      ├── project
      │    ├── columns: a:20!null b:21!null abcde.a:8!null abcde.b:9 c:10 abcde.d:11 e:12 rowid:13!null abcde.crdb_internal_mvcc_timestamp:14 y:16 y1:19
      │    ├── left-join-apply
      │    │    ├── columns: abcde.a:8!null abcde.b:9 c:10 abcde.d:11 e:12 rowid:13!null abcde.crdb_internal_mvcc_timestamp:14 y:16 y1:19
      │    │    ├── scan abcde
      │    │    │    ├── columns: abcde.a:8!null abcde.b:9 c:10 abcde.d:11 e:12 rowid:13!null abcde.crdb_internal_mvcc_timestamp:14
      │    │    │    └── computed column expressions
      │    │    │         ├── abcde.d:11
