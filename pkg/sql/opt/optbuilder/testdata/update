      │    │    │         └── projections
      │    │    │              └── plus [type=int]
      │    │    │                   ├── variable: y [type=int]
      │    │    │                   └── const: 1 [type=int]
      │    │    └── filters (true)
      │    └── projections
      │         ├── const: 1 [type=int]
      │         └── const: 2 [type=int]
      └── projections
           └── plus [type=int]
                ├── plus [type=int]
                │    ├── variable: y1 [type=int]
                │    └── variable: column17 [type=int]
                └── const: 1 [type=int]

# Use subquery SET expression after other expressions.
