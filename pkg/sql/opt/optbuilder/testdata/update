 │    ├── d:22 => abcde.d:4
 │    └── rowid:21 => abcde.rowid:6
 └── project
      ├── columns: d:22 a:8!null b:9 abcde.c:10 abcde.d:11 e:12 abcde.rowid:13!null abcde.crdb_internal_mvcc_timestamp:14 y:16 y1:19 c:20!null rowid:21!null
      ├── project
      │    ├── columns: c:20!null rowid:21!null a:8!null b:9 abcde.c:10 abcde.d:11 e:12 abcde.rowid:13!null abcde.crdb_internal_mvcc_timestamp:14 y:16 y1:19
      │    ├── left-join-apply
      │    │    ├── columns: a:8!null b:9 abcde.c:10 abcde.d:11 e:12 abcde.rowid:13!null abcde.crdb_internal_mvcc_timestamp:14 y:16 y1:19
      │    │    ├── scan abcde
      │    │    │    ├── columns: a:8!null b:9 abcde.c:10 abcde.d:11 e:12 abcde.rowid:13!null abcde.crdb_internal_mvcc_timestamp:14
      │    │    │    └── computed column expressions
      │    │    │         ├── abcde.d:11
      │    │    │         │    └── (b:9 + abcde.c:10) + 1
      │    │    │         └── e:12
      │    │    │              └── a:8
