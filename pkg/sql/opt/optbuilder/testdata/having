 │    │    ├── project
 │    │    │    ├── columns: column5:5(int)
 │    │    │    ├── scan kv
 │    │    │    │    └── columns: kv.k:1(int!null) kv.v:2(int) kv.w:3(int) kv.s:4(string)
 │    │    │    └── projections
 │    │    │         └── plus [type=int]
 │    │    │              ├── variable: kv.k [type=int]
