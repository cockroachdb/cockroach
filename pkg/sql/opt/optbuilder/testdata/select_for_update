      │    ├── columns: t2.a:1!null b:2 t2.crdb_internal_mvcc_timestamp:3
      │    └── locking: for-update
      ├── scan u [as=u2]
      │    └── columns: u2.a:4!null c:5 u2.crdb_internal_mvcc_timestamp:6
      └── filters
           └── t2.a:1 = u2.a:4

