 │    └── projections
 │         └── 3 [as=d_new:13]
 └── f-k-checks
      └── f-k-checks-item: fam(c,d) -> two(a,b)
           └── anti-join (hash)
                ├── columns: c:14!null d_new:15!null
                ├── select
                │    ├── columns: c:14!null d_new:15!null
                │    ├── with-scan &1
                │    │    ├── columns: c:14 d_new:15!null
                │    │    └── mapping:
                │    │         ├──  fam.c:9 => c:14
                │    │         └──  d_new:13 => d_new:15
                │    └── filters
                │         └── c:14 IS NOT NULL
                ├── scan two
                │    └── columns: two.a:16!null two.b:17!null
                └── filters
                     ├── c:14 = two.a:16
                     └── d_new:15 = two.b:17
