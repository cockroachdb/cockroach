 ├── fk-fallback
 └── project
      ├── columns: column7:7!null x:4 parent.p:5!null other:6
      ├── scan parent
      │    └── columns: x:4 parent.p:5!null other:6
      └── projections
           └── parent.p:5 + 1 [as=column7:7]
