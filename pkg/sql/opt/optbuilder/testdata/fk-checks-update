exec-ddl
CREATE TABLE child_cascade (c INT PRIMARY KEY, p INT NOT NULL REFERENCES parent(p) ON UPDATE CASCADE)
----

# Fall back to the exec-style checks in the presence of CASCADE.
build
UPDATE parent SET p = p+1
----
