 │         └── limit
 │              ├── columns: abcde.a:8!null abcde.b:9 abcde.c:10 abcde.d:11 abcde.e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
 │              ├── internal-ordering: +9
 │              ├── sort
 │              │    ├── columns: abcde.a:8!null abcde.b:9 abcde.c:10 abcde.d:11 abcde.e:12 rowid:13!null crdb_internal_mvcc_timestamp:14
 │              │    ├── ordering: +9
 │              │    ├── limit hint: 10.00
 │              │    └── select
