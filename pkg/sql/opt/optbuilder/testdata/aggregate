      ├── max [type=string]
      │    └── variable: a [type=string]
      ├── max [type=float]
      │    └── variable: b [type=float]
      ├── max [type=bool]
      │    └── variable: c [type=bool]
      └── max [type=decimal]
           └── variable: d [type=decimal]

build
