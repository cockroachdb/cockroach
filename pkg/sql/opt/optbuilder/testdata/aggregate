 ├── columns: count:5(int) s:4(string)
 ├── grouping columns: s:4(string)
 ├── project
 │    ├── columns: s:4(string)
 │    └── scan kv
 │         └── columns: k:1(int!null) v:2(int) w:3(int) s:4(string)
 └── aggregations
      └── count-rows [type=int]

build
