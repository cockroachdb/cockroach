CREATE TABLE boolean_table (
  id INTEGER PRIMARY KEY NOT NULL,
  value BOOLEAN
)
----

build
SELECT value FROM boolean_table
----
project
 ├── columns: value:2(bool)
 └── scan boolean_table
      └── columns: id:1(int!null) value:2(bool)

