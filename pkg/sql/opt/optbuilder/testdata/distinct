# tests adapted from logictest -- aggregate and distinct

exec-ddl
CREATE TABLE xyz (
  x INT PRIMARY KEY,
  y INT,
  z FLOAT,
  INDEX xy (x, y),
  INDEX zyx (z, y, x),
  FAMILY (x),
  FAMILY (y),
  FAMILY (z)
)
----

build
SELECT y, z FROM xyz
----
project
 ├── columns: y:2 z:3
 └── scan xyz
      └── columns: x:1!null y:2 z:3

build
SELECT DISTINCT y, z FROM xyz
----
distinct-on
 ├── columns: y:2 z:3
 ├── grouping columns: y:2 z:3
 └── project
      ├── columns: y:2 z:3
      └── scan xyz
           └── columns: x:1!null y:2 z:3

build
SELECT y FROM (SELECT DISTINCT y, z FROM xyz)
----
project
 ├── columns: y:2
 └── distinct-on
      ├── columns: y:2 z:3
      ├── grouping columns: y:2 z:3
      └── project
           ├── columns: y:2 z:3
           └── scan xyz
                └── columns: x:1!null y:2 z:3

build
SELECT DISTINCT y, z FROM xyz ORDER BY z
----
distinct-on
 ├── columns: y:2 z:3
 ├── grouping columns: y:2 z:3
 ├── ordering: +3
 └── sort
      ├── columns: y:2 z:3
      ├── ordering: +3
      └── project
           ├── columns: y:2 z:3
           └── scan xyz
                └── columns: x:1!null y:2 z:3

build
SELECT DISTINCT y, z FROM xyz ORDER BY y
----
distinct-on
 ├── columns: y:2 z:3
 ├── grouping columns: y:2 z:3
 ├── ordering: +2
 └── sort
      ├── columns: y:2 z:3
      ├── ordering: +2
      └── project
           ├── columns: y:2 z:3
           └── scan xyz
                └── columns: x:1!null y:2 z:3

build
SELECT DISTINCT y, z FROM xyz ORDER BY y, z
----
distinct-on
 ├── columns: y:2 z:3
 ├── grouping columns: y:2 z:3
 ├── ordering: +2,+3
 └── sort
      ├── columns: y:2 z:3
      ├── ordering: +2,+3
      └── project
           ├── columns: y:2 z:3
           └── scan xyz
                └── columns: x:1!null y:2 z:3

build
SELECT DISTINCT y + x AS r FROM xyz ORDER by (y + x)
----
distinct-on
 ├── columns: r:4
 ├── grouping columns: r:4
 ├── ordering: +4
 └── sort
      ├── columns: r:4
      ├── ordering: +4
      └── project
           ├── columns: r:4
           ├── scan xyz
           │    └── columns: x:1!null y:2 z:3
           └── projections
                └── y:2 + x:1 [as=r:4]

build
SELECT DISTINCT y + x AS r FROM xyz ORDER BY y + x
----
distinct-on
 ├── columns: r:4
 ├── grouping columns: r:4
 ├── ordering: +4
 └── sort
      ├── columns: r:4
      ├── ordering: +4
      └── project
           ├── columns: r:4
           ├── scan xyz
           │    └── columns: x:1!null y:2 z:3
           └── projections
                └── y:2 + x:1 [as=r:4]

build
SELECT DISTINCT y + z FROM xyz ORDER BY y + z
----
error (22023): unsupported binary operator: <int> + <float>

# This query causes an error in Postgres, and the optimizer has followed
# that lead. However, it is supported by the heuristic planner in CockroachDB
# with the semantics:
#   SELECT y AS w FROM t GROUP BY y ORDER BY min(z);
build
SELECT DISTINCT y AS w FROM xyz ORDER by z
----
error (42P10): for SELECT DISTINCT, ORDER BY expressions must appear in select list

build
SELECT DISTINCT y AS w FROM xyz ORDER by y
----
sort
 ├── columns: w:2
 ├── ordering: +2
 └── distinct-on
      ├── columns: y:2
      ├── grouping columns: y:2
      └── project
           ├── columns: y:2
           └── scan xyz
                └── columns: x:1!null y:2 z:3

build
SELECT DISTINCT (y,z) AS r FROM xyz
----
distinct-on
 ├── columns: r:4
 ├── grouping columns: r:4
 └── project
      ├── columns: r:4
      ├── scan xyz
      │    └── columns: x:1!null y:2 z:3
      └── projections
           └── (y:2, z:3) [as=r:4]

build
SELECT count(*) FROM (SELECT DISTINCT y FROM xyz)
----
scalar-group-by
 ├── columns: count:4!null
 ├── project
 │    └── distinct-on
 │         ├── columns: y:2
 │         ├── grouping columns: y:2
 │         └── project
 │              ├── columns: y:2
 │              └── scan xyz
 │                   └── columns: x:1!null y:2 z:3
 └── aggregations
      └── count-rows [as=count_rows:4]

build
SELECT DISTINCT x FROM xyz WHERE x > 0
----
distinct-on
 ├── columns: x:1!null
 ├── grouping columns: x:1!null
 └── project
      ├── columns: x:1!null
      └── select
           ├── columns: x:1!null y:2 z:3
           ├── scan xyz
           │    └── columns: x:1!null y:2 z:3
           └── filters
                └── x:1 > 0

build
SELECT DISTINCT z FROM xyz WHERE x > 0
----
distinct-on
 ├── columns: z:3
 ├── grouping columns: z:3
 └── project
      ├── columns: z:3
      └── select
           ├── columns: x:1!null y:2 z:3
           ├── scan xyz
           │    └── columns: x:1!null y:2 z:3
           └── filters
                └── x:1 > 0

build
SELECT DISTINCT max(x) FROM xyz GROUP BY x
----
distinct-on
 ├── columns: max:4!null
 ├── grouping columns: max:4!null
 └── project
      ├── columns: max:4!null
      └── group-by
           ├── columns: x:1!null max:4!null
           ├── grouping columns: x:1!null
           ├── project
           │    ├── columns: x:1!null
           │    └── scan xyz
           │         └── columns: x:1!null y:2 z:3
           └── aggregations
                └── max [as=max:4]
                     └── x:1

build
SELECT DISTINCT x+y AS r FROM xyz
----
distinct-on
 ├── columns: r:4
 ├── grouping columns: r:4
 └── project
      ├── columns: r:4
      ├── scan xyz
      │    └── columns: x:1!null y:2 z:3
      └── projections
           └── x:1 + y:2 [as=r:4]

build
SELECT DISTINCT 3 r FROM xyz
----
distinct-on
 ├── columns: r:4!null
 ├── grouping columns: r:4!null
 └── project
      ├── columns: r:4!null
      ├── scan xyz
      │    └── columns: x:1!null y:2 z:3
      └── projections
           └── 3 [as=r:4]

build
SELECT DISTINCT 3 r
----
distinct-on
 ├── columns: r:1!null
 ├── grouping columns: r:1!null
 └── project
      ├── columns: r:1!null
      ├── values
      │    └── ()
      └── projections
           └── 3 [as=r:1]

build
SELECT DISTINCT max(z), x+y AS r, 3 AS s FROM xyz GROUP BY x, y HAVING y > 4
----
distinct-on
 ├── columns: max:4 r:5!null s:6!null
 ├── grouping columns: max:4 r:5!null s:6!null
 └── project
      ├── columns: r:5!null s:6!null max:4
      ├── select
      │    ├── columns: x:1!null y:2!null max:4
      │    ├── group-by
      │    │    ├── columns: x:1!null y:2 max:4
      │    │    ├── grouping columns: x:1!null y:2
      │    │    ├── scan xyz
      │    │    │    └── columns: x:1!null y:2 z:3
      │    │    └── aggregations
      │    │         └── max [as=max:4]
      │    │              └── z:3
      │    └── filters
      │         └── y:2 > 4
      └── projections
           ├── x:1 + y:2 [as=r:5]
           └── 3 [as=s:6]

exec-ddl
CREATE TABLE abcd (
  a INT,
  b INT,
  c INT,
  d INT NOT NULL,
  PRIMARY KEY (a, b, c),
  UNIQUE INDEX (d, b)
)
----

build
SELECT DISTINCT 1 AS x, d, b FROM abcd ORDER BY d, b
----
distinct-on
 ├── columns: x:5!null d:4!null b:2!null
 ├── grouping columns: b:2!null d:4!null x:5!null
 ├── ordering: +4,+2
 └── sort
      ├── columns: b:2!null d:4!null x:5!null
      ├── ordering: +4,+2 opt(5)
      └── project
           ├── columns: x:5!null b:2!null d:4!null
           ├── scan abcd
           │    └── columns: a:1!null b:2!null c:3!null d:4!null
           └── projections
                └── 1 [as=x:5]
