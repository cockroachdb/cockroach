----
sort
 ├── columns: x:1(string)
 ├── ordering: +1
 └── values
      ├── columns: column1:1(string)
      ├── tuple [type=tuple{string}]
      │    └── const: 'a' [type=string]
      ├── tuple [type=tuple{string}]
      │    └── const: 'b' [type=string]
      └── tuple [type=tuple{string}]
           └── const: 'c' [type=string]

build
