 ├── columns: b:2  [hidden: a:1!null]
 ├── ordering: -1,-2
 └── scan t,rev
      ├── columns: a:1!null b:2 c:3 crdb_internal_mvcc_timestamp:4 tableoid:5
      └── ordering: -1

# both presentation and ordering
build
SELECT a, b, b FROM t ORDER BY c
----
