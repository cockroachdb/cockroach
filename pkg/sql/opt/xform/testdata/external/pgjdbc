exec-ddl
CREATE TABLE pg_namespace (
    oid OID NULL,
    nspname NAME NOT NULL,
    nspowner OID NULL,
    nspacl STRING[] NULL
)
----
TABLE pg_namespace
 ├── oid oid
 ├── nspname name not null
 ├── nspowner oid
 ├── nspacl string[]
 ├── rowid int not null (hidden)
 └── INDEX primary
      └── rowid int not null (hidden)

opt
SELECT
    NULL AS type_cat,
    n.nspname AS type_schem,
    t.typname AS type_name,
    NULL AS class_name,
    CASE
    WHEN t.typtype = 'c' THEN 'STRUCT'
    ELSE 'DISTINCT'
    END
        AS data_type,
    pg_catalog.obj_description(t.oid, 'pg_type') AS remarks,
    CASE
    WHEN t.typtype = 'd'
    THEN (
        SELECT
            CASE
            WHEN typname = 'pgType' THEN 'sqlType'
            ELSE 'OTHER'
            END
        FROM
            pg_type
        WHERE
            oid = t.typbasetype
    )
    ELSE NULL
    END
        AS base_type
FROM
    pg_type AS t, pg_namespace AS n
WHERE
    t.typnamespace = n.oid AND n.nspname != 'pg_catalog';
----
