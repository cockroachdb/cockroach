CREATE TABLE pg_attrdef (
    oid oid PRIMARY KEY,
    adrelid oid NOT NULL,
    adnum bigint NOT NULL,
    adbin text,
    adsrc text,
    UNIQUE INDEX pg_attrdef_adrelid_adnum_index (adrelid, adnum)
);
----
TABLE pg_attrdef
 ├── oid oid not null
 ├── adrelid oid not null
 ├── adnum int not null
 ├── adbin string
 ├── adsrc string
 ├── INDEX primary
 │    └── oid oid not null
 └── INDEX pg_attrdef_adrelid_adnum_index
      ├── adrelid oid not null
      ├── adnum int not null
      └── oid oid not null (storing)

