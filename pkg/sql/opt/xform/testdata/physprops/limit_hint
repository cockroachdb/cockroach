 ├── columns: x:1!null y:2 z:3!null
 ├── cardinality: [0 - 10]
 ├── key: (1)
 ├── fd: ()-->(3), (1)-->(2)
 ├── select
 │    ├── columns: x:1!null y:2 z:3!null
 │    ├── key: (1)
 │    ├── fd: ()-->(3), (1)-->(2)
 │    ├── limit hint: 10.00
 │    ├── scan t
 │    │    ├── columns: x:1!null y:2 z:3
 │    │    ├── key: (1)
 │    │    ├── fd: (1)-->(2,3)
 │    │    └── limit hint: 50.00
 │    └── filters
 │         └── z:3 = 1 [outer=(3), fd=()-->(3)]
 └── 10

# DistinctOn operator.
