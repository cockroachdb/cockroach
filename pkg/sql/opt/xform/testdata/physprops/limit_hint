 ├── columns: c0:1
 ├── cardinality: [0 - 0]
 ├── immutable
 ├── key: ()
 ├── fd: ()-->(1)
 ├── distinct-on
 │    ├── columns: c0:1
 │    ├── grouping columns: c0:1
 │    ├── cardinality: [0 - 0]
 │    ├── immutable
 │    ├── key: (1)
 │    ├── limit hint: 1.00
