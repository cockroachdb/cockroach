# IndexJoin operator.
opt
SELECT z FROM t@y_idx WITH ORDINALITY ORDER BY ordinality LIMIT 10
----
limit
 ├── columns: z:3  [hidden: ordinality:4!null]
 ├── internal-ordering: +4
 ├── cardinality: [0 - 10]
 ├── key: (4)
 ├── fd: (4)-->(3)
 ├── ordering: +4
 ├── ordinality
 │    ├── columns: z:3 ordinality:4!null
 │    ├── key: (4)
 │    ├── fd: (4)-->(3)
 │    ├── ordering: +4
 │    ├── limit hint: 10.00
 │    └── index-join t
 │         ├── columns: z:3
 │         ├── limit hint: 10.00
 │         └── scan t@y_idx
 │              ├── columns: x:1!null
 │              ├── flags: force-index=y_idx
 │              ├── key: (1)
 │              └── limit hint: 10.00
 └── 10

