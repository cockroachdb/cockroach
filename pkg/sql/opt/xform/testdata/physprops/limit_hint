 │    ├── key: (3)
 │    ├── limit hint: 1.00
 │    └── scan t
 │         ├── columns: z:3
 │         └── limit hint: 1.23
 └── 1

# No limit hint propagation if number of distinct rows < required number of rows.
opt
SELECT DISTINCT z FROM t LIMIT 10
