 ├── cardinality: [0 - 10]
 ├── key: (6)
 ├── fd: (6)-->(3)
 ├── ordering: +6
 ├── ordinality
 │    ├── columns: z:3 ordinality:6!null
 │    ├── key: (6)
 │    ├── fd: (6)-->(3)
 │    ├── ordering: +6
