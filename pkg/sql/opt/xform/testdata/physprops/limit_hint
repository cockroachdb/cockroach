 ├── ordering: +5 opt(4) [actual: +5]
 ├── ordinality
 │    ├── columns: "?column?":4!null ordinality:5!null
 │    ├── key: (5)
 │    ├── fd: ()-->(4)
 │    ├── ordering: +5 opt(4) [actual: +5]
 │    ├── limit hint: 10.00
 │    └── project
 │         ├── columns: "?column?":4!null
 │         ├── fd: ()-->(4)
 │         ├── limit hint: 10.00
 │         ├── scan t@y_idx
 │         │    └── limit hint: 10.00
 │         └── projections
 │              └── 1 [as="?column?":4]
 └── 10

