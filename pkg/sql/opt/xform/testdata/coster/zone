# We should prefer locality optimized anti join (a pair of nested anti joins).
opt locality=(region=east,dc=a)
SELECT * FROM abc_part AS a1 WHERE NOT EXISTS (
  SELECT * FROM abc_part AS a2 WHERE a1.a = a2.b
) AND b = 1 AND c = 'foo'
