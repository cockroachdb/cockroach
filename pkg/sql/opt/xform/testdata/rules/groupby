                     │                        └── const-agg [as=min:14, outer=(31)]
                     │                             └── x:31
                     └── projections
                          └── (max:13, min:14) [as=column15:15, outer=(13,14)]

# --------------------------------------------------
# ReplaceFilteredScalarMinMaxWithSubqueries
# --------------------------------------------------

