      ├── internal-ordering: +2
      ├── key: (2)
      ├── fd: (2)-->(6)
      ├── scan xyz@yy
      │    ├── columns: y:2
      │    └── ordering: +2
      └── aggregations
           └── max [as=max:6, outer=(2)]
                └── y:2

