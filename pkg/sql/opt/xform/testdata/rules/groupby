 ├── columns: min:7!null min:8!null
 ├── cardinality: [0 - 1]
 ├── key: ()
 ├── fd: ()-->(7,8)
 ├── scan kuvw@vw
 │    ├── columns: k:1!null v:3!null w:4!null
 │    ├── constraint: /3/4/1: (/5/NULL - /5]
 │    ├── key: (1)
 │    └── fd: ()-->(3), (1)-->(4)
 └── aggregations
      ├── min [as=min:7, outer=(4)]
      │    └── w:4
      └── min [as=min:8, outer=(1)]
           └── k:1

# ReplaceMaxWithLimit does not apply on multiple aggregations
