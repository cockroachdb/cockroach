      │         ├── fd: ()-->(6)
      │         ├── scan xyz@yy,rev
      │         │    ├── columns: y:9!null
      │         │    ├── constraint: /9/8: (/NULL - ]
      │         │    ├── limit: 1(rev)
      │         │    ├── key: ()
      │         │    └── fd: ()-->(9)
