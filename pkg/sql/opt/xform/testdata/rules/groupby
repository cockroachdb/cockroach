      │    │    ├── columns: x:13!null y:14 z:15
      │    │    ├── key: (13)
      │    │    ├── fd: (13)-->(14,15)
      │    │    └── ordering: +13
      │    ├── ensure-upsert-distinct-on
      │    │    ├── columns: a:6 b:7
      │    │    ├── grouping columns: a:6
      │    │    ├── error: "UPSERT or INSERT...ON CONFLICT command cannot affect row a second time"
      │    │    ├── lax-key: (6)
