# Force an index in order to ensure that an index join is created.
opt
SELECT * FROM a@si_idx
----
index-join a
 ├── columns: k:1!null i:2 f:3 s:4 j:5
 ├── key: (1)
 ├── fd: (1)-->(2-5)
 └── scan a@si_idx
      ├── columns: k:1!null i:2 s:4 j:5
      ├── flags: force-index=si_idx
      ├── key: (1)
      └── fd: (1)-->(2,4,5)

exec-ddl
CREATE TABLE abc (
  a INT,
  b INT,
  c INT,
  d CHAR,
  PRIMARY KEY (a, b, c),
  UNIQUE INDEX bc (b, c),
  INDEX ba (b, a),
  FAMILY (a, b, c),
  FAMILY (d)
)
----

memo
SELECT d FROM abc ORDER BY lower(d)
----
memo (optimized, ~3KB, required=[presentation: d:4] [ordering: +5])
 ├── G1: (project G2 G3 d)
 │    ├── [presentation: d:4] [ordering: +5]
 │    │    ├── best: (sort G1)
 │    │    └── cost: 1289.36
 │    └── []
 │         ├── best: (project G2 G3 d)
 │         └── cost: 1070.03
 ├── G2: (scan abc,cols=(4))
 │    └── []
 │         ├── best: (scan abc,cols=(4))
 │         └── cost: 1050.02
 ├── G3: (projections G4)
 ├── G4: (function G5 lower)
 ├── G5: (scalar-list G6)
 └── G6: (variable d)

