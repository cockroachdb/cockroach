 │    └── scan b@v
 │         ├── columns: k:1(int!null) v:3(int)
 │         ├── constraint: /3: [/1 - /1]
 │         └── keys: (1) weak(3)
 └── filters [type=bool, outer=(1,2)]
      └── eq [type=bool, outer=(1,2)]
           ├── plus [type=int, outer=(1,2)]
           │    ├── variable: b.k [type=int, outer=(1)]
           │    └── variable: b.u [type=int, outer=(2)]
           └── const: 1 [type=int]

