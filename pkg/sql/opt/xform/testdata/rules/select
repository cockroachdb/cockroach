      │    ├── constraint: /2/1: [/1 - /1]
      │    └── keys: (1)
      └── filters [type=bool, outer=(1,2)]
           └── eq [type=bool, outer=(1,2)]
                ├── plus [type=int, outer=(1,2)]
                │    ├── variable: a.k [type=int, outer=(1)]
                │    └── variable: a.u [type=int, outer=(2)]
