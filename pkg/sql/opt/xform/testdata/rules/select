exec-ddl
CREATE TABLE a
(
    k INT PRIMARY KEY,
    u INT,
    v INT,
    INDEX u(u) STORING (v),
    UNIQUE INDEX v(v) STORING (u)
)
----
TABLE a
 ├── k int not null
 ├── u int
 ├── v int
 ├── INDEX primary
 │    └── k int not null
 ├── INDEX u
 │    ├── u int
 │    ├── k int not null
 │    └── v int (storing)
 └── INDEX v
      ├── v int
      ├── k int not null (storing)
      └── u int (storing)

# --------------------------------------------------
# ConstrainScan
# --------------------------------------------------

opt
SELECT k FROM a WHERE k = 1
----
scan a
 ├── columns: k:1(int!null)
 └── constraint: /1: [/1 - /1]

memo
SELECT k FROM a WHERE k = 1
----
[9: "p:k:1"]
memo
 ├── 10: (true)
 ├── 9: (select 8 5) (scan a,constrained)
 │    └── "p:k:1" [cost=100.00]
 │         └── best: (scan a,constrained)
 ├── 8: (scan a) (scan a@u) (scan a@v)
 │    └── "" [cost=1000.00]
 │         └── best: (scan a)
 ├── 7: (projections 2)
 ├── 6: (select 1 5)
 ├── 5: (filters 4)
 ├── 4: (eq 2 3)
 ├── 3: (const 1)
 ├── 2: (variable a.k)
 └── 1: (scan a)

opt
SELECT k FROM a WHERE v > 1
----
project
 ├── columns: k:1(int!null)
 ├── scan a@v
 │    ├── columns: a.k:1(int!null) a.v:3(int)
 │    └── constraint: /3: [/2 - ]
 └── projections [outer=(1)]
      └── variable: a.k [type=int, outer=(1)]

memo
SELECT k FROM a WHERE v > 1
----
[11: "p:k:1"]
memo
 ├── 12: (true)
 ├── 11: (project 10 8)
 │    └── "p:k:1" [cost=100.00]
 │         └── best: (project 10 8)
 ├── 10: (select 9 5) (scan a@v,constrained)
 │    └── "" [cost=100.00]
 │         └── best: (scan a@v,constrained)
 ├── 9: (scan a) (scan a@u) (scan a@v)
 │    └── "" [cost=1000.00]
 │         └── best: (scan a)
 ├── 8: (projections 7)
 ├── 7: (variable a.k)
 ├── 6: (select 1 5)
 ├── 5: (filters 4)
