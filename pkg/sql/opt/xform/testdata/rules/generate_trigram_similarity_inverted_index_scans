exec-ddl
CREATE TABLE trgm (
    k INT PRIMARY KEY,
    i INT NOT NULL,
    j INT,
    s STRING,
    CHECK (i IN (1, 2, 3)),
    INVERTED INDEX s_idx (s gin_trgm_ops),
    INVERTED INDEX i_j_s_idx (i, j, s gin_trgm_ops)
)
----

opt expect=GenerateTrigramSimilarityInvertedIndexScans set=(optimizer_use_trigram_similarity_optimization=on)
SELECT k FROM trgm WHERE s % 'foo'
----
project
 ├── columns: k:1!null
 ├── stable
 ├── key: (1)
 └── select
      ├── columns: k:1!null s:4
      ├── stable
      ├── key: (1)
      ├── fd: (1)-->(4)
      ├── index-join trgm
      │    ├── columns: k:1!null s:4
      │    ├── key: (1)
      │    ├── fd: (1)-->(4)
      │    └── distinct-on
      │         ├── columns: k:1!null
      │         ├── grouping columns: k:1!null
      │         ├── key: (1)
      │         └── scan trgm@s_idx
      │              ├── columns: k:1!null
      │              └── constraint: /7
      │                   ├── [/'\x1220666f0001' - /'\x1220666f0001']
      │                   ├── [/'\x12666f6f0001' - /'\x12666f6f0001']
      │                   └── [/'\x126f6f200001' - /'\x126f6f200001']
      └── filters
           └── s:4 % 'foo' [outer=(4), stable]

