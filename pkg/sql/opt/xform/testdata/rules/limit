# --------------------------------------------------
# PushLimitIntoOffset + GenerateLimitedScans
# --------------------------------------------------

# Regression testing for #30416.
# The limit is pushed down the offset and so an appropriate index scan is used
# over a primary key scan.
opt
SELECT * from a ORDER BY s LIMIT 10 OFFSET 10
----
offset
 ├── columns: k:1!null i:2 f:3 s:4 j:5
 ├── internal-ordering: +4
 ├── cardinality: [0 - 10]
 ├── key: (1)
 ├── fd: (1)-->(2-5)
 ├── ordering: +4
 ├── index-join a
 │    ├── columns: k:1!null i:2 f:3 s:4 j:5
 │    ├── cardinality: [0 - 20]
 │    ├── key: (1)
 │    ├── fd: (1)-->(2-5)
 │    ├── ordering: +4
 │    └── scan a@s_idx
 │         ├── columns: k:1!null i:2 f:3 s:4
 │         ├── limit: 20
 │         ├── key: (1)
 │         ├── fd: (1)-->(2-4)
 │         └── ordering: +4
 └── 10

# The right index is used for the limited scan based on the order.
opt
SELECT * from a ORDER BY s DESC LIMIT 10 OFFSET 10
----
offset
 ├── columns: k:1!null i:2 f:3 s:4 j:5
 ├── internal-ordering: -4
 ├── cardinality: [0 - 10]
 ├── key: (1)
 ├── fd: (1)-->(2-5)
 ├── ordering: -4
 ├── index-join a
 │    ├── columns: k:1!null i:2 f:3 s:4 j:5
 │    ├── cardinality: [0 - 20]
 │    ├── key: (1)
 │    ├── fd: (1)-->(2-5)
 │    ├── ordering: -4
 │    └── scan a@si_idx
 │         ├── columns: k:1!null i:2 s:4 j:5
 │         ├── limit: 20
 │         ├── key: (1)
 │         ├── fd: (1)-->(2,4,5)
 │         └── ordering: -4
 └── 10

# PushLimitIntoIndexJoin propagates row-level locking information.
opt
SELECT * FROM kuv ORDER BY u LIMIT 5 FOR UPDATE
----
limit
 ├── columns: k:1 u:2 v:3
 ├── internal-ordering: +2
 ├── cardinality: [0 - 5]
 ├── volatile
 ├── ordering: +2
 ├── sort
 │    ├── columns: k:1 u:2 v:3
 │    ├── volatile
 │    ├── ordering: +2
 │    ├── limit hint: 5.00
 │    └── scan kuv
 │         ├── columns: k:1 u:2 v:3
 │         ├── locking: for-update
 │         └── volatile
 └── 5

