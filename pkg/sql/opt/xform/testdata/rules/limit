 ├── columns: k:1 u:2 v:3
 ├── internal-ordering: +2
 ├── cardinality: [0 - 5]
 ├── volatile
 ├── ordering: +2
 ├── sort
 │    ├── columns: k:1 u:2 v:3
 │    ├── volatile
 │    ├── ordering: +2
 │    ├── limit hint: 5.00
 │    └── scan kuv
 │         ├── columns: k:1 u:2 v:3
 │         ├── locking: for-update
 │         └── volatile
 └── 5

