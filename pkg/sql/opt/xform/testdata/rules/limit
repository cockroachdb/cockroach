 │    ├── ordering: +6,+7
 │    ├── limit hint: 10.00
 │    ├── scan index_tab@c
 │    │    ├── columns: region:14!null data1:17!null data2:18!null
 │    │    ├── constraint: /14/17/18/12: [/'US_EAST'/4 - /'US_EAST'/999]
 │    │    ├── limit: 10
 │    │    ├── fd: ()-->(14)
 │    │    ├── ordering: +17,+18 opt(14) [actual: +17,+18]
 │    │    └── limit hint: 10.00
 │    └── scan index_tab@c
 │         ├── columns: region:25!null data1:28!null data2:29!null
