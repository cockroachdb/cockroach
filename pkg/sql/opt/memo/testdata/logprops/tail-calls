                               └── body
                                    ├── values
                                    │    └── tuple
                                    │         └── function: crdb_internal.plpgsql_raise
                                    │              ├── const: 'NOTICE'
                                    │              ├── const: 'foo'
                                    │              ├── const: ''
                                    │              ├── const: ''
                                    │              └── const: '00000'
                                    └── values
                                         └── tuple
                                              └── udf: nested
                                                   ├── tail-call
                                                   └── body
                                                        └── values
                                                             └── tuple
                                                                  └── const: 1

# Not a tail-call because the result is not used by the parent function.
