# Tail-call within nested PL/pgSQL blocks.
exec-ddl
CREATE OR REPLACE FUNCTION f() RETURNS INT AS $$
  BEGIN
    BEGIN
      RAISE NOTICE 'foo';
      If random() < 0.5 THEN
        RETURN nested();
      END IF;
      BEGIN
        RAISE NOTICE 'bar';
        RETURN nested_arg(100);
      END;
    END;
  END
$$ LANGUAGE PLpgSQL;
----

norm format=(hide-all,show-scalars)
VALUES (f());
----
values
 └── tuple
      └── udf: f
           └── body
                └── values
                     └── tuple
                          └── udf: _stmt_raise_5
                               ├── tail-call
                               └── body
                                    ├── values
                                    │    └── tuple
                                    │         └── function: crdb_internal.plpgsql_raise
                                    │              ├── const: 'NOTICE'
