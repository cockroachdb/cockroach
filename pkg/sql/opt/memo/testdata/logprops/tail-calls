 ├── values
 │    └── tuple
 └── zip
      └── udf: f
           └── body
                ├── scan t
                └── project
                     ├── values
                     │    ├── tuple
                     │    │    └── const: 1
                     │    └── tuple
                     │         └── const: 2
                     └── projections
                          └── udf: nested
                               └── body
                                    └── values
                                         └── tuple
                                              └── const: 1

# A generator function cannot be considered a tail-call.
