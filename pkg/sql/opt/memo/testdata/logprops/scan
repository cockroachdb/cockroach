exec-ddl
CREATE TABLE a (x INT PRIMARY KEY, y INT, s STRING, d DECIMAL NOT NULL)
----
TABLE a
 ├── x int not null
 ├── y int
 ├── s string
 ├── d decimal not null
 └── INDEX primary
      └── x int not null

exec-ddl
CREATE TABLE b (x INT, z INT NOT NULL)
----
TABLE b
 ├── x int
 ├── z int not null
 ├── rowid int not null (hidden)
 └── INDEX primary
      └── rowid int not null (hidden)

build
SELECT * FROM a
----
scan a
 ├── columns: x:1(int!null) y:2(int) s:3(string) d:4(decimal!null)
 └── stats: [rows=1000, distinct(1)=250, distinct(2)=250, distinct(3)=250, distinct(4)=250, distinct(1-4)=900]

build
SELECT * FROM b
----
project
 ├── columns: x:1(int) z:2(int!null)
 ├── stats: [rows=1000, distinct(1)=250, distinct(2)=250]
 ├── scan b
 │    ├── columns: b.x:1(int) b.z:2(int!null) b.rowid:3(int!null)
 │    └── stats: [rows=1000, distinct(1)=250, distinct(2)=250, distinct(3)=250, distinct(1-3)=900]
 └── projections [outer=(1,2)]
      ├── variable: b.x [type=int, outer=(1)]
      └── variable: b.z [type=int, outer=(2)]

# Select subset of columns.
opt
SELECT s, x FROM a
----
scan a
 ├── columns: s:3(string) x:1(int!null)
 └── stats: [rows=1000, distinct(1)=250, distinct(3)=250, distinct(1,3)=900]

# Test constrained span.
opt
SELECT s, x FROM a WHERE x=1
----
scan a
 ├── columns: s:3(string) x:1(int!null)
 ├── constraint: /1: [/1 - /1]
 └── stats: [rows=100, distinct(1)=1, distinct(3)=25, distinct(1,3)=90]

# Test limited span.
opt
SELECT s, x FROM a WHERE x=1 LIMIT 2
----
scan a
 ├── columns: s:3(string) x:1(int!null)
 ├── constraint: /1: [/1 - /1]
 ├── limit: 2
 └── stats: [rows=2, distinct(1)=1, distinct(3)=2, distinct(1,3)=2]
