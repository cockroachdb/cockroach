# Propagate outer columns.
build
SELECT (SELECT x FROM kuv LIMIT y) FROM xyzs
----
project
 ├── columns: x:9(int)
 ├── stats: [rows=1000]
 ├── scan xyzs
 │    ├── columns: xyzs.x:1(int!null) y:2(int) z:3(float!null) s:4(string)
 │    ├── stats: [rows=1000]
 │    ├── key: (1)
 │    └── fd: (1)-->(2-4), (3,4)~~>(1,2)
 └── projections [outer=(1,2)]
      └── subquery [type=int, outer=(1,2)]
           └── max1-row
                ├── columns: x:8(int)
                ├── outer: (1,2)
                ├── cardinality: [0 - 1]
                ├── stats: [rows=1]
                ├── key: ()
                ├── fd: ()-->(8)
                └── limit
                     ├── columns: x:8(int)
                     ├── outer: (1,2)
                     ├── stats: [rows=1000]
                     ├── fd: ()-->(8)
                     ├── project
                     │    ├── columns: x:8(int)
                     │    ├── outer: (1)
                     │    ├── stats: [rows=1000]
                     │    ├── fd: ()-->(8)
                     │    ├── scan kuv
                     │    │    ├── columns: k:5(int!null) u:6(float) v:7(string)
                     │    │    ├── stats: [rows=1000]
                     │    │    ├── key: (5)
                     │    │    └── fd: (5)-->(6,7)
                     │    └── projections [outer=(1)]
                     │         └── variable: xyzs.x [type=int, outer=(1)]
                     └── variable: xyzs.y [type=int, outer=(2)]

# Test very high limit (> max uint32).
opt
SELECT s, x FROM xyzs WHERE s='foo' LIMIT 4294967296
----
limit
 ├── columns: s:4(string!null) x:1(int!null)
 ├── stats: [rows=1.42857143]
 ├── key: (1)
 ├── fd: ()-->(4)
 ├── scan xyzs@secondary
 │    ├── columns: x:1(int!null) s:4(string!null)
 │    ├── constraint: /-4/3: [/'foo' - /'foo']
 │    ├── stats: [rows=1.42857143, distinct(4)=1]
 │    ├── key: (1)
 │    └── fd: ()-->(4)
 └── const: 4294967296 [type=int]
