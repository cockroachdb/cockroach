 ├── columns: x:1(int!null) y:2(int) z:3(float!null) s:4(string)
 ├── cardinality: [0 - 1]
 ├── stats: [rows=1]
 ├── keys: (1) weak(3,4)
 ├── scan xyzs
 │    ├── columns: x:1(int!null) y:2(int) z:3(float!null) s:4(string)
 │    ├── stats: [rows=1000]
 │    └── keys: (1) weak(3,4)
 └── const: 1 [type=int]

