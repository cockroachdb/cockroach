exec-ddl
CREATE TABLE t (a INT, b BOOL, c STRING)
----
TABLE t
 ├── a int
 ├── b bool
 ├── c string
 ├── rowid int not null (hidden)
 └── INDEX primary
      └── rowid int not null (hidden)

opt
SELECT * FROM t WHERE a = NULL
----
scan t
 ├── columns: a:1(int) b:2(bool) c:3(string)
 ├── constraint: /4: contradiction
 └── stats: [rows=333]

opt
SELECT * FROM t WHERE a < NULL
----
scan t
 ├── columns: a:1(int) b:2(bool) c:3(string)
 ├── constraint: /4: contradiction
 └── stats: [rows=333]

opt
SELECT * FROM t WHERE a IS NULL
