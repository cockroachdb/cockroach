 │    ├── columns: a:1(int) b:2(bool) c:3(string)
 │    └── stats: [rows=1000, distinct(1)=700]
 └── filters [type=bool, outer=(1), constraints=(/1: [/NULL - /NULL]; tight)]
      └── is [type=bool, outer=(1), constraints=(/1: [/NULL - /NULL]; tight)]
           ├── variable: t.a [type=int, outer=(1)]
           └── null [type=unknown]

opt
