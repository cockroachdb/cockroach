build colstat=5 colstat=6 colstat=(5,6)
SELECT NULL, NULLIF(x,y) FROM a
----
project
 ├── columns: "?column?":5(unknown) nullif:6(int)
 ├── stats: [rows=2000, distinct(5)=1, null(5)=2000, distinct(6)=2000, null(6)=0, distinct(5,6)=2000, null(5,6)=0]
 ├── fd: ()-->(5)
 ├── scan a
 │    ├── columns: x:1(int!null) y:2(int) s:3(string) d:4(decimal!null)
 │    ├── stats: [rows=2000, distinct(1,2)=2000, null(1,2)=0]
 │    ├── key: (1)
 │    └── fd: (1)-->(2-4), (3,4)~~>(1,2)
 └── projections
      ├── NULL [as="?column?":5, type=unknown]
      └── CASE x:1 WHEN y:2 THEN CAST(NULL AS INT8) ELSE x:1 END [as=nullif:6, type=int, outer=(1,2)]
