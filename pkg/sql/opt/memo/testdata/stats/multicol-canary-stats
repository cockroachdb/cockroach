# Test multi-column statistics with canary selection
exec-ddl
CREATE TABLE multi_col (a INT PRIMARY KEY, b INT, c STRING, d DECIMAL, e BOOL, INDEX ab (a, b), FAMILY (a, b, c, d, e)) WITH (canary_window = '20s')
----

exec-ddl
ALTER TABLE multi_col INJECT STATISTICS '[
		{
		  "columns": ["a"],
			"created_at": "2018-01-01 12:00:20.00000+00:00",
