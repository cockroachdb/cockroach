#
# Use strictly-typed variable aliases when a variable is bound to a single type
# of expression.
#
optgen factory test.opt
[Relational]
define Project {
    Input RelExpr
    Projections ProjectionsExpr
    Passthrough ColSet
}

[Scalar, List]
define Projections {
}

define Values {
    Rows ScalarListExpr
}

[Scalar, List]
define ScalarList {
}

[PruneValuesCols, Normalize]
(Project
    $input:(Values)
    $projections:*
    $passthrough:* &
        (CanPruneCols
            $input
            $needed:(UnionCols
                (ProjectionOuterCols $projections)
                $passthrough
            )
        )
)
=>
(Project (PruneCols $input $needed) $projections $passthrough)
----
