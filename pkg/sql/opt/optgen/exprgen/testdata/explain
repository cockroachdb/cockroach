(Explain
  (Sort
    (Scan [ (Table "abc") (Cols "a,b") ])
  )
  [
    (Options "opt")
    (Props
      (MakePhysProps
        (Presentation "a")
        (OrderingChoice "+b")
      )
    )
  ]
)
