           ├── columns: rowid:6!null
           ├── inverted constraint: /10/6
           │    └── spans: ["a"/1, "a"/1]
           ├── cost: 19.1644445
           └── key: (6)

# Ensure that we don't recommend replacing partial indexes, partial unique
# indexes, or partial inverted indexes.

