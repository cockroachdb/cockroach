exec-ddl
CREATE TABLE abc (
    a INT PRIMARY KEY,
    b INT,
    c STRING,
    UNIQUE INDEX bc1 (b, c),
    UNIQUE INDEX bc2 (b, c)
)
----

exec-ddl
ALTER TABLE abc CONFIGURE ZONE USING constraints='[+region=central]'
----

exec-ddl
SHOW CREATE abc
----
TABLE abc
 ├── a int not null
 ├── b int
 ├── c string
 ├── crdb_internal_mvcc_timestamp decimal [hidden] [system]
 ├── INDEX primary
 │    ├── a int not null
 │    └── ZONE
 │         └── constraints: [+region=central]
 ├── INDEX bc1
 │    ├── b int
 │    ├── c string
 │    └── a int not null (storing)
 ├── INDEX bc2
 │    ├── b int
 │    ├── c string
 │    └── a int not null (storing)
 ├── UNIQUE (a)
 └── UNIQUE (b, c)

exec-ddl
