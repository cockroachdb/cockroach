# Table with multiple column families. Cannot push down locking.
statement ok
CREATE TABLE xyz (
  x INT PRIMARY KEY,
  y INT NOT NULL,
  z INT,
  INDEX (z),
  FAMILY (x, y),
  FAMILY (z)
)

query T
EXPLAIN (VERBOSE) SELECT y FROM xyz WHERE x = 1 FOR UPDATE
----
