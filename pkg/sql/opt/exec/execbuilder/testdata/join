exec-raw
CREATE DATABASE t
----

exec-raw
CREATE TABLE t.a (x INT PRIMARY KEY, y INT);
CREATE TABLE t.b (x INT PRIMARY KEY, z INT);
INSERT INTO t.a VALUES (1, 10), (2, 20), (3, 30);
INSERT INTO t.b VALUES (2, 200), (3, 300), (4, 400)
----

exec-explain
SELECT * FROM t.a, t.b
----
join       0  join  ·      ·          (x, y, x, z)  ·
 │         0  ·     type   cross      ·             ·
 ├── scan  1  scan  ·      ·          (x, y)        ·
 │         1  ·     table  a@primary  ·             ·
 │         1  ·     spans  ALL        ·             ·
 └── scan  1  scan  ·      ·          (x, z)        ·
·          1  ·     table  b@primary  ·             ·
·          1  ·     spans  ALL        ·             ·

exec
SELECT * FROM t.a, t.b
----
1  10  2  200
1  10  3  300
1  10  4  400
2  20  2  200
2  20  3  300
2  20  4  400
3  30  2  200
3  30  3  300
3  30  4  400

# We don't yet push the filter into the join.
exec-explain
SELECT * FROM t.a, t.b WHERE a.x = b.x
----
filter          0  filter  ·       ·          (x, y, x, z)  ·
 │              0  ·       filter  @1 = @3    ·             ·
 └── join       1  join    ·       ·          (x, y, x, z)  ·
      │         1  ·       type    cross      ·             ·
      ├── scan  2  scan    ·       ·          (x, y)        ·
      │         2  ·       table   a@primary  ·             ·
      │         2  ·       spans   ALL        ·             ·
      └── scan  2  scan    ·       ·          (x, z)        ·
·               2  ·       table   b@primary  ·             ·
·               2  ·       spans   ALL        ·             ·

exec
SELECT * FROM t.a, t.b WHERE a.x = b.x
----
2  20  2  200
3  30  3  300
