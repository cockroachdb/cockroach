query T
SELECT jsonb_pretty(stat->'histo_buckets')
FROM (
  SELECT jsonb_array_elements(statistics) AS stat
  FROM [SHOW STATISTICS USING JSON FOR TABLE x WITH FORECAST]
)
WHERE stat->>'name' = '__forecast__';
----
[
    {
        "distinct_range": 0,
        "num_eq": 0,
        "num_range": 0,
        "upper_bound": "13"
    },
    {
        "distinct_range": 2,
        "num_eq": 0,
        "num_range": 2,
        "upper_bound": "16"
    },
    {
        "distinct_range": 2,
        "num_eq": 0,
        "num_range": 2,
        "upper_bound": "19"
    }
]
