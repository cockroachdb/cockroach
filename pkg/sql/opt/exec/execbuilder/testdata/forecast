# Test for issue 86344.

statement ok
CREATE TABLE x (a INT PRIMARY KEY) WITH (sql_stats_automatic_collection_enabled = false);

statement ok
ALTER TABLE x INJECT STATISTICS '[
      {
          "avg_size": 1,
          "columns": [
              "a"
          ],
          "created_at": "2020-03-13 00:00:00.000000",
          "distinct_count": 4,
