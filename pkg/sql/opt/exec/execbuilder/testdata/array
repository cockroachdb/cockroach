# LogicTest: local

# Add x to PRIMARY KEY once #50659 is fixed.
statement ok
CREATE TABLE t (x INT[])

# Test some scans of constrained spans on arrays.

query T
EXPLAIN SELECT x FROM t WHERE x = ARRAY[1,4,6]
