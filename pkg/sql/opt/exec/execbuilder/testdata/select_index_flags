# LogicTest: local

statement ok
CREATE TABLE abcd (
  a INT PRIMARY KEY,
  b INT,
  c INT,
  d INT,
  INDEX b (b),
  INDEX cd (c,d),
  UNIQUE INDEX bcd (b,c,d)
)

# No hint
query T
EXPLAIN SELECT * FROM abcd WHERE a >= 20 AND a <= 30
----
