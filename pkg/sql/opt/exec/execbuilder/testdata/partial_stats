SELECT jsonb_pretty(stat)
FROM (
SELECT jsonb_array_elements(statistics) AS stat FROM [SHOW STATISTICS USING JSON FOR TABLE ab WITH MERGE]
)
WHERE stat->>'name' = '__merged__' ORDER BY stat->>'created_at';
