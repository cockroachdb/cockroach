exec-raw
CREATE TABLE uvwxyz (
  u INT,
  v INT,
  w INT,
  x INT,
  y INT,
  z INT,
  INDEX ywxz (y, w, x, z, u, v),
  INDEX ywz (y, w, z, x)
)
----

# Verify that the outer ordering is propagated to index selection and we choose
# the index that avoids any sorting.
exec hide-colnames nodist
EXPLAIN (VERBOSE) SELECT * FROM (SELECT y, w, x FROM uvwxyz WHERE y = 1 ORDER BY w) ORDER BY w, x
----
render          ·         ·            (y, w, x)  ·
 │              render 0  y            ·          ·
 │              render 1  w            ·          ·
 │              render 2  x            ·          ·
 └── sort       ·         ·            (w, x, y)  +w,+x
      │         order     +w,+x        ·          ·
      └── scan  ·         ·            (w, x, y)  ·
·               table     uvwxyz@ywxz  ·          ·
·               spans     /1-/2        ·          ·

exec-raw
CREATE TABLE blocks (
  block_id  INT,
  writer_id STRING,
  block_num INT,
  raw_bytes BYTES,
  PRIMARY KEY (block_id, writer_id, block_num)
)
----

