# Check that sort is skipped if the ORDER BY clause is constant.
# TODO(radu): we don't optimize constant columns yet.
exec hide-colnames nodist
EXPLAIN (VERBOSE) SELECT * FROM t ORDER BY 1+2
----
render               ·         ·          (a, b, c)                       ·
 │                   render 0  "t.a"      ·                               ·
 │                   render 1  "t.b"      ·                               ·
 │                   render 2  "t.c"      ·                               ·
 └── sort            ·         ·          ("t.a", "t.b", "t.c", column4)  +column4
      │              order     +column4   ·                               ·
      └── render     ·         ·          ("t.a", "t.b", "t.c", column4)  ·
           │         render 0  a          ·                               ·
           │         render 1  b          ·                               ·
           │         render 2  c          ·                               ·
           │         render 3  3          ·                               ·
           └── scan  ·         ·          (a, b, c)                       ·
·                    table     t@primary  ·                               ·
·                    spans     ALL        ·                               ·

exec hide-colnames nodist
EXPLAIN (VERBOSE) SELECT 1, * FROM t ORDER BY 1
----
sort            ·         ·          (column4, a, b, c)  +column4
 │              order     +column4   ·                   ·
 └── render     ·         ·          (column4, a, b, c)  ·
      │         render 0  1          ·                   ·
      │         render 1  a          ·                   ·
      │         render 2  b          ·                   ·
      │         render 3  c          ·                   ·
      └── scan  ·         ·          (a, b, c)           ·
·               table     t@primary  ·                   ·
·               spans     ALL        ·                   ·

exec hide-colnames nodist
EXPLAIN (VERBOSE) SELECT * FROM t ORDER BY length('abc')
----
render               ·         ·              (a, b, c)                       ·
 │                   render 0  "t.a"          ·                               ·
 │                   render 1  "t.b"          ·                               ·
 │                   render 2  "t.c"          ·                               ·
 └── sort            ·         ·              ("t.a", "t.b", "t.c", column4)  +column4
      │              order     +column4       ·                               ·
      └── render     ·         ·              ("t.a", "t.b", "t.c", column4)  ·
           │         render 0  a              ·                               ·
           │         render 1  b              ·                               ·
           │         render 2  c              ·                               ·
           │         render 3  length('abc')  ·                               ·
           └── scan  ·         ·              (a, b, c)                       ·
·                    table     t@primary      ·                               ·
·                    spans     ALL            ·                               ·

# Check that the sort key reuses the existing render.
exec hide-colnames nodist
EXPLAIN (VERBOSE) SELECT b+2 FROM t ORDER BY b+2
----
sort            ·         ·          (column4)  +column4
 │              order     +column4   ·          ·
 └── render     ·         ·          (column4)  ·
      │         render 0  b + 2      ·          ·
      └── scan  ·         ·          (b)        ·
·               table     t@primary  ·          ·
·               spans     ALL        ·          ·

# Check that the sort picks up a renamed render properly.
exec hide-colnames nodist
EXPLAIN (VERBOSE) SELECT b+2 AS y FROM t ORDER BY y
----
sort            ·         ·          (y)  +y
 │              order     +y         ·    ·
 └── render     ·         ·          (y)  ·
      │         render 0  b + 2      ·    ·
      └── scan  ·         ·          (b)  ·
·               table     t@primary  ·    ·
·               spans     ALL        ·    ·

# Check that the sort reuses a render behind a rename properly.
exec hide-colnames nodist
EXPLAIN (VERBOSE) SELECT b+2 AS y FROM t ORDER BY b+2
----
sort            ·         ·          (y)  +y
 │              order     +y         ·    ·
 └── render     ·         ·          (y)  ·
      │         render 0  b + 2      ·    ·
      └── scan  ·         ·          (b)  ·
·               table     t@primary  ·    ·
·               spans     ALL        ·    ·

exec-raw
CREATE TABLE abc (
  a INT,
  b INT,
  c INT,
  d CHAR,
  PRIMARY KEY (a, b, c),
  UNIQUE INDEX bc (b, c),
  INDEX ba (b, a),
  FAMILY (a, b, c),
  FAMILY (d)
)
----

exec-raw
INSERT INTO abc
SELECT x, (x-1)*3 + y, 4 - x, to_english((x-1)*3+y)
FROM
  GENERATE_SERIES(1, 3) AS x(x),
  GENERATE_SERIES(1, 3) AS y(y)
----

exec
SELECT d FROM abc ORDER BY LOWER(d)
----
d:string
eight
five
four
nine
one
seven
six
three
two

exec hide-colnames nodist
EXPLAIN (VERBOSE) SELECT * FROM abc ORDER BY a
----
scan  ·      ·            (a, b, c, d)  +a
·     table  abc@primary  ·             ·
·     spans  ALL          ·             ·

exec partialsort=(1)
SELECT * FROM abc ORDER BY a
----
a:int  b:int  c:int  d:string
1      1      3      one
1      2      3      two
1      3      3      three
2      4      2      four
2      5      2      five
2      6      2      six
3      7      1      seven
3      8      1      eight
3      9      1      nine

exec hide-colnames nodist
EXPLAIN (VERBOSE) SELECT * FROM abc ORDER BY a, c
----
sort       ·      ·            (a, b, c, d)  +a,+c
 │         order  +a,+c        ·             ·
 └── scan  ·      ·            (a, b, c, d)  ·
·          table  abc@primary  ·             ·
·          spans  ALL          ·             ·

exec partialsort=(1,3)
SELECT * FROM abc ORDER BY a, c
----
a:int  b:int  c:int  d:string
1      1      3      one
1      2      3      two
1      3      3      three
2      4      2      four
2      5      2      five
2      6      2      six
3      7      1      seven
3      8      1      eight
3      9      1      nine

exec hide-colnames nodist
EXPLAIN (VERBOSE) SELECT a, b FROM abc ORDER BY b, a
----
scan  ·      ·       (a, b)  +b,+a
·     table  abc@ba  ·       ·
·     spans  ALL     ·       ·

exec
SELECT a, b FROM abc ORDER BY b, a
----
