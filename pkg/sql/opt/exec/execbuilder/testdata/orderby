# tests adapted from logictest -- order_by

exec-raw
CREATE TABLE t (
  a INT PRIMARY KEY,
  b INT,
  c BOOLEAN
)
----

exec-raw
INSERT INTO t VALUES (1, 9, true), (2, 8, false), (3, 7, NULL)
----

exec
SELECT c FROM t ORDER BY c
----
c:bool
NULL
false
true

exec hide-colnames nodist
EXPLAIN (VERBOSE) SELECT c FROM t ORDER BY c
----
sort       ·      ·          (c)  +c
 │         order  +c         ·    ·
 └── scan  ·      ·          (c)  ·
·          table  t@primary  ·    ·
·          spans  ALL        ·    ·

exec
SELECT c FROM t ORDER BY c DESC
----
c:bool
true
false
NULL

exec
SELECT a, b FROM t ORDER BY b
----
a:int  b:int
3      7
2      8
1      9

exec hide-colnames nodist
EXPLAIN (VERBOSE) SELECT a, b FROM t ORDER BY b
----
sort       ·      ·          (a, b)  +b
 │         order  +b         ·       ·
 └── scan  ·      ·          (a, b)  ·
·          table  t@primary  ·       ·
·          spans  ALL        ·       ·

exec
SELECT a, b FROM t ORDER BY b DESC
----
a:int  b:int
1      9
2      8
3      7

exec hide-colnames nodist
EXPLAIN (VERBOSE) SELECT a, b FROM t ORDER BY b DESC
----
sort       ·      ·          (a, b)  -b
 │         order  -b         ·       ·
 └── scan  ·      ·          (a, b)  ·
·          table  t@primary  ·       ·
·          spans  ALL        ·       ·


exec
SELECT a FROM t ORDER BY 1 DESC
