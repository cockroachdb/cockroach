# LogicTest: opt

statement ok
CREATE TABLE a (x INT PRIMARY KEY, y INT)

statement ok
INSERT INTO a VALUES (1, 10), (2, 20), (3, 30)

query TTTTT
EXPLAIN (VERBOSE) SELECT * FROM a WHERE x > 1
----
scan  ·      ·          (x, y)  ·
·     table  a@primary  ·       ·
·     spans  /2-        ·       ·

query II
SELECT * FROM a WHERE x > 1
----
2  20
3  30

query TTTTT
EXPLAIN (VERBOSE) SELECT * FROM a WHERE y > 1
----
scan  ·       ·          (x, y)  ·
·     table   a@primary  ·       ·
·     spans   ALL        ·       ·
·     filter  y > 1      ·       ·

query II
SELECT * FROM a WHERE y > 1
----
1  10
2  20
3  30

query TTTTT
EXPLAIN (VERBOSE) SELECT * FROM a WHERE x > 1 AND x < 3
----
scan  ·      ·          (x, y)  ·
·     table  a@primary  ·       ·
·     spans  /2-/2/#    ·       ·

query II
SELECT * FROM a WHERE x > 1 AND x < 3
----
2  20

query TTTTT
EXPLAIN (VERBOSE) SELECT x + 1 FROM a
----
render     ·         ·          ("x + 1")  ·
 │         render 0  x + 1      ·          ·
 └── scan  ·         ·          (x)        ·
·          table     a@primary  ·          ·
·          spans     ALL        ·          ·

query I
SELECT x + 1 FROM a
----
2
3
4

query TTTTT
EXPLAIN (VERBOSE) SELECT x, x + 1, y, y + 1, x + y FROM a
----
render     ·         ·          (x, "x + 1", y, "y + 1", "x + y")  ·
 │         render 0  x          ·                                  ·
 │         render 1  x + 1      ·                                  ·
 │         render 2  y          ·                                  ·
 │         render 3  y + 1      ·                                  ·
 │         render 4  x + y      ·                                  ·
 └── scan  ·         ·          (x, y)                             ·
·          table     a@primary  ·                                  ·
·          spans     ALL        ·                                  ·

query IIIII
SELECT x, x + 1, y, y + 1, x + y FROM a
----
1  2  10  11  11
2  3  20  21  22
3  4  30  31  33

query TTTTT
EXPLAIN (VERBOSE) SELECT u * v + v FROM (SELECT x + 3, y + 10 FROM a) AS foo(u, v)
----
render          ·         ·                                ("(u * v) + v")      ·
 │              render 0  "y + 10" + ("x + 3" * "y + 10")  ·                    ·
 └── render     ·         ·                                ("x + 3", "y + 10")  ·
      │         render 0  x + 3                            ·                    ·
      │         render 1  y + 10                           ·                    ·
      └── scan  ·         ·                                (x, y)               ·
·               table     a@primary                        ·                    ·
·               spans     ALL                              ·                    ·

query I
SELECT u + v FROM (SELECT x + 3, y + 10 FROM a) AS foo(u, v)
----
24
35
46

query TTTTT
EXPLAIN (VERBOSE) SELECT x, x, y, x FROM a
----
render     ·         ·          (x, x, y, x)  ·
 │         render 0  x          ·             ·
 │         render 1  x          ·             ·
 │         render 2  y          ·             ·
 │         render 3  x          ·             ·
 └── scan  ·         ·          (x, y)        ·
·          table     a@primary  ·             ·
·          spans     ALL        ·             ·

query IIII
SELECT x, x, y, x FROM a
----
1  1  10  1
2  2  20  2
3  3  30  3

query TTTTT
EXPLAIN (VERBOSE) SELECT x + 1, x + y FROM a WHERE x + y > 20
----
render     ·         ·             ("x + 1", "x + y")  ·
 │         render 0  x + 1         ·                   ·
 │         render 1  x + y         ·                   ·
 └── scan  ·         ·             (x, y)              ·
·          table     a@primary     ·                   ·
·          spans     ALL           ·                   ·
·          filter    (x + y) > 20  ·                   ·

query II
SELECT x + 1, x + y FROM a WHERE x + y > 20
----
3  22
4  33

statement ok
CREATE TABLE b (x INT, y INT);
INSERT INTO b VALUES (1, 10), (2, 20), (3, 30)

# Test with a hidden column.
query TTTTT
EXPLAIN (VERBOSE) SELECT * FROM b
----
scan  ·      ·          (x, y)  ·
·     table  b@primary  ·       ·
·     spans  ALL        ·       ·

query II
SELECT * FROM b
----
1  10
2  20
3  30

query TTTTT
EXPLAIN (VERBOSE) SELECT x FROM b WHERE rowid > 0
----
render     ·         ·          (x)                 ·
 │         render 0  x          ·                   ·
 └── scan  ·         ·          (x, rowid[hidden])  ·
·          table     b@primary  ·                   ·
·          spans     /1-        ·                   ·

query I
SELECT x FROM b WHERE rowid > 0
----
1
2
3

# "*" must expand to zero columns if there are zero columns to select.
statement ok
CREATE TABLE nocols(x INT); ALTER TABLE nocols DROP COLUMN x

query TTTTT
EXPLAIN (VERBOSE) SELECT 1, * FROM nocols
----
render     ·         ·               ("1")  ·
 │         render 0  1               ·      ·
 └── scan  ·         ·               ()     ·
·          table     nocols@primary  ·      ·
·          spans     ALL             ·      ·

query I
SELECT 1, * FROM nocols
----
