exec-raw
CREATE DATABASE t
----

exec-raw
CREATE TABLE t.a (x INT PRIMARY KEY, y INT)
----

exec-raw
INSERT INTO t.a VALUES (1, 10), (2, 20), (3, 30)
----

exec-explain
SELECT * FROM t.a WHERE x > 1
----
scan  0  scan  ·      ·          (x, y)  ·
·     0  ·     table  a@primary  ·       ·
·     0  ·     spans  /2-        ·       ·

exec
SELECT * FROM t.a WHERE x > 1
----
x:int  y:int
2      20
3      30

exec-explain
SELECT * FROM t.a WHERE y > 1
----
filter     0  filter  ·       ·          (x, y)  ·
 │         0  ·       filter  y > 1      ·       ·
 └── scan  1  scan    ·       ·          (x, y)  ·
·          1  ·       table   a@primary  ·       ·
·          1  ·       spans   ALL        ·       ·

exec
SELECT * FROM t.a WHERE y > 1
----
x:int  y:int
1      10
2      20
3      30

exec-explain
SELECT * FROM t.a WHERE x > 1 AND x < 3
----
scan  0  scan  ·      ·          (x, y)  ·
·     0  ·     table  a@primary  ·       ·
·     0  ·     spans  /2-/2/#    ·       ·

exec
SELECT * FROM t.a WHERE x > 1 AND x < 3
----
x:int  y:int
2      20

exec-explain
