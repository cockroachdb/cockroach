# LogicTest: 5node

statement ok
CREATE TABLE json_tab (
  a INT PRIMARY KEY,
  b JSONB,
  c INT NOT NULL DEFAULT 10 CHECK (c IN (10, 20)),
  FAMILY (a, b, c)
)

statement ok
CREATE INVERTED INDEX json_inv ON json_tab(c, b)

statement ok
CREATE TABLE array_tab (
  a INT PRIMARY KEY,
  b INT[],
  c INT NOT NULL DEFAULT 10 CHECK (c IN (10, 20)),
  FAMILY (a, b, c)
)

statement ok
CREATE INVERTED INDEX arr_inv ON array_tab(c, b)

statement ok
