query T
EXPLAIN (OPT) DELETE FROM jars WHERE j = 1
----
delete jars
 ├── scan jars
 │    ├── constraint: /7: [/1 - /1]
 │    └── flags: avoid-full-scan
 └── f-k-checks
      └── f-k-checks-item: cookies(j) -> jars(j)
           └── semi-join (hash)
                ├── with-scan &1
                ├── scan cookies
                │    ├── flags: avoid-full-scan
                │    └── locking: for-share,durability-guaranteed
                └── filters
                     └── j = cookies.j

