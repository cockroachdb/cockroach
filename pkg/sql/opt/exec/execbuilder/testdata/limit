exec-raw
CREATE TABLE t (k INT PRIMARY KEY, v INT, w INT, INDEX(v));
INSERT INTO t VALUES (1, 1, 1), (2, -4, 8), (3, 9, 27), (4, -16, 94), (5, 25, 125), (6, -36, 216)
----

exec hide-colnames
EXPLAIN (VERBOSE) SELECT k, v FROM t ORDER BY k LIMIT 5
----
scan  ·      ·          (k, v)  +k
·     table  t@primary  ·       ·
·     spans  ALL        ·       ·
·     limit  5          ·       ·

exec
