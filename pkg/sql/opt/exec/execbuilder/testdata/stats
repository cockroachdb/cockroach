# Verify basic stats for JSON are used.

statement ok
CREATE TABLE tj (j JSON)

statement ok
INSERT INTO tj VALUES (NULL), ('1'), ('true'), ('true'), ('{}')

query T
EXPLAIN (OPT, VERBOSE) SELECT DISTINCT j FROM tj WHERE j IS NULL
----
limit
 ├── columns: j:1
 ├── cardinality: [0 - 1]
 ├── immutable
 ├── stats: [rows=1]
 ├── cost: 111.049999
 ├── key: ()
 ├── fd: ()-->(1)
 ├── select
 │    ├── columns: j:1
 │    ├── immutable
 │    ├── stats: [rows=10.0000001, distinct(1)=1, null(1)=10]
 │    ├── cost: 111.029999
 │    ├── fd: ()-->(1)
 │    ├── limit hint: 1.00
 │    ├── scan tj
 │    │    ├── columns: j:1
 │    │    ├── stats: [rows=1000, distinct(1)=100, null(1)=10]
 │    │    ├── cost: 110.009999
 │    │    ├── limit hint: 100.00
 │    │    └── prune: (1)
 │    └── filters
 │         └── j:1 IS NULL [outer=(1), immutable, constraints=(/1: [/NULL - /NULL]; tight), fd=()-->(1)]
 └── 1

