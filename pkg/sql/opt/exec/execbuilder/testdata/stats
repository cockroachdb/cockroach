 ├── columns: u:1 v:2
 ├── grouping columns: u:1 v:2
 ├── stats: [rows=33.3333333, distinct(1,2)=33.3333333, null(1,2)=0]
 ├── cost: 53.03
 ├── key: (1,2)
 └── scan uv@uv_u_idx
      ├── columns: u:1 v:2
