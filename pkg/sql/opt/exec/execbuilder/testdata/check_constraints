    │ estimated row count: 1 (missing stats)
    │ render check1: a > b_new
    │ render a: a
    │ render b: b
    │ render b_new: b_new
    │
    └── • render
        │ columns: (b_new, a, b)
        │ estimated row count: 1 (missing stats)
        │ render b_new: b + 1
        │ render a: a
        │ render b: b
        │
        └── • scan
              columns: (a, b)
              estimated row count: 1 (missing stats)
              table: t9@primary
              spans: /5/0-/5/1/2

