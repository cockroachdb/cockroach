      ├── key: (1)
      ├── fd: (1)-->(2-4)
      ├── limit
      │    ├── columns: w:1!null x:2 y:3 z:4
      │    ├── internal-ordering: +3,+1
      │    ├── cardinality: [0 - 2]
      │    ├── key: (1)
      │    ├── fd: (1)-->(2-4)
      │    ├── sort
