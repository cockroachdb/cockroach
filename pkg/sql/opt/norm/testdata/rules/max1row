# Don't remove the Max1Row operator.
opt
SELECT (SELECT i FROM a) > 5
----
project
 ├── columns: "(SELECT i FROM a) > 5":6(bool)
 ├── cardinality: [1 - 1]
 ├── values
 │    ├── cardinality: [1 - 1]
 │    └── {()} [type=tuple{}]
 └── projections
      └── gt [type=bool]
           ├── subquery [type=int]
           │    └── max1-row
           │         ├── columns: i:2(int)
           │         ├── cardinality: [0 - 1]
           │         └── scan a
           │              └── columns: i:2(int)
           └── {5} [type=int]
