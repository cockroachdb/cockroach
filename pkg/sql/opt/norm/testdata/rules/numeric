# --------------------------------------------------
# InvertMinus
# --------------------------------------------------
norm expect=InvertMinus
SELECT
    -(a.f - a.f) AS r,
    -(a.d - a.i) AS s,
    -(a.t - a.t) AS t
FROM a
----
project
 ├── columns: r:6 s:7 t:8
 ├── scan a
 │    └── columns: i:2 f:3 d:4 a.t:5
 └── projections
      ├── f:3 - f:3 [as=r:6, outer=(3)]
      ├── i:2 - d:4 [as=s:7, outer=(2,4)]
      └── a.t:5 - a.t:5 [as=t:8, outer=(5)]

# --------------------------------------------------
# EliminateUnaryMinus
# --------------------------------------------------
norm expect=EliminateUnaryMinus
SELECT -(-a.i::int) AS r FROM a
----
project
 ├── columns: r:6
 ├── scan a
 │    └── columns: i:2
 └── projections
      └── i:2 [as=r:6, outer=(2)]
