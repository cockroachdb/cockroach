setup
CREATE TABLE customer (
  id INT PRIMARY KEY,
  name STRING NOT NULL,
  age INT NOT NULL,
  INDEX idx_customer_name(name),
  CONSTRAINT customer_age_gt_21 CHECk (age > 10)
);
----

