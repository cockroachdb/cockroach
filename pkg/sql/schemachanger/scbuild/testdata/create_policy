setup
CREATE TABLE defaultdb.foo (i INT PRIMARY KEY);
CREATE USER fred;
----

build
CREATE POLICY "first policy" on defaultdb.foo AS PERMISSIVE FOR SELECT TO fred USING (i > 0) WITH CHECK (i % 2 = 0);
----
