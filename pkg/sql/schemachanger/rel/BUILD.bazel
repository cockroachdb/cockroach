    name = "rel",
    srcs = [
        "attribute.go",
        "compare.go",
        "database.go",
        "database_entity_set.go",
        "database_items.go",
        "doc.go",
        "entity.go",
        "ordinal_set.go",
        "query.go",
        "query_build.go",
        "query_data.go",
        "query_eval.go",
        "query_lang.go",
        "query_lang_clause.go",
        "query_lang_clauses.go",
        "query_lang_expr.go",
        "query_lang_yaml.go",
        "schema.go",
        "schema_attribute.go",
        "schema_mappings.go",
        "schema_rules.go",
        "schema_value.go",
        "system_attributes.go",
        "values.go",
