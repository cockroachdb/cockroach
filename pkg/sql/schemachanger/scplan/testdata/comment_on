setup
CREATE DATABASE db1;
CREATE SCHEMA db1.sc1;
CREATE TABLE db1.sc1.t1 (
  id INT PRIMARY KEY,
  amount INT,
  CONSTRAINT t1_amount_gt_10 CHECK (amount > 10)
);
