/* setup */
SET experimental_enable_unique_without_index_constraints = true;
CREATE TABLE t (i INT PRIMARY KEY, j INT);
ALTER TABLE t ADD UNIQUE WITHOUT INDEX (j);

/* test */
EXPLAIN (ddl) ALTER TABLE t DROP CONSTRAINT unique_j;
