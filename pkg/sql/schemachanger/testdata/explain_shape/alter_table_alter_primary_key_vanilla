/* setup */
CREATE TABLE t (i INT PRIMARY KEY, j INT NOT NULL);
INSERT INTO t(i, j) VALUES (-4, -4), (-2, -2), (-3, -3);

/* test */
EXPLAIN (ddl, shape) ALTER TABLE t ALTER PRIMARY KEY USING COLUMNS (j);
