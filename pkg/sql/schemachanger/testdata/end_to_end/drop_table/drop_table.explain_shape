/* setup */
CREATE DATABASE db;
CREATE SCHEMA db.sc;
CREATE TABLE db.sc.t (k INT, v STRING);
COMMENT ON TABLE db.sc.t IS 't has a comment';
CREATE TYPE db.sc.e AS ENUM('a', 'b', 'c');

