/* setup */
CREATE TABLE t (i INT PRIMARY KEY, b INT);
CREATE FUNCTION f(b INT) RETURNS INT LANGUAGE SQL AS $$ SELECT b + 1 $$;

/* test */
EXPLAIN (DDL, SHAPE) ALTER TABLE t ADD CONSTRAINT check_b CHECK (f(b) > 1);
