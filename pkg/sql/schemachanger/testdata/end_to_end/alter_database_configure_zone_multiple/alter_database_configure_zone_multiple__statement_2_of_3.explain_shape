/* setup */
CREATE DATABASE db;
SET CLUSTER SETTING sql.virtual_cluster.allow_declarative_schema_changer.enabled = true;

/* test */
ALTER DATABASE db CONFIGURE ZONE USING num_replicas = 7;
EXPLAIN (DDL, SHAPE) ALTER DATABASE db CONFIGURE ZONE USING gc.ttlseconds = 10000;
