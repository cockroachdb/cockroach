/* setup */
CREATE TABLE t1(i INT PRIMARY KEY, j INT);
CREATE MATERIALIZED VIEW v2 AS SELECT i, j FROM t1;
CREATE INDEX idx ON v2(j);
CREATE MATERIALIZED VIEW v3 AS SELECT j FROM v2@idx;

/* test */
