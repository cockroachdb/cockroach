query IIII
SELECT MIN(k), MAX(k), MIN(v), MAX(v) FROM kv
----
1 5 2 4

query IIII
SELECT MIN(k), MAX(k), MIN(v), MAX(v) FROM kv WHERE k > 5
----
NULL NULL NULL NULL

query RRII
SELECT AVG(k), AVG(v), SUM(k), SUM(v) FROM kv
----
3 3 9 6

query R
