statement error column "m" does not exist
UPDATE kv SET m = 9 WHERE k IN (1, 3)

statement error primary key column "k" cannot be updated
UPDATE kv SET k = 9 WHERE k IN (1, 3)

statement ok
CREATE TABLE kv2 (
  k CHAR PRIMARY KEY,
  v CHAR,
  CONSTRAINT a UNIQUE (v)
)

statement ok
