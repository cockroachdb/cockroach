CREATE TABLE kv (
  k INT PRIMARY KEY,
  v INT
)

statement ok
INSERT INTO kv VALUES (1, 2), (3, 4), (5, 6), (7, 8)

statement ok
UPDATE kv SET v = 9 WHERE k IN (1, 3)

query II
SELECT * FROM kv
