@require '../modules/palette.styl'

$viz-top = 30px
$viz-bottom = 65px
$viz-sides = 62px

.visualization-wrapper
  display inline-flex
  background-color white
  border 1px solid $secondary-gray-1
  // prevents borders from doubling up
  margin-left -1px
  margin-top -1px
  flex-direction column
  justify-content space-between
  align-items stretch
  width 323px
  height 289px
  position relative

  .linegraph
    padding 0 60px
    height 175px

.viz-top
  height $viz-top
  display block

.viz-info-icon
  float right
  margin 10px 15px 0 0
  color $secondary-gray-5

.viz-bottom
  height $viz-bottom

  .viz-title
    width 100%
    text-align center
    font-family Lato-Bold
    text-transform uppercase
    letter-spacing 2px
    color $secondary-light-gray

.visualization
  height 100%
  width 100%
  padding 0 $viz-sides
  display flex
  align-items center

  .number
    font-family Lato-Light
    font-size 7.2rem
    color $main-green
    width 100%
    text-align center
    display block
