@require '../modules/palette.styl'

.visualization-wrapper
  background-color white
  border 1px solid $secondary-gray-1
  display inline-block
  // prevents borders from doubling up
  margin-left -1px
  margin-top -1px


// Layout Constants. Change these values in visualizations.ts if you change them here.
$viz-top = 30px
$viz-bottom = 65px
$viz-sides = 62px

.viz-top
  height $viz-top
  display block

.viz-info-icon
  float right
  margin 10px 15px 0 0
  color $secondary-gray-5

.viz-bottom
  height $viz-bottom

  .viz-title
    width 100%
    text-align center
    font-family Lato-Bold
    text-transform uppercase
    letter-spacing 2px
    color $secondary-light-gray


.visualization
  clear both
  margin 0 $viz-sides

  .number
    font-family Lato-Light
    font-size 7.2rem
    color $main-green
    width 100%
    text-align center

