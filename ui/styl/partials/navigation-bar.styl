@require '../modules/*'
@require 'typography.styl'

// ---- Navigation ----
#header
  position: fixed
  top: 0
  left: 0
  z-index: 1
  width: 100%
  modular-font-size '1' 
  height: 4rem 
  background-color: -color('dark', 'x-dark')
  padding: 1rem 1.5rem 

ul.navigation
  li 
    float: left
    margin-right: 2.5rem
    color: -color('neutral', 'light')
    list-style-type: none

    &.active 
      color: -color('light')

    &:hover
      color: -color('light', 'x-light')
    
    a
      color: inherit
      text-decoration: none
      &:hover
      &:visited
      &:active
        color: @color
