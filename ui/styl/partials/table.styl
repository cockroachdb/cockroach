@require '../modules/*'

$stats-table-cell--border = 1px solid $secondary-gray-8

$stats-table-th--fg = $secondary-gray-6
$stats-table-td--fg = $main-navy

$stats-table-th--bg     = white
$stats-table-tr--bg     = white
$stats-table-tr--bg-alt = $secondary-gray-7

// ---- Data table ----
.stats-table, .sql-table, .event-table, .logs-table
  overflow scroll
  table
    border-collapse collapse
    margin-bottom 2rem

  thead
    tr
      border $stats-table-cell--border
      border-left none
      height 30px
      vertical-align top
      &.header-section
        height 30px
      &.column
        border-bottom none
      &.rollup
        border-top none
      &:last-child
        th
          padding-bottom 15px

  tbody tr
      height 45px
      background-color $stats-table-tr--bg
      &:nth-child(odd)
        background-color $stats-table-tr--bg-alt
      &:last-child
        border-bottom $stats-table-cell--border
      &:first-child
        border-top $stats-table-cell--border

  th
    color $stats-table-th--fg
    font-family Lato-Bold
    font-size 13px
    letter-spacing .27px
    font-weight normal
    text-align left
    background-color $stats-table-th--bg
    white-space nowrap
    &.column
      border-bottom none

    &.header-section
      font-size 12px
      font-family Lato-Medium
      letter-spacing 2px
      text-transform uppercase
      color $secondary-light-gray
      padding 10px 20px

    &.rollup
      border-top none
      font-family Lato-Medium
      color $main-navy
      font-size 19px
      padding-top 0
      .units
        font-size 15px

    &.sorted
      &:after
        content "▼"
      &.ascending
        &:after
          content "▲"

  td
    color $stats-table-td--fg
    font-family Lato-Light
    font-size 16px
    letter-spacing .33px
    white-space nowrap
    .units
      font-size 12px

  td
  th
    padding 10px 20px 0
    border-right $stats-table-cell--border
    .missing
      color $secondary-red
    .stale
      color $secondary-gold
    .healthy
      color $main-green

table
  a
    color $main-green
    text-decoration none

.sql-table
  thead
    border-left $stats-table-cell--border
  tr
    border-left $stats-table-cell--border

.stat
  .title
    display inline-block
    width 20rem


.event-table
  table
    width 100%
    tbody
      td
        border 0
        font-size 16px
        font-family Lato-Medium
        &:first-child
          width 50px
        &:nth-child(2)
          width 75px

      tr
        height 60px
        width 100%

.logs-table
  padding 0
