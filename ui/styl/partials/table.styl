@require '../modules/*'

$stats-table-cell--border = 1px solid $secondary-gray-8

$stats-table-th--fg = $secondary-gray-6
$stats-table-td--fg = $main-navy

$stats-table-th--bg     = white
$stats-table-tr--bg     = white
$stats-table-tr--bg-alt = $secondary-gray-7

// ---- Data table ---- 
.stats-table, .sql-table
  color -color('dark')
  table
    border-collapse collapse
    margin-bottom 2rem

  thead
    border $stats-table-cell--border
    border-left none

    tr
      height 71px
      vertical-align top

  tbody tr
      height 45px
      background-color $stats-table-tr--bg
      &:nth-child(odd)
        background-color $stats-table-tr--bg-alt
      &:last-child
        border-bottom $stats-table-cell--border

  th
    color $stats-table-th--fg
    font-family Lato-Bold
    font-size 13px
    letter-spacing .27px
    font-weight normal
    text-align left
    background-color $stats-table-th--bg
    &.sorted
      &:after
        content "▼"
      &.ascending
        &:after
          content "▲"

  td
    color $stats-table-td--fg
    font-family Lato-Medium
    font-size 16px
    letter-spacing .33px

  td
  th
    padding 15px 20px
    border-right $stats-table-cell--border

.sql-table
  thead
    border-left $stats-table-cell--border
  tr
    border-left $stats-table-cell--border

.stat
  .title
    display inline-block
    width 20rem
