@require '../modules/*'

$stats-table--border-top  = 1px solid -color('neutral', 'x-dark')
$stats-table-tr--border   = 1px solid -color('neutral', 'x-light')

$stats-table-th--fg  = -color('light', 'light')

$stats-table-th--bg          = -color('neutral', 'light')
$stats-table-th--bg-alt      = -color('neutral')
$stats-table-th--bg-sorted   = -color('neutral', 'x-light')
$stats-table-td--bg          = -color('light', 'light')
$stats-table-td--bg-alt      = -color('light')
$stats-table-td--bg-sorted   = -color('light', 'x-light')

// ---- Data table ---- 
.stats-table
  color -color('dark')
  table
    border-collapse collapse
    border-top $stats-table--border-top
    margin-bottom 2rem
  tr
    height 4rem
    border-bottom $stats-table-tr--border
  th
    color $stats-table-th--fg
    font-weight normal
    alternating-background $stats-table-th--bg $stats-table-th--bg-alt
    &.sorted
      background-color $stats-table-th--bg-sorted
      &:after
        content "▼"
      &.ascending
        &:after
          content "▲"
          
  td
    alternating-background $stats-table-td--bg $stats-table-td--bg-alt
    &.sorted
      background-color $stats-table-td--bg-sorted

  td
  th
    padding-left 1rem
    padding-right 1rem

.stat
  .title
    display inline-block
    width 20rem
