+func getAutoStatsToStringFunc(
+	key string,
+) func(ctx context.Context, tableDesc *tabledesc.Mutable) (string, error) {
+	return func(ctx context.Context, tableDesc *tabledesc.Mutable) (string, error) {
+		if tableDesc.AutoStatsSettings == nil {
+			return "", nil
+		}
