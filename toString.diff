+// GetStorageParams iterates over all storage parameters and returns a map of
+// parameter names to their string values, excluding empty values.
+func GetStorageParams(
+	ctx context.Context, tableDesc *tabledesc.Mutable,
+) (map[string]string, error) {
+	result := make(map[string]string)
+	for key, param := range tableParams {
+		if param.toString != nil {
+			value, err := param.toString(ctx, tableDesc)
+			if err != nil {
+				return nil, err
+			}
+			if value != "" {
+				result[key] = value
+			}
+		}
+	}
+	return result, nil
